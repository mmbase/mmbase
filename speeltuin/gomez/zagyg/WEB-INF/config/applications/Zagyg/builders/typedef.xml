<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object" maintainer="mmbase.org" name="typedef" version="0">
  <!-- Builder configuration for typedef -->
  <!-- Status of the builder: active or inactive -->
  <status>active</status>
  <!-- Classname of the builder.
This is a optional tag, it names the classfile to use for this builder
Providing an alternate buidler class allows you to add or change support routines. -->
  <classfile>org.mmbase.module.corebuilders.ObjectTypes</classfile>
  <!-- Names defines the different names used in user visible parts
Singular names are used when talking about one object (Url,Person) and plurar when talking about multiple objects (Urls, people).
Names can be provided in various languages. -->
  <names>
    <!-- singular names per language as defined by ISO 639 -->
    <singular xml:lang="nl">Objekttype</singular>
    <singular xml:lang="eo">Objekttipo</singular>
    <singular xml:lang="en">Object Type</singular>
    <singular xml:lang="it">Oggetto Tipo</singular>
    <singular xml:lang="fy">Object Tiepe</singular>
    <!-- plural names per language as defined by ISO 639 -->
    <plural xml:lang="nl">Objekttypen</plural>
    <plural xml:lang="eo">Objekttipoj</plural>
    <plural xml:lang="en">Object Types</plural>
    <plural xml:lang="it">Oggetto Tipi</plural>
    <plural xml:lang="fy">Object Tiepes</plural>
  </names>
  <!-- Descriptions are ment to provide some additional clarification to an object.
They are useful for GUI editors to provide helptexts.
Descriptions can be provided in various languages. -->
  <descriptions>
    <description xml:lang="nl">Definitie van objekt types</description>
    <description xml:lang="eo">Difinoj de objekttipoj</description>
    <description xml:lang="en">Defines object types</description>
    <description xml:lang="it">Definisci i tipi per gli oggetti</description>
    <description xml:lang="fy">Definitsie fan de object tiepes</description>
  </descriptions>
  <!-- decsription per language as defined by ISO 639 -->
  <!-- You can define properties to be used by the classfile.
Properties are entered using name/value pairs.
The actual properties available differ by class. -->
  <properties/>
  <!-- defines the different fields in this object
Depending on the database, the order of the fields may be important.
Once defined, it is a good practice to keep the same order.
This counts especially when you convert buidler configurations using builder inheritance. -->
  <fieldlist>
    <!-- field definition for field 4 : name -->
    <field>
      <!-- field descriptions (help texts) -->
      <descriptions>
        <description xml:lang="nl">Naam van het objecttype</description>
        <description xml:lang="en">Name of the object type</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Naam</guiname>
        <guiname xml:lang="eo">Nomo</guiname>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="it">Nome</guiname>
        <guiname xml:lang="fy">Namme</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>1</input>
          <!-- position in the list area of the editor -->
          <list>1</list>
          <!-- position in the search area of the editor -->
          <search>1</search>
        </positions>
      </editor>
      <!-- database related -->
      <db>
        <!-- name of the field in the database -->
        <name>name</name>
        <!-- MMBase datatype and demands on it -->
        <type key="true" notnull="false" size="32" state="persistent">STRING</type>
      </db>
    </field>
    <!-- field definition for field 5 : description -->
    <field>
      <!-- field descriptions (help texts) -->
      <descriptions>
        <description xml:lang="nl">Omschrijving van het objecttype</description>
        <description xml:lang="en">Description of the object type</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Omschrijving</guiname>
        <guiname xml:lang="eo">Priskribo</guiname>
        <guiname xml:lang="en">Description</guiname>
        <guiname xml:lang="it">Descrizione</guiname>
        <guiname xml:lang="fy">Beskrowing</guiname>
        <guitype>field</guitype>
      </gui>
      <!-- editor related -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>2</input>
          <!-- position in the list area of the editor -->
          <list>2</list>
          <!-- position in the search area of the editor -->
          <search>2</search>
        </positions>
      </editor>
      <!-- database related -->
      <db>
        <!-- name of the field in the database -->
        <name>description</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="false" size="255" state="persistent">STRING</type>
      </db>
    </field>
    <!-- field definition for field 6 : config -->
    <field>
      <!-- field descriptions (help texts) -->
      <descriptions>
        <description xml:lang="nl">Configuratie van het objecttype, opgeslagen als xml</description>
        <description xml:lang="en">Configuration of the object type, stored as xml</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Configuratie</guiname>
        <guiname xml:lang="eo">Agordo</guiname>
        <guiname xml:lang="en">Configuration</guiname>
        <guiname xml:lang="it">Configurazione</guiname>
        <guiname xml:lang="fy">Ynstellings</guiname>
        <guitype>field</guitype>
      </gui>
      <!-- editor related -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>3</input>
          <!-- position in the list area of the editor -->
          <list>-1</list>
          <!-- position in the search area of the editor -->
          <search>-1</search>
        </positions>
      </editor>
      <!-- database related -->
      <db>
        <!-- name of the field in the database -->
        <name>config</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="true" state="virtual">XML</type>
      </db>
    </field>
  </fieldlist>
</builder>
