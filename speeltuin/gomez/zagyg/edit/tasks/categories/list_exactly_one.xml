<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase//DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="categories" minoccurs="1" maxocurs="1">
  <title xml:lang="en">Category</title>
  <title xml:lang="nl">Categorie</title>

  <item>
    <field ftype="data" name="title" />
  </item>

  <command name="search" nodepath="categories" fields="title" orderby="title" age="-1">
    <prompt xml:lang="en">Search a category</prompt>
    <prompt xml:lang="nl">Zoek een categorie</prompt>
    <search-filter>
      <name xml:lang="en">Contains</name>
      <name xml:lang="nl">Bevat</name>
      <search-fields>title|body</search-fields>
    </search-filter>
  </command>

  <action type="add">
    <relation role="related" />
  </action>
</list>

