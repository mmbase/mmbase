    <nagEmailAddress>maven@keesj.dds.nl</nagEmailAddress>
    <sourceDirectory>src</sourceDirectory>
    <unitTestSourceDirectory>tests</unitTestSourceDirectory>
    <sourceModifications>
      <sourceModification>
        <className>com.informix.jdbc.IfxCblob</className>
