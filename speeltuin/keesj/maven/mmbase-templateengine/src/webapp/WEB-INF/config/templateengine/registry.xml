<?xml version="1.0"?>
<registry>
  <layoutManager class="org.mmbase.applications.templateengine.jsp.JSPLayoutManager" name="default" description="default list layout">
    <property name="jspPage">/te/layout/default.jsp</property>
  </layoutManager>
  <layoutManager class="org.mmbase.applications.templateengine.jsp.JSPLayoutManager" name="horizontal" description="horizontal  layout">
    <property name="jspPage">/te/layout/horizontal.jsp</property>
  </layoutManager>
  <layoutManager class="org.mmbase.applications.templateengine.jsp.JSPLayoutManager" name="vertical" description="default list layout">
    <property name="jspPage">/te/layout/vertical.jsp</property>
  </layoutManager>
  <!-- containers -->
  <container class="org.mmbase.applications.templateengine.jsp.JSPContainer" path="/te/container/default.jsp" name="horizontal" description="a container with a horizontal layout" layout="horizontal"/>
  <container class="org.mmbase.applications.templateengine.jsp.JSPContainer" path="/te/container/default.jsp" name="vertical" description="a container with a vertical layout" layout="vertical"/>

  <!-- tempates -->
  <template class="org.mmbase.applications.templateengine.ProgrammaSiteTemplate" path="/te/template/default.jsp" name="programmasites" description="template the can hande old style .shtml files" layout="default"/>
  <template class="org.mmbase.applications.templateengine.jsp.JSPTemplate" path="/te/template/default.jsp" name="default" description="default tempate using the default layout" layout="default"/>
  <template class="org.mmbase.applications.templateengine.jsp.JSPTemplate" path="/te/template/nocache.jsp" name="nocache" description="template with headers so it wil not get cached" layout="default"/>

  <!-- generic components -->
  <component class="org.mmbase.applications.templateengine.jsp.JSPComponent" name="navigation" path="/te/component/navigation.jsp" description="The VPRO programma sites navigation"/>
  <component class="org.mmbase.applications.templateengine.jsp.JSPComponent" name="breadcrum" path="/te/component/breadcrum.jsp" description="broodkuirmel pad"/>
  <component class="org.mmbase.applications.templateengine.jsp.JSPComponent" path="/te/component/generic/related_images.jsp" name="related_images" description="Display images related to the current nav via posrel"/>
</registry>
