<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//MMBase//DTD module config 1.0//EN" "http://www.mmbase.org/dtd/module_1_0.dtd">
<module maintainer="mmbase.org" version="0">
  <status>active</status>

  <classfile>org.mmbase.applications.crontab.modules.CrontabModule</classfile>
  <properties>  
    <!-- 
    Properties of cronjobs.
    Every property defines one cronjob, and should have a unique name.
    The value of the property has 2 -4 fields (separated by a tab, | or newline),
    first field: when to run (see  http://www.hmug.org/man/5/crontab.html)
    second field: class name of Runnable (or CronJob implementation if you need init and stop too)
    third field: (optional) a description of the job
    fourth field: (optional) a configuration string (in CronJobs aquirable by cronEntry.getConfiguration())
    fifth field: (optional) the type of the job. 'mustbeone' (defaul) 'short' or 'canbemore'.
    -->
    <property name="testjob">*/1 5-23 * * *|org.mmbase.applications.crontab.TestCronJob||</property>

    <!-- 
      Another example: mmbase statistics.
    -->  
    <property name="memorystats">* * * * *|org.mmbase.applications.crontab.MMBaseStatsJob||Memory|short</property>
    <property name="nodesstats">* * * * *|org.mmbase.applications.crontab.MMBaseStatsJob||cache.Nodes|short</property>
    <property name="tagstats">* * * * *|org.mmbase.applications.crontab.MMBaseStatsJob||cache.TagAttributeCache|short</property>
    <property name="multilevelstats">* * * * *|org.mmbase.applications.crontab.MMBaseStatsJob||cache.MultilevelCache|short</property>

  </properties>
 
</module>
