<?xml version="1.0" encoding="UTF-8"?>
<taglib author="MMBase community">
  <description>MMBase Statistics Taglib</description>
  <display-name>MMBase statistics Taglib</display-name>
  <tlib-version>2.0</tlib-version>
  <shortname>mmstats</shortname>

  <function>
    <description>
      Sums all the values of a certain field in a node list.
    </description>
    <name>average</name>
    <function-class>org.mmbase.statistics.Functions</function-class>
    <function-signature>org.mmbase.util.math.Measurement average(java.util.Collection, java.lang.String)</function-signature>
  </function>
  <function>
    <name>times</name>
    <function-class>org.mmbase.statistics.Functions</function-class>
    <function-signature>org.mmbase.util.math.Measurement times(org.mmbase.util.math.Measurement, double)</function-signature>
  </function>
  <function>
    <name>sum</name>
    <function-class>org.mmbase.statistics.Functions</function-class>
    <function-signature>double sum(java.util.Collection, java.lang.String)</function-signature>
  </function>
  <function>
    <name>measurement</name>
    <function-class>org.mmbase.statistics.Functions</function-class>
    <function-signature>org.mmbase.util.math.Measurement measure()</function-signature>
  </function>

  <tag-file>
    <name>enter</name>
    <path>/META-INF/tags/mm/statistics/enter.tagx</path>
  </tag-file>

</taglib>
