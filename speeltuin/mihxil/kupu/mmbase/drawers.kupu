<?xml version="1.0" ?>
<kupu:feature
    name="drawers"
    implementation="mmbase"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:kupu="http://kupu.oscom.org/namespaces/dist"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    i18n:domain="kupu"
    >
  <kupu:id>$Id: drawers.kupu,v 1.1 2005-04-19 21:04:45 michiel Exp $</kupu:id>


  <kupu:part name="styles">
    <link href="${kupu_common}/kupudrawerstyles.css" rel="stylesheet" type="text/css" />
  </kupu:part>
  <kupu:part name="jsincludes">
    <script type="text/javascript" src="${kupu_common}/kupudrawers.js"> </script>
  </kupu:part>


  <kupu:part name="buttons">
    <span class="kupu-tb-buttongroup">
      <button type="button" class="kupu-image" id="kupu-imagelibdrawer-button"       title="image" i18n:attributes="title">&#160;</button>
      <button type="button" class="kupu-inthyperlink" id="kupu-linklibdrawer-button" title="link"  i18n:attributes="title">&#160;</button>
    </span>
  </kupu:part>

  <kupu:part name="xmlconfig">
    <image_xsl_uri>drawers/drawer.xsl</image_xsl_uri>
    <link_xsl_uri>drawers/drawer.xsl</link_xsl_uri>
    <image_libraries_uri>drawers/image.library.jsp</image_libraries_uri>
    <link_libraries_uri>drawers/link.library.jsp</link_libraries_uri>
    <search_images_uri>drawers/image.library.jsp</search_images_uri>
    <search_links_uri> drawers/link.library.jsp</search_links_uri>
  </kupu:part>


  <kupu:part name="linkdrawer">
    <div id="kupu-linkdrawer" class="kupu-drawer kupu-linkdrawer">
      <h1 i18n:translate="">External Link</h1>
      <div id="kupu-linkdrawer-addlink" class="kupu-panels kupu-linkdrawer-addlink">
        <table>
        <tr><td><div class="kupu-toolbox-label">
          <!-- Link to items matching the keyword  -->
          <span i18n:translate="">
            Link the highlighted text to this URL:
          </span>
        </div>

        <input class="kupu-toolbox-st kupu-linkdrawer-input" type="text" />
        </td><td class="kupu-preview-button">
        <button type="button" onclick="drawertool.current_drawer.preview()"
                i18n:translate="">Preview</button>
        </td></tr>
        <tr><td colspan="2" align="center">
        <iframe frameborder="1" scrolling="auto" width="440" height="198"
                class="kupu-linkdrawer-preview" src="kupublank.html"><jsp:text>
                </jsp:text>
        </iframe>
        </td></tr>
        </table>
        <div class="kupu-dialogbuttons">
          <button type="button" onclick="drawertool.current_drawer.save()"
                    i18n:translate="">Ok</button>
          <button type="button" onclick="drawertool.closeDrawer()"
                    i18n:translate="">Cancel</button>
        </div>

      </div>
    </div>
  </kupu:part>


</kupu:feature>
