<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="contentelement" minoccurs="0" maxoccurs="*" 
orderby="field[@name='pos']" ordertype="number" searchdir="destination">
	<title xml:lang="nl">Content element</title>
	<title xml:lang="en">Content element</title>

	<item>
		<field name="title">
			<prompt xml:lang="en">Title</prompt>
			<prompt xml:lang="nl">Titel</prompt>
		</field>
	</item>

	<command name="contentselector" ></command>

	<action type="create">
		<relation destinationtype="contentelement" role="posrel" createdir="destination">
			<field name="pos">{sum(//relation[@role='posrel' and @destination='contentelement' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
			<object type="contentelement" />
		</relation>
	</action>
</list>