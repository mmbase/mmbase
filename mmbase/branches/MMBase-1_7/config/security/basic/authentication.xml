<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE authentication PUBLIC "-//MMBase//DTD authentication config 1.0//EN" "http://www.mmbase.org/dtd/securitybasicauth_1_0.dtd">
<authentication>

	<loginmodule name="anonymous" class="org.mmbase.security.implementation.basic.AnonymousLoginModule" rank="anonymous"/>

	<loginmodule name="name/password" class="org.mmbase.security.implementation.basic.FileLoginModule" rank="basic user">
		<property
 name="file">../../accounts.properties</property>
	</loginmodule>

	<loginmodule name="admin" class="org.mmbase.security.implementation.basic.AdminLoginModule" rank="administrator">
		<property
 name="key">admin2k</property>
	</loginmodule>

</authentication>
