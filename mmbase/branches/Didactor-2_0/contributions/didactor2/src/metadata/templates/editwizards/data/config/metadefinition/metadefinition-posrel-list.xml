<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="metadefinition" role="posrel" ordertype="number" orderby="field[@name='pos']"
   minoccurs="0" maxoccurs="*">
  <title>Bijbehorende Metadata Definitie</title>
  <item>
    <field name="name" ftype="data">
      <prompt>Naam</prompt>
    </field>
    <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
    <field name="type" ftype="data">
     <prompt>Type</prompt>
    </field>
    <field name="maxvalues" ftype="data">
      <prompt>Maxvalues</prompt>
    </field>
    <field name="handler" ftype="data">
      <prompt>Handler</prompt>
    </field>
    <field ftype="startwizard" wizardname="config/metadefinition/metadefinition" />
  </item>

  <action type="create">
    <relation destinationtype="metadefinition" role="posrel">
     </relation>
  </action>

  <command name="startwizard" inline="true" wizardname="config/metadefinition/metadefinition-noorigin" objectnumber="new" >
  </command>

  <command name="search" nodepath="metadefinition" fields="name,type,handler" age="-1" orderby="number" directions="down" >
    <prompt>Zoeken naar metadata definities</prompt>
    <search-filter>
      <name>Naam bevat</name>
      <search-fields>name</search-fields>
    </search-filter>
    <search-filter>
      <name>Type bevat</name>
      <search-fields>type</search-fields>
    </search-filter>
    <search-filter>
      <name>Handler</name>
      <search-fields>handler</search-fields>
    </search-filter>
  </command>
</list>
