<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title xml:lang="nl">Licentie Editor</title>
    <title xml:lang="en">License Editor</title>

    <action type="load">
        <relation destination="licensetexts" role="related" />
    </action>

    <lists>
    </lists>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title xml:lang="nl">Licentie invoeren</title>
        <title xml:lang="en">Enter license</title>
        <field name="name" ftype="data">
            <prompt xml:lang="nl">Opleiding naam</prompt>
            <prompt xml:lang="en">Education name</prompt>
        </field>
        <list destination="licensetexts" role="related" extends="list/licensetexts.xml" />
    </form-schema>


</wizard-schema>
