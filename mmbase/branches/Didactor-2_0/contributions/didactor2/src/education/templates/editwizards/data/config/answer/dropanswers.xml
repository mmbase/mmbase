<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title xml:lang="nl">Drag en drop combinatie</title>
    <title xml:lang="en">Drag and drop combination</title>

    <action type="create">
       <object type="dropanswers">
        </object> 
    </action>
    
    <action type="delete" />
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title xml:lang="nl">Nieuw drag en drop combinatie invoeren</title>
        <title xml:lang="en">Enter new drag and drop combination</title>
        <field name="dragnumber" >
            <prompt xml:lang="nl">Sleepafbeelding</prompt>
            <prompt xml:lang="en">Drag image</prompt>
        </field>
        <field name="dropnumber">
            <prompt xml:lang="nl">Doelafbeelding</prompt>
            <prompt xml:lang="en">Target image</prompt>
        </field>
    </form-schema>
</wizard-schema>

