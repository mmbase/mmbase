<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="pools"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">

	<title>Link- / bronnen-set</title>
	<item>
		<title>Link- / bronnen-set</title>
		<description></description>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
		<field name="name" ftype="data">
			<prompt>Naam</prompt>
		</field>
		<field name="description" ftype="data">
			 <prompt>Omschrijving</prompt>
		</field>
		<field ftype="startwizard" wizardname="wizards/pools/pools" inline="true" >
			<prompt>Bekijk links of bronnen</prompt>
		</field>
		<list include="wizards/page/add_page_posrel_pools.xml" />
	 </item>
		
	<action type="create">
		<relation role="posrel">
			<object type="pools" />
		</relation>
	</action>
	
	
	<command name="search" nodepath="pools" fields="name,description" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Naam bevat</name>
			<search-fields>name</search-fields>
		</search-filter>
		<search-filter>
			<name>Omschrijving bevat</name>
			<search-fields>description</search-fields>
		</search-filter>
	</command>
      
</list>	

