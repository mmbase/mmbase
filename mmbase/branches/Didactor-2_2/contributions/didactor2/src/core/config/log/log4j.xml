<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
  <!ENTITY mmlevel "org.mmbase.util.logging.log4j.Log4jPriority" >
  <!ENTITY logdir   "${mmbase.logdir}">
]>

<log4j:configuration>
  <!-- Primary MMBase logfile -->
  <appender name="logfile" class="org.apache.log4j.DailyRollingFileAppender" >
    <param name="File"   value="&logdir;/mmbase.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p %c{4} %M.%L %x - %m%n" />
    </layout>
  </appender>

  <!-- Logfile for SQL logging (be careful with this, it will impact performance!) -->
  <appender name="sqllog" class="org.apache.log4j.DailyRollingFileAppender" >
    <param name="File"   value="&logdir;/sql.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p %c{4} %M.%L %x - %m%n" />
     </layout>
  </appender>

  <logger name="org.mmbase.security" >
    <level class="&mmlevel;" value ="warn" />
  </logger>

  <!-- make sure that <mm:log> messages from webpages are visible -->
  <logger name="org.mmbase.PAGE.LOGTAG" >
    <level class="&mmlevel;" value ="service" />
  </logger>

  <logger name="org.mmbase.PAGE" >
    <level class="&mmlevel;" value ="warn" />
  </logger>

  <logger name="org.mmbase.util.XMLErrorHandler" >
    <level class="&mmlevel;" value ="fatal" />
  </logger>

  <logger name="mmbase.applications.editwizard.Utils" >
    <level class="&mmlevel;" value ="error" />
  </logger>

  <!-- Uncomment this to log all sql commands to file:
  <logger name="org.mmbase.module.database.MultiConnection" additivity="false">
    <level class="&mmlevel;" value ="debug" />   
    <appender-ref ref="sqllog" />
  </logger>
  -->

  <logger name="STDERR">
    <level class="&mmlevel;" value ="warn" />   
  </logger>
    
  <logger name="STDOUT">
    <level class="&mmlevel;" value ="warn" />   
  </logger>
    
  <root>
    <level class="&mmlevel;" value ="info" />
    <appender-ref ref="logfile" />
  </root>

</log4j:configuration>
