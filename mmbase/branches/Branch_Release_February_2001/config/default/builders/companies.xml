<builder>

<!-- <status>
	what is the status of this builder options : active or inactive
-->
<status>inactive</status>

<!-- <classfile>
	This is a optional tag, it names the classfile that allows you to add
	support routines or changes them on a per builder base. For example
	images has routines to image support etc etc.

	possible values : Dummy or disabled tag makes mmbase use the default setup

		short name : Urls will start class : org.mmbase.module.builders.Urls.class

		long name : nl.vpro.mmbase.module.builders.Urls will start that class
-->
<classfile>Dummy</classfile>

<searchage>14</searchage>

<!-- <names>
	names defines the different names used in user visible parts, singular for
	for talking about 1 object (Url,Person) and plurar for talking about multiple
	<Urls, people).
>-->
<names>
	<!-- singles per language  as defined by RFC xxx -->
	<singular xml:lang="us">Company</singular>
	<singular xml:lang="en">Company</singular>
	<singular xml:lang="nl">Bedrijf</singular>
	<!-- multiple per language  as defined by RFC xxx -->
	<plural xml:lang="us">Companies</plural>
	<plural xml:lang="en">Companies</plural>
	<plural xml:lang="nl">Bedrijven</plural>
</names>

<!-- <descriptions>
	small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language  as defined by RFC xxx -->
	<description xml:lang="us">Companies with some basic info, symbol and a small bio</description>
	<description xml:lang="en">Companies with some basic info, symbol and a small bio</description>
	<description xml:lang="nl">Bederijven met wat basis info, symbool en een kleine bio</description>
</descriptions>

<!-- <fieldlist>
	 defines the different fields in this object, be carefull the order is important
	once defined keep them in the same order.
	If you use number and owner (the 2 default fields, please check the docs for this)
-->
<fieldlist>
	<!-- POS 1 : <field> 'number' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Object</name>
			<name xml:lang="en">Object</name>
			<name xml:lang="nl">Object</name>
			<type>integer</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>10</list>
				<!-- position in search area of the editor -->
				<search>10</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>number</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true">INTEGER</type>
		</db>
	</field>

	<!-- POS 2 : <field> 'owner' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Owner</name>
			<name xml:lang="en">Owner</name>
			<name xml:lang="us">Eigenaar</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>11</list>
				<!-- position in search area of the editor -->
				<search>11</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>owner</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="12" notnull="true">VARCHAR</type>
		</db>
	</field>

	<!-- POS 3 : <field> 'name'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Name</name>
			<name xml:lang="en">Name</name>
			<name xml:lang="nl">Naam</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>1</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>name</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="255" notnull="true">VARCHAR</type>
		</db>
	</field>

	<!-- POS 4 : <field> 'symbol'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Symbol</name>
			<name xml:lang="en">Symbol</name>
			<name xml:lang="nl">Symbool</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>2</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>symbol</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="16" notnull="true">VARCHAR</type>
		</db>
	</field>

	<!-- POS 5 : <field> 'intro'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Intro</name>
			<name xml:lang="en">Intro</name>
			<name xml:lang="nl">Intro</name>
			<type>field</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>3</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>2</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>intro</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="2048" notnull="false">VARCHAR</type>
		</db>
	</field>

	<!-- POS 6 : <field> 'body'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Bio</name>
			<type>field</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>4</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>2</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>body</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="64000" notnull="false">VARCHAR</type>
		</db>
	</field>

</fieldlist>

</builder>
