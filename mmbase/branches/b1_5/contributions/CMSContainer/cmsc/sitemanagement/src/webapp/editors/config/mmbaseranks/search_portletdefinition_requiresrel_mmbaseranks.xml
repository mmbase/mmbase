<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="requiresrel" destination="mmbaseranks" minoccurs="0" maxoccurs="1"
	orderby="field[@name='rank']" ordertype="number">
	<title xml:lang="nl">Rank</title>
	<title xml:lang="en">Rank</title>
	<title xml:lang="zh">等级</title>
	<item>
		<field ftype="data" name="name">
			<prompt xml:lang="en">Name</prompt>
			<prompt xml:lang="nl">Naam</prompt>
			<prompt xml:lang="zh">名称</prompt>
		</field>
	</item>
	
	<command name="search" nodepath="mmbaseranks" age="-1" fields="name">
		<prompt xml:lang="en">Search rank</prompt>
		<prompt xml:lang="nl">Zoek rank</prompt>
		<prompt xml:lang="zh">查找等级</prompt>
		<search-filter>
			<name xml:lang="en">Name contains</name>
			<name xml:lang="nl">Naam bevat</name>
			<name xml:lang="zh">名称包含</name>
			<search-fields>[name]</search-fields>
		</search-filter>
	</command>

	<action type="create">
		<relation destinationtype="mmbaseranks" role="requiresrel"></relation>
	</action>
</list>