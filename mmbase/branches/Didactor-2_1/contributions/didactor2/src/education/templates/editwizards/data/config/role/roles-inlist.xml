<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list fdatapath="object/relation[@role='related']/object[@type='roles']" minoccurs="0" maxoccurs="*" hidecommand="delete-item">
  <title xml:lang="nl">Bijbehorende Rollen</title>
  <title xml:lang="en">Related roles</title>
  <item>
    <field fdatapath="field[@name='name']" ftype="data">
      <prompt xml:lang="nl">Rol naam</prompt>
      <prompt xml:lang="en">Role name</prompt>
    </field>
  </item>

  <action type="load">
    <relation destinationtype="roles" role="related">
      <object type="roles"/>
    </relation>
  </action>

</list>
