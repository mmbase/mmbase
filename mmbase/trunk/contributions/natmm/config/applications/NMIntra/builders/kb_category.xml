<?xml version="1.0"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<!-- kb_category -->
<builder version="1" name="kb_category" maintainer="ernst.bunders" extends="kb_displayable">
    <classfile>Dummy</classfile>
    <searchage>1000</searchage>
    <names>
        <singular xml:lang="nl">kbase categorie</singular>
        <singular xml:lang="en">kbase category</singular>
        <plural xml:lang="nl">kbase categorien</plural>
        <plural xml:lang="en">kbase categories</plural>
    </names>
    <descriptions>
        <description xml:lang="nl">een categorie waarbinnen vragen en categorien kunnen worden gegroepeerd</description>
        <description xml:lang="en">a category in which categories and questions can be grouped</description>
    </descriptions>
    <properties>
        <property name="max-nodes-from-query">1000</property>
    </properties>
    <fieldlist>
        <field>
            <descriptions/>
            <gui>
                <guiname xml:lang="nl">naam</guiname>
                <guiname xml:lang="en">name</guiname>
                <guitype>string</guitype>
            </gui>
            <editor>
                <positions>
                    <input>5</input>
                    <list>5</list>
                    <search>5</search>
                </positions>
            </editor>
            <db>
                <name>name</name>
                <type size="255" key="false" state="persistent" notnull="false">STRING</type>
            </db>
        </field>
        <field>
            <descriptions/>
            <gui>
                <guiname xml:lang="nl">omschrijving</guiname>
                <guiname xml:lang="en">description</guiname>
                <guitype>string</guitype>
            </gui>
            <editor>
                <positions>
                    <input>6</input>
                    <list>6</list>
                    <search>6</search>
                </positions>
            </editor>
            <db>
                <name>description</name>
                <type size="1000" key="false" state="persistent" notnull="false">STRING</type>
            </db>
        </field>
    </fieldlist>
</builder>
