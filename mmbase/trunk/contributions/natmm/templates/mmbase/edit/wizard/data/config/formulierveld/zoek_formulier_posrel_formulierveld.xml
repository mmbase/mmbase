<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="formulierveld" minoccurs="1" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>vraag</title>
	<item>
	   <field name="label" ftype="data"><prompt>label</prompt></field>
      <field name="label_fra" ftype="data"><prompt>zichtbaar op site</prompt></field>
      <field name="label_de" ftype="enum">
         <prompt>gebruikt als afz.</prompt>
         <optionlist select="ja_nee"></optionlist>
      </field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field name="type" ftype="enum" dttype="enum" dtrequired="true">
         <prompt>type</prompt>
         <optionlist select="question_type"></optionlist>
      </field>
      <field name="verplicht" ftype="enum" dttype="enum" dtrequired="true">
         <prompt>verplicht</prompt>
         <optionlist select="ja_nee"></optionlist>
      </field>
	   
		<field ftype="startwizard" wizardname="config/formulierveld/formulierveld" />
	</item>

	<command name="search" nodepath="formulierveld" age="-1" fields="label" orderby="label">
		<prompt>zoek formulierveld</prompt>
      <search-filter>
         <name>label bevat</name>
         <search-fields>[label]</search-fields>
      </search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/formulierveld/formulierveld" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="formulierveld" role="posrel">
	      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

