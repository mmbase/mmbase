<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:c="http://java.sun.com/jsp/jstl/core" 
      xmlns:jsp="http://java.sun.com/JSP/Page" 
      xmlns:mm-cal="http://www.mmbase.org/tags/mm/calendar"       
      xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0">
  <!--
      This can be useful during development
      xmlns:mm-cal="urn:jsptagdir:/WEB-INF/tags/mm/calendar"     

  -->      
  <jsp:directive.page buffer="100kb" />
  <mm:import externid="language">client</mm:import>
  <mm:import externid="timezone"></mm:import>
  <mm:write request="language" referid="language" />
  <mm:write request="timezone" referid="timezone" />
  <mm:content type="application/xhtml+xml"
              language="$language" 
              timezone="$timezone"
              postprocessor="none" expires="0">
    <head>
       <link href="style.css" rel="stylesheet" title="Normaal" type="text/css" media="screen" />
    </head>
    <body>
      <mm:cloud method="asis">        
        <mm-cal:localeSelector />
        <mm:hasrank value="anonymous" inverse="true">
          <mm:link page="logout.jspx" referids="language,timezone">
            <a href="${_}">
              <mm:cloudinfo type="user" />
            </a>
          </mm:link>
        </mm:hasrank>
        <mm:hasrank value="anonymous">
          <mm:link page="login.jspx" referids="language,timezone">
            <a href="${_}">log in</a>
          </mm:link>
        </mm:hasrank>
        <div>
          <mm:link page="hours.jspx" referids="language,timezone">
            <a href="${_}">h</a>
          </mm:link>
        </div>
        
        <mm-cal:monthsOverview referids="language,timezone" dateFormat=":FULL" stop="true">
          <jsp:attribute name="item">
            <mm:include referids="day,dayend" page="item.jspx" />
          </jsp:attribute>
          <jsp:attribute name="newItem">
            <mm:link page="newItem.jspx" referids="noon@day,language,timezone">
              <a href="${_}">+</a>
            </mm:link>
          </jsp:attribute>
        </mm-cal:monthsOverview>
      </mm:cloud>
    </body>
  </mm:content>
</html>
  