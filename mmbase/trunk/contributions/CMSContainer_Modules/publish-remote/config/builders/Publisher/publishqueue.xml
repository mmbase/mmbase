                <positions>
                    <input>5</input>
                    <list>5</list>
                    <search>5</search>
                </positions>
            </editor>
            <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="4096"/>
            </datatype>
        </field>
