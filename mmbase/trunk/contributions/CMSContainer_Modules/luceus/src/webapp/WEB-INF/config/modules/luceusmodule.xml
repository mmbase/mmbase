<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "//MMBase - module//" "http://www.mmbase.org/dtd/module.dtd">
<module>
	<status>active</status>
	<classfile>com.finalist.cmsc.module.luceusmodule.LuceusModule</classfile>
	<properties>
		<!-- Use this property if you want to run Luceus on a different server 
		<property name="server-url">service:jmx:rmi:///jndi/rmi://localhost:9999/jmxrmi</property>
		-->
		
		<!-- name for repository implementation -->
		<property name="repository-name">cmsc</property>
		
		<!-- index secondary content
			<property name="index-attachments">true</property>
			<property name="index-images">false</property>
			<property name="index-urls">false</property>
		 -->

		<!-- index secondary content as metadata for primary content (articles/faq's etc)
			<property name="secondary-with-primary">false</property>
		 -->
		 
		<!-- index secondary content as primary content, attachments/urls etc can be found alone
			<property name="secondary-as-primary">true</property>
		 -->

		<!--  advanced settings
			<property name="update-processes">2</property>
			<property name="update-start">60</property>
			<property name="update-interval">120</property>
			<property name="update-queue-size">100</property>
		-->

	</properties>
</module>
