<?xml version="1.0" encoding="UTF-8"?>
<builder extends="object" maintainer="finalist.com" name="rating" version="1"
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">rating</singular>
        <singular xml:lang="en">rating</singular>
        <singular xml:lang="zh">评价</singular>
        <plural xml:lang="nl">ratings</plural>
        <plural xml:lang="en">ratings</plural>
        <plural xml:lang="zh">评价</plural>
    </names>
    <fieldlist>
        <field name="user">
            <gui>
                <guiname xml:lang="nl">Gebruiker</guiname>
                <guiname xml:lang="en">User</guiname>
                <guiname xml:lang="zh">用户</guiname>
            </gui>
            <editor>
                <positions>
                    <input>1</input>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="512"/>
            </datatype>
        </field>
        <field name="timestamp" state="system">
            <gui>
                <guiname xml:lang="nl">Timestamp</guiname>
                <guiname xml:lang="en">timestamp</guiname>
                <guiname xml:lang="zh">标记数</guiname>
            </gui>
            <editor>
                <positions>
                    <input>2</input>
                </positions>
            </editor>
            <datatype base="created" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="rating">
            <gui>
                <guiname xml:lang="nl">Rating</guiname>
                <guiname xml:lang="en">Rating</guiname>
                <guiname xml:lang="zh">评价</guiname>
            </gui>
            <editor>
                <positions>
                    <input>3</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
    </fieldlist>
</builder>
