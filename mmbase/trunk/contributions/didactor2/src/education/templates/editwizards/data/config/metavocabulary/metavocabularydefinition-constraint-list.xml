<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="metavocabulary" role="constraints">
  <title>Beperkt door metavocabulary</title>

  <item>
    <field name="value" ftype="data">
      <prompt>Waarde</prompt>
    </field>
    <field ftype="startwizard" wizardname="config/metavocabulary/metavocabularydefinition" />
    <field fdatapath="field[@name='type']" ftype="enum" >
            <prompt>Constraint type</prompt>
            <optionlist name="type">
                  <option id="1">Mandatory</option>
		      <option id="2">Limited</option>
		      <option id="3">Forbidden</option>
            </optionlist>
    </field>

    <field fdatapath="field[@name='minvalues']" ftype="line" dttype="int" 
               dtmin="1" dtmax="3" dtmaxlength="1" dtminlength="1" />
    <field fdatapath="field[@name='maxvalues']" ftype="line" dttype="int" 
               dtmin="1" dtmax="3" dtmaxlength="1" dtminlength="1" />

  </item>

  <action type="create">
    <relation destinationtype="metavocabulary" role="constraints">
      <object type="metavocabulary"></object>
    </relation>
  </action>

  <action type="add">
    <relation destinationtype="metavocabulary" role="constraints">
      <object type="metavocabulary"></object>
    </relation>
  </action>

  <action type="load">
    <relation destinationtype="metavocabulary" role="constraints">
       <object type="metavocabulary"></object>
    </relation>
  </action>

  <command name="startwizard" inline="true" wizardname="config/metavocabulary/metavocabularydefinition" objectnumber="new" />

  <command name="search" nodepath="metavocabulary" fields="value" age="-1" orderby="number" directions="down" >
    <prompt>Zoeken naar Waarden</prompt>
    <search-filter>
      <name>Waarde bevat</name>
      <search-fields>value</search-fields>
    </search-filter>
  </command>
    <!--
    This command is being misused; we will not allow teachers to add providers
    <command name="insert" />
    -->
</list>
