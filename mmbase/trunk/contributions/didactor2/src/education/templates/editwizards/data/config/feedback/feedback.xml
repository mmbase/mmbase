<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Feedback Editor</title>
    <action type="create">
      <object type="feedback">
      </object>
    </action>
    
    <action type="load">
        <relation destination="images" role="related" />
    </action>

    <action type="delete" />
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Feedback invoeren</title>
        <field name="name" ftype="line">
            <prompt>Naam</prompt>
            <description>Naam van de feedback</description>
        </field>
        <field name="text" ftype="html" dtminlength="0">
            <prompt>Tekst</prompt>
            <description>De feedback tekst</description>
        </field>
        <field name="minimalscore">
            <prompt>Minimale Score</prompt>
            <description>Minimale score waarvoor deze feedback getoond wordt</description>
        </field>
        <field name="maximalscore">
            <prompt>Maximale Score</prompt>
            <description>Maximale score waarvoor deze feedback getoond wordt</description>
        </field>

        <list role="related" extends="config/image/images.xml" />
    </form-schema>
</wizard-schema>
