<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Personen Editor</title>

    <action type="create">
        <object type="people"/>
    </action>

    <action type="load">
        <object type="people"/>
        <relation destinationtype="roles" role="related"/>
        <relation destinationtype="classes" role="classrel"/> 
        <relation destinationtype="workgroups" role="related"/> 
        <relation destinationtype="educations" role="classrel"/> 
    </action>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
      <title>Persoon invoeren</title>
        <field name="firstname" >
            <prompt>Voornaam</prompt>
        </field>
        <field name="initials" >
            <prompt>Initialen</prompt>
        </field>
        <field name="suffix" ftype="line">
            <prompt>Tussenvoegsel</prompt>
        </field>
        <field name="lastname" >
            <prompt>Achternaam</prompt>
        </field>
        <field name="address" >
            <prompt>Adres</prompt>
        </field>
        <field name="zipcode" >
            <prompt>Postcode</prompt>
        </field>
        <field name="city" >
            <prompt>Plaats</prompt>
        </field>
        <field name="country" ftype="line">
            <prompt>Land</prompt>
        </field>
        <field name="telephone" >
            <prompt>Telefoonnummer</prompt>
        </field>
        <field name="mobile" ftype="line">
            <prompt>Mobiel</prompt>
        </field>
        <field name="email" >
            <prompt>E-mail adres</prompt>
        </field>
        <field name="website" ftype="line">
            <prompt>Website</prompt>
        </field>
        <field name="dayofbirth" >
            <prompt>Geboortedatum</prompt>
        </field>
        <field name="username" >
            <prompt>Gebruikersnaam</prompt>
        </field>
        <field name="password" >
            <prompt>Wachtwoord</prompt>
        </field>
        <field name="remarks" ftype="line">
            <prompt>Opmerkingen</prompt>
        </field>
        <field name="description" ftype="text">
            <prompt>Omschrijving</prompt>
        </field>

        <list extends="config/role/roles-list.xml" />

        <list extends="config/workgroup/workgroups-list.xml" />
        <list extends="config/education/classes-classrelrelated.xml" />
        <list extends="config/education/educations-classrelrelated.xml" />

    </form-schema>
</wizard-schema>
