<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd"
[
   <!ENTITY extra_loads SYSTEM "extra_loads.xml">
   <!ENTITY extra_steps SYSTEM "extra_steps.xml">
   <!ENTITY extra_schemas SYSTEM "extra_schemas.xml">
   <!ENTITY extra_lists SYSTEM "extra_lists.xml">
]>
<wizard-schema id="empty">
    <title xml:lang="nl">Werkgroep Editor</title>
    <title xml:lang="en">Workgroup Editor</title>

    <action type="create">
      <object type="workgroups">
      </object>
    </action>
    
    <action type="load">
        <relation destination="people" role="related">
          <object type="people">
            <relation destination="roles" role="related">
              <object type="roles"/>
            </relation>
          </object>
        </relation>
        <relation destination="classes" role="related" />
        &extra_loads;
    </action>

    <action type="delete" />
     <lists>
        <optionlist include="config/option_list/workgrouptype.xml" />
    </lists>

   
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title xml:lang="nl">Werkgroep Invoeren</title>
        <title xml:lang="en">Enter workgroup</title>
        <field name="name" dtminlength="1">
            <prompt xml:lang="nl">Werkgroep naam</prompt>
            <prompt xml:lang="en">Workgroup name</prompt>
        </field>
 
      <field name="protected" ftype="enum">
         <prompt xml:lang="nl">Werkgroep type</prompt>
         <prompt xml:lang="en">Workgroup type</prompt>
         <optionlist select="workgrouptype" />
      </field>
        
      <list destination="people" role="related" extends="config/people/people-workgroup.xml" />
      <list destination="classes" extends="config/class/classes-related.xml" />
      &extra_lists;
    </form-schema>
</wizard-schema>
