<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="urls" minoccurs="0" maxoccurs="*" role="related">
    <title>Bijbehorende urls</title>

    <item>
      <field name="url" ftype="data">
          <prompt>URL</prompt>
      </field>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
        </field>
        <field wizardname="urls" ftype="startwizard" />
    </item>

    <command name="startwizard" inline="true" wizardname="urls" objectnumber="new" />

    <action type="create">
        <relation destination="urls" role="related"/>
    </action>

    <command name="search" nodepath="urls" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar URLS</prompt>
        <search-filter>
            <name>URL bevat</name>
            <search-fields>url</search-fields>
        </search-filter>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>
</list>
