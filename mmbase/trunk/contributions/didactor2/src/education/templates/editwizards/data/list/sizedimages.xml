<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']" role="sizerel" destination="images">

    <title>Bijbehorende Afbeeldingen</title>

    <item>
	<field name="title" ftype="data">
            <prompt>Titel</prompt>
        </field>
        <field ftype="data" name="description">
            <prompt>Omschrijving</prompt>
        </field>
        <field ftype="image" name="title">
            <prompt>Afbeelding</prompt>
"      </field>
       <field ftype="line" name="width" fdatapath="field[@name='width']">
            <prompt>Breedte</prompt>
        </field>
         <field ftype="line" name="height" fdatapath="field[@name='height']">
            <prompt>Hoogte</prompt>
        </field>
        <field wizardname="image" ftype="startwizard" />
    </item>

    <command name="startwizard" inline="true" wizardname="image" objectnumber="new" />

    <command name="search" nodepath="images" fields="title" age="7" orderby="number" directions="down" >
        <prompt>Zoeken naar afbeeldingen</prompt>
        <search-filter>
            <name>Titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
        <search-filter>
            <name>Omschrijving bevat</name>
            <search-fields>description</search-fields>
        </search-filter>
    </command>

    <action type="create">
        <relation role="sizerel" destinationtype="images">
              <field name="pos">{sum(//relation[@role='sizerel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>

</list>
