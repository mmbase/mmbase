<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">Online/Offline tijd Editor</title>
  <title xml:lang="en">Online/Offline time Editor</title>
  
  <action type="create">
    <object type="mmevents" />
  </action>
  
  <action type="load" />
  
  <action type="delete">
    <prompt xml:lang="nl">Weet u zeker dat u deze online/offline tijd wilt verwijderen?</prompt>
    <prompt xml:lang="en">Are you sure you want to delete this online/offline time?</prompt>
    <description xml:lang="nl">Klik hier om deze online/offline tijd te verwijderen</description>
    <description xml:lang="en">Click here to remove this online/offline time</description>
  </action>
  
  <form-schema id="step1">
    <title xml:lang="nl">Online/Offline tijd invoeren</title>
    <title xml:lang="en">Enter Online/Offline time</title>
    <field name="start" ftype="dateoffset" dttype="datetime">
      
      <prompt xml:lang="nl">Online vanaf</prompt>
      <prompt xml:lang="en">Online from</prompt>
      <postfix xml:lang="nl">na aanvang van de cursus.</postfix>
      <postfix xml:lang="en">after start of the class.</postfix>
    </field>
    <field name="stop" ftype="dateoffset" dttype="datetime">
      <prompt xml:lang="nl">Offline vanaf</prompt>
      <prompt xml:lang="en">Offline from</prompt>
      <postfix xml:lang="nl">na aanvang van de cursus.</postfix>
      <postfix xml:lang="en">after start of the class.</postfix>
    </field>
  </form-schema>
</wizard-schema>
