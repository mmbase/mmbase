<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Online/Offline tijd Editor</title>

    <action type="create">
        <object type="mmevents">
            <field name="start">0</field>
            <field name="stop">0</field>
        </object>
    </action>
    
    <action type="load">
    </action>

    <action type="delete">
      <prompt>Weet u zeker dat u deze online/offline tijd wilt verwijderen?</prompt>
      <description>Klik hier om deze online/offline tijd te verwijderen</description>
    </action>
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Online/Offline tijd invoeren</title>
        <field name="start" ftype="dateoffset" dttype="datetime">>
            <prompt>Online vanaf</prompt>
            <postfix>na aanvang van de cursus.</postfix>
        </field>
        <field name="stop" ftype="dateoffset" dttype="datetime">
            <postfix>na aanvang van de cursus.</postfix>
            <prompt>Offline vanaf</prompt>
        </field>
    </form-schema>
</wizard-schema>
