<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="htmlpages" maintainer="didactor.nl" version="2" extends="learnobjects">
   <status>active</status>
   <class>nl.didactor.builders.DidactorBuilder</class>
   <searchage>9999</searchage>
   <names>
     <singular xml:lang="nl">HTML Page</singular>
     <singular xml:lang="en">HTML Page</singular>
     <plural xml:lang="nl">HTML Pages</plural>
     <plural xml:lang="en">HTML Pages</plural>
   </names>

   <properties>
      <property name="max-nodes-from-query">99999</property>
   </properties>

   <fieldlist>
     <field>
       <gui>
         <guiname xml:lang="nl">Content</guiname>
         <guiname xml:lang="en">Content</guiname>
       </gui>
       <editor>
         <positions>
           <input>2</input>
           <list>-1</list>
           <search>2</search>
         </positions>
       </editor>
       <db>
         <name>content</name>
         <type state="persistent" size="102400" key="false" notnull="true">STRING</type>
       </db>
     </field>

     <field>
       <gui>
         <guiname xml:lang="nl">Path</guiname>
         <guiname xml:lang="en">Path</guiname>
       </gui>
       <editor>
         <positions>
           <input>3</input>
           <list>3</list>
           <search>3</search>
         </positions>
       </editor>
       <db>
         <name>path</name>
         <type state="persistent" size="102400" key="false" notnull="true">STRING</type>
       </db>
     </field>
   </fieldlist>
</builder>
