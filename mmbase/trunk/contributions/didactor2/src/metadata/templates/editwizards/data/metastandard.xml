<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title>Metadata standaard Editor</title>

  <action type="create">
    <object type="metastandard"/>
  </action>

  <action type="load">
    <field name="name"/>
    <field name="description"/>
    <relation destinationtype="metadefinition" role="related" />
  </action>

  <action type="delete" />

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Metastandaard invoeren</title>

    <field name="name" dtminlength="1">
      <prompt>Metadata standaard naam</prompt>
    </field>

    <field name="description" dtminlength="0" dttype="text">
      <prompt>Omschrijving van de metadata standaard</prompt>
    </field>


    <list destination="metadefinition" role="related" extends="list/metadefinition.xml" />

    <!--<list destination="metavocabulary" role="related" extends="list/metavocabularydefinition.xml" />-->


