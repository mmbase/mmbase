<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    extends="object"
    name="shouts"
    maintainer="mmbase.org"
    version="0"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">


  <searchage>0</searchage>
  <names>
    <singular xml:lang="en">Annotation</singular>
    <singular xml:lang="nl">Aantekening</singular>

    <plural xml:lang="en">Annotations</plural>
    <plural xml:lang="nl">Aantekeningen</plural>
  </names>

  <fieldlist>

    <field name="from" type="system">
      <editor><positions><list>2</list></positions></editor>
      <datatype base="user" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <required value="true" />
      </datatype>
    </field>

    <field name="title">
      <gui>
        <guiname xml:lang="en">Title</guiname>
        <guiname xml:lang="nl">Titel</guiname>
      </gui>
      <editor><positions><list>3</list></positions></editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="body">
      <gui>
        <guiname xml:lang="en">Text</guiname>
        <guiname xml:lang="nl">Tekst</guiname>
      </gui>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="65000" />
      </datatype>
    </field>
  </fieldlist>

</builder>
