<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title xml:lang="nl">Licentie Editor</title>
    <title xml:lang="en">License Editor</title>

    <action type="create">
       <object type="licensetexts">
       </object>
    </action>

    <action type="load">
    </action>

    <action type="delete" />
    <lists>
    </lists>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title xml:lang="nl">Licentietekst invoeren</title>
        <title xml:lang="en">Enter license text</title>
        <field name="title" >
            <prompt xml:lang="nl">Titel</prompt>
            <prompt xml:lang="en">Title</prompt>
        </field>
        <field name="text" ftype="html" dtminlength="0">
            <prompt xml:lang="nl">Tekst</prompt>
            <prompt xml:lang="en">Text</prompt>
        </field>
    </form-schema>

</wizard-schema>

