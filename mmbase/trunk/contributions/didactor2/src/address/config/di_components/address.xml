<component
    xmlns="http://www.mmbase.org/xmlns/didactor-component"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/didactor-component http://www.mmbase.org/xmlns/didactor-component.xsd"    

    name="address" templatepath="address" templatebar="provider" barposition="30">
  <scope name="component" referid="component">
  </scope>
  <scope name="providers" referid="provider">
    <!-- some addresses always appearing in the address-book -->
    <setting name="addresses" type="string"  default="" />
  </scope>
  <scope name="educations" referid="education">
    <setting name="coaches_see_workgroup" type="boolean"  default="true" />
    <setting name="students_see_coach" type="boolean"  default="true" />
    <setting name="show_internal_email" type="boolean"  default="false" />
  </scope>
</component>
