<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_task">
	<title>Taak</title>
	<field name="creationdate">
		<prompt xml:lang="en">creationdate</prompt>
		<prompt xml:lang="nl">Creatiedatum</prompt>
	</field>
	<field name="deadline">
		<prompt xml:lang="en">deadline</prompt>
		<prompt xml:lang="nl">Deadline</prompt>
	</field>
	<field name="type">
		<prompt xml:lang="en">type</prompt>
		<prompt xml:lang="nl">Type</prompt>
	</field>
	<field name="status">
		<prompt xml:lang="en">status</prompt>
		<prompt xml:lang="nl">Status</prompt>
	</field>
	<field name="title" dtmaxlength="1024" ftype="line">
		<prompt xml:lang="en">title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>
	<field name="description" dtmaxlength="64000" ftype="text" rows="5">
		<prompt xml:lang="en">description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
	</field>
	<field name="contenttype">
		<prompt xml:lang="en">contenttype</prompt>
		<prompt xml:lang="nl">Content type</prompt>
	</field>
	<list include="config/contentelement/search_task_taskrel_contentelement.xml" />
	<list include="config/user/search_task_assignedrel_user.xml" />
	<list include="config/user/search_task_ccreatorrel_user.xml" />
</form-schema>