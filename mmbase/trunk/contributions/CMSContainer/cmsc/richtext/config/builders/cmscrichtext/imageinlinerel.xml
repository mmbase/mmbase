<?xml version="1.0" encoding="UTF-8"?>
<builder extends="insrel" maintainer="wiab.org" name="imageinlinerel"
    version="1" xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <class>com.finalist.cmsc.richtext.builders.InlineRel</class>
    <searchage>1000</searchage>
    <names>
        <singular xml:lang="nl">AfbeeldingInlineRelatie</singular>
        <singular xml:lang="en">imageinlinerel</singular>
        <singular xml:lang="zh">图片内部链接</singular>
        <plural xml:lang="nl">AfbeeldingInlineRelaties</plural>
        <plural xml:lang="en">imageinlinerels</plural>
        <plural xml:lang="zh">图片内部链接</plural>
    </names>
    <descriptions>
        <description xml:lang="nl">Een relatie binnen een richtextfield die beschrijft hoe en waar een plaatje getoond moet worden.</description>
    </descriptions>
    <fieldlist>
        <field name="referid">
            <gui>
                <guiname xml:lang="nl">ReferentieId</guiname>
                <guiname xml:lang="en">ReferId</guiname>
                <guiname xml:lang="zh">关联Id</guiname>
            </gui>
            <editor>
                <positions>
                    <input>5</input>
                    <list>5</list>
                    <search>5</search>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="20"/>
            </datatype>
        </field>
        <field name="width">
            <gui>
                <guiname xml:lang="nl">Breedte</guiname>
                <guiname xml:lang="en">Width</guiname>
                <guiname xml:lang="zh">宽</guiname>
            </gui>
            <editor>
                <positions>
                    <input>8</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="height">
            <gui>
                <guiname xml:lang="nl">Hoogte</guiname>
                <guiname xml:lang="en">Height</guiname>
                <guiname xml:lang="zh">高</guiname>
            </gui>
            <editor>
                <positions>
                    <input>9</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="legend">
            <gui>
                <guiname xml:lang="fr">l�gende</guiname>
                <guiname xml:lang="nl">bijschrift</guiname>
                <guiname xml:lang="en">legend</guiname>
                <guiname xml:lang="us">legend</guiname>
                <guiname xml:lang="zh">图例</guiname>
            </gui>
            <editor>
                <positions>
                    <input>4</input>
                    <list>3</list>
                    <search>4</search>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
    </fieldlist>
</builder>
