<?xml version="1.0" encoding="UTF-8"?>
<luceneindexdefinition defaultindex="Nijmegen_Index">
   <extractor mimetype="application/ms-excel" extractorClass="net.sf.mmapps.modules.lucenesearch.extraction.impl.POIExcelExtractor"/>

   <index name="Nijmegen_Index" analyzerClass="net.sf.mmapps.modules.lucenesearch.analysis.nl.StandardCleaningAnalyzer">
      <table name="article">
         <field name="title"/>
         <field name="title">content</field>
         <field name="keywords">content</field>
         <field name="subtitle">content</field>
         <field name="intro">content</field>
         <field name="body">content</field>

         <field name="intro"/>
         <field name="body"/>
         
         <related name="attachments">
            <field name="title">content</field>
            <field name="description">content</field>
            <field name="handle" type="binary">content</field>
         </related>
      </table>

