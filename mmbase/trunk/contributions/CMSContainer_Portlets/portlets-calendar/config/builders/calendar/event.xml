<?xml version="1.0" encoding="UTF-8"?>
<builder extends="contentelement" maintainer="finalist.com" name="event"
    version="1" xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">Evenement</singular>
        <singular xml:lang="en">Event</singular>
        <singular xml:lang="zh">事件</singular>
        <plural xml:lang="nl">Evenementen</plural>
        <plural xml:lang="en">Events</plural>
        <plural xml:lang="zh">事件</plural>
    </names>
    <fieldlist>
        <field name="intro">
            <gui>
                <guiname xml:lang="nl">Introductie</guiname>
                <guiname xml:lang="en">Introduction</guiname>
                <guiname xml:lang="zh">介绍</guiname>
            </gui>
            <editor>
                <positions>
                    <input>99</input>
                    <list>99</list>
                    <search>99</search>
                </positions>
            </editor>
            <datatype base="cmscrichtext" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="64000"/>
            </datatype>
        </field>
        <field name="starttime">
            <gui>
                <guiname xml:lang="nl">Starttijd</guiname>
                <guiname xml:lang="en">Starttime</guiname>
