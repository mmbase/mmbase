<?xml version="1.0" encoding="UTF-8"?>
<builder extends="contentelement" maintainer="finalist.com" name="playlist"
    version="1" xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">Playlist</singular>
        <singular xml:lang="en">Playlist</singular>
        <singular xml:lang="zh">播放列表</singular>
        <plural xml:lang="nl">Playlists</plural>
        <plural xml:lang="en">Playlists</plural>
        <plural xml:lang="zh">播放列表</plural>
    </names>
    <fieldlist>
        <field name="body">
            <gui>
                <guiname xml:lang="nl">Tekst</guiname>
                <guiname xml:lang="en">Body</guiname>
                <guiname xml:lang="zh">主体</guiname>
            </gui>
            <editor>
                <positions>
                    <input>6</input>
                </positions>
            </editor>
            <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="512000"/>
            </datatype>
        </field>
        <field name="location">
            <gui>
                <guiname xml:lang="nl">Lokatie XML bestand met playlist</guiname>
                <guiname xml:lang="en">Location XML-file containg playlist</guiname>
                <guiname xml:lang="zh">定位关联播放列表的XML文件</guiname>
            </gui>
            <editor>
                <positions>
                    <input>6</input>
                </positions>
            </editor>
            <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="1024"/>
            </datatype>
        </field>
    </fieldlist>
</builder>
