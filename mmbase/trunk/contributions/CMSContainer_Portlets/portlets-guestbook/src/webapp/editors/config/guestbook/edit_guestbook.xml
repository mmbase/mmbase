<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_guestbook">
   <title xml:lang="nl">Gastenboek</title>
   <title xml:lang="en">Guestbook</title>
   <title xml:lang="zh">用户联系手册</title>

   <field name="title">
      <prompt xml:lang="en">Title</prompt>
      <prompt xml:lang="nl">Titel</prompt>
      <prompt xml:lang="zh">标题</prompt>
   </field>
   <field name="body" ftype="html" rows="30">
      <prompt xml:lang="en">Body</prompt>
      <prompt xml:lang="nl">Tekst</prompt>
      <prompt xml:lang="zh">主体</prompt>
   </field>
   <field name="pagesize">
      <prompt xml:lang="en">Number of message per page</prompt>
      <prompt xml:lang="nl">Aantal berichten per pagina</prompt>
      <prompt xml:lang="zh">每页信息数</prompt>
   </field>
</form-schema>