<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="newsletter" minoccurs="0" maxoccurs="*">
	<title xml:lang="nl">Nieuwsbrief selecteren</title>
	<title xml:lang="en">Newsletter selection</title>

	<item>
		<field name="title" dtmaxlength="100">
			<prompt xml:lang="en">Subject</prompt>
			<prompt xml:lang="nl">Onderwerp</prompt>
		</field>
	</item>


	<command name="search" nodepath="newsletter" age="-1" fields="title">
		<prompt xml:lang="en">Search newsletter</prompt>
		<prompt xml:lang="nl">Zoek nieuwsbrief</prompt>
		<search-filter>
			<name xml:lang="en">Title contains</name>
			<name xml:lang="nl">Titel bevat</name>
			<search-fields>[title]</search-fields>
		</search-filter>
	</command>

	<action type="create">
		<relation destinationtype="newsletter" role="related">
			<object type="newsletter"></object>
		</relation>
	</action>

	<action type="delete" />
</list>