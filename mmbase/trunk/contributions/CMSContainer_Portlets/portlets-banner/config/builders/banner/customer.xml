<?xml version="1.0" encoding="UTF-8"?>
<builder extends="object" maintainer="finalist.com" name="customer" version="1"
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">Klant</singular>
        <singular xml:lang="en">Customer</singular>
        <plural xml:lang="nl">Klanten</plural>
        <plural xml:lang="en">Customers</plural>
    </names>
    <fieldlist>
        <field name="name">
            <gui>
                <guiname xml:lang="nl">Naam</guiname>
                <guiname xml:lang="en">Name</guiname>
            </gui>
            <editor>
                <positions>
                    <input>10</input>
                    <list>10</list>
                    <search>10</search>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="1024"/>
            </datatype>
        </field>
    </fieldlist>
</builder>
