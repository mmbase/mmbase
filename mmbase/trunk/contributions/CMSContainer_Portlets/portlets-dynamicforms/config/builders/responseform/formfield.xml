<?xml version="1.0" encoding="UTF-8"?>
<builder extends="object" maintainer="finalist.com" name="formfield" version="1"
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">Formulier veld</singular>
        <singular xml:lang="en">Form field</singular>
        <singular xml:lang="zh">表单框</singular>
        <plural xml:lang="nl">Formulier velden</plural>
        <plural xml:lang="en">Form fields</plural>
        <plural xml:lang="zh">表单框</plural>
    </names>
    <fieldlist>
        <field name="label">
            <gui>
                <guiname xml:lang="nl">Label</guiname>
                <guiname xml:lang="en">Label</guiname>
                <guiname xml:lang="zh">标签</guiname>
            </gui>
            <editor>
                <positions>
                    <input>4</input>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <required value="true"/>
                <maxLength value="255"/>
            </datatype>
        </field>
        <field name="description">
            <gui>
                <guiname xml:lang="nl">Omschrijving</guiname>
                <guiname xml:lang="en">Description</guiname>
                <guiname xml:lang="zh">描述</guiname>
            </gui>
            <editor>
                <positions>
                    <input>5</input>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="1024"/>
            </datatype>
        </field>
        <field name="type">
            <gui>
                <guiname xml:lang="nl">Type</guiname>
                <guiname xml:lang="en">Type</guiname>
                <guiname xml:lang="zh">类型</guiname>
            </gui>
            <editor>
                <positions>
                    <input>6</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="mandatory">
            <gui>
                <guiname xml:lang="nl">Verplicht</guiname>
                <guiname xml:lang="en">Mandatory</guiname>
                <guiname xml:lang="zh">强制的</guiname>
            </gui>
            <editor>
                <positions>
                    <input>7</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="regex">
            <gui>
                <guiname xml:lang="nl">Reguliere expressie</guiname>
                <guiname xml:lang="en">Regular expression</guiname>
                <guiname xml:lang="zh">正则表达式</guiname>
            </gui>
            <editor>
                <positions>
                    <input>8</input>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="255"/>
            </datatype>
        </field>
        <field name="rows">
            <gui>
                <guiname xml:lang="nl">Rijen</guiname>
                <guiname xml:lang="en">Rows</guiname>
                <guiname xml:lang="zh">行</guiname>
            </gui>
            <editor>
                <positions>
                    <input>9</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="columns">
            <gui>
                <guiname xml:lang="nl">Kolommen</guiname>
                <guiname xml:lang="en">Columns</guiname>
                <guiname xml:lang="zh">列</guiname>
            </gui>
            <editor>
                <positions>
                    <input>10</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="sendemail">
            <gui>
                <guiname xml:lang="nl">Email naar dit veld</guiname>
                <guiname xml:lang="en">Send email to value in this field</guiname>
                <guiname xml:lang="zh">对本框值发送电子邮件</guiname>
            </gui>
            <editor>
                <positions>
                    <input>16</input>
                    <list>1</list>
                    <search>1</search>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
        <field name="defaultvalue">
            <gui>
                <guiname xml:lang="nl">De default waarde</guiname>
                <guiname xml:lang="en">The default value</guiname>
                <guiname xml:lang="zh">默认值</guiname>
            </gui>
            <editor>
                <positions>
                    <input>11</input>
                </positions>
            </editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="255"/>
            </datatype>
        </field>
        <field name="maxlength">
            <gui>
                <guiname xml:lang="nl">Maximum lengte</guiname>
                <guiname xml:lang="en">Maxlength</guiname>
                <guiname xml:lang="zh">最大值</guiname>
            </gui>
            <editor>
                <positions>
                    <input>12</input>
                </positions>
            </editor>
            <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes"/>
        </field>
    </fieldlist>
</builder>
