<?xml version="1.0"?>
<!-- DOCTYPE sendmail PUBLIC "//MMBase - linkchecker module//" "http://www.mmbase.org/dtd/linkchecker.dtd" -->
<!-- 	This module sends all incorrect urls to a certain person.
		Make sure that you enabled the sendmail module and that you
		have specified the mailhost in sendmail.properties. -->

<module>

  <!-- <status>
    what is the status of this builder options : active or inactive
  -->
  <status>inactive</status>


  <!-- <classfile>
    main classfile that this module is defined in
  -->
  <classfile>org.mmbase.module.LinkChecker</classfile>

  <!-- <properties>
     you can define properties to be used by the classfile (if used) it uses
     a key/value system. Its a optional tag.
   -->
  <properties>
 	<property name="from">linkchecker@mmbase.org</property>
 	<property name="to">youremail@mmbase.org</property>
  </properties>

</module>
