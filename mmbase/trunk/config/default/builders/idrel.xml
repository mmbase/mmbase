<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.0//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder maintainer="mmbase.org" version="0" extends="insrel">
<!--
  This relation can be used in combination with XML fields, since you
  can store a reference to a tag id in it.

  @since   MMBase-1.6
  @version $Id: idrel.xml,v 1.5 2002-06-18 08:50:29 pierre Exp $
-->

  <status>inactive</status>

  <names>
    <singular xml:lang="en">ID relation</singular>
    <singular xml:lang="nl">ID relatie</singular>
    <singular xml:lang="eo">ID-rilato</singular>
    <plural xml:lang="en">ID relations</plural>
    <plural xml:lang="nl">ID relaties</plural>
    <plural xml:lang="eo">ID-rilatoj</plural>
  </names>

  <descriptions>
    <description xml:lang="en">This relation has an id field, that refers to an id attribute in an XML field</description>
    <description xml:lang="nl">Deze relatie heeft een id veld, dat verwijst naar id attribuut in een XML veld</description>
    <description xml:lang="eo">Äˆi tia rilato havas id-kampon kiu montras al id-atributo en XML-a kampo</description>
  </descriptions>

  <fieldlist>
    <field>
      <gui>
        <guiname xml:lang="en">ID</guiname>
        <guiname xml:lang="nl">ID</guiname>
        <guiname xml:lang="eo">ID</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>3</input>
          <list>3</list>
          <search>3</search>
        </positions>
      </editor>
      <db>
        <name>id</name>
        <type state="persistent" size="255" notnull="false" key="false">STRING</type>
      </db>
    </field>
</fieldlist>
</builder>
