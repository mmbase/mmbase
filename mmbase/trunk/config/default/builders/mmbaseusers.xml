<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE builder PUBLIC "//MMBase - builder//" "http://www.mmbase.org/dtd/builder.dtd">
<builder maintainer="www.mmbase.org" version="1">
    <status>active</status>
    <classfile>org.mmbase.security.implementation.cloud.UserBuilder</classfile>
        <searchage>1000</searchage>
	
	<names>
            <singular xml:lang="us">MMBase user</singular>
	    <plural xml:lang="us">MMBase users</plural>
	</names>

	<descriptions>
	    <description xml:lang="us">MMBase users, builder which contains all users from the system. Passwords will be encrypted with the encoding mentioned in properties</description>
	</descriptions>

	<properties>
            <property name="encoding">BASE64</property>	
        </properties>

	<fieldlist>		
	    <field>
		<gui>
		    <guiname xml:lang="fr">Objet</guiname>
		    <guiname xml:lang="nl">Object</guiname>
		    <guiname xml:lang="en">Object</guiname>
		    <guiname xml:lang="us">Object</guiname>
		    <guitype>integer</guitype>
		</gui>
	        <editor>
		    <positions>
			<input>-1</input>
			<list>10</list>
			<search>10</search>
			</positions>
		</editor>
		<db>
		    <name>number</name>
		    <type state="persistent" notnull="true" key="true">INTEGER</type>
		</db>
	    </field>
	    <field>
		<gui>
		    <guiname xml:lang="fr">Propri!ire</guiname>
		    <guiname xml:lang="nl">Eigenaar</guiname>
	            <guiname xml:lang="en">Owner</guiname>
		    <guiname xml:lang="us">Owner</guiname>
		    <guitype>string</guitype>
		</gui>
		<editor>
		    <positions>
			<input>-1</input>
			<list>11</list>
			<search>11</search>
			</positions>
		</editor>
		<db>
		    <name>owner</name>
		    <type state="persistent" size="12" notnull="false" key="false">STRING</type>
		</db>
	    </field>
	    <field>
		<gui>
		    <guiname xml:lang="us">UserName</guiname>
		    <guitype>string</guitype>
		</gui>
		<editor>
		    <positions>
		        <input>1</input>
			<list>1</list>
			<search>1</search>
		    </positions>
		</editor>
		<db>
		    <name>username</name>
		    <type state="persistent" size="32" notnull="true" key="true">STRING</type>
		</db>
	    </field>	
	    <field>
		<gui>
		    <guiname xml:lang="us">Password</guiname>
		    <guitype>string</guitype>
		</gui>
		<editor>
		    <positions>
			<input>2</input>
			<list>2</list>
			<search>2</search>
		    </positions>
		</editor>
		<db>
		    <name>password</name>
		    <type state="persistent" size="32" notnull="true" key="false">STRING</type>
		</db>
	    </field>
	</fieldlist>
</builder>
