<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object" maintainer="mmbase.org" name="mmservers" version="0">
  <status>active</status>
  <classfile>MMServers</classfile>

  <searchage>1000</searchage>
  <names>
    <singular xml:lang="en">MMBase Server</singular>
    <singular xml:lang="nl">MMBase Server</singular>
    <singular xml:lang="eo">MMBase Servilo</singular>
    <singular xml:lang="it">MMBase Server</singular>
    <plural xml:lang="en">MMBase Servers</plural>
    <plural xml:lang="nl">MMBase Servers</plural>
    <plural xml:lang="eo">MMBase Serviloj</plural>
    <plural xml:lang="it">MMBase Servers</plural>
  </names>

  <descriptions>
    <description xml:lang="en">MMBase Servers defines node of a MMBase within this system</description>
    <description xml:lang="nl">MMMBase Servers bepaalt de node binnen een MMBase cluster</description>
    <description xml:lang="eo">Tipo MMServilo difinas la nodon en MMBase-aro</description>
    <description xml:lang="it">MMBase Servers definiscono il nodo di un MMBase dentro questo sistema</description>
  </descriptions>

  <properties>
    <!--
	Interval (in seconds) beteen updates in mmservers
	table. Defaults to 60 seconds.
	You can safely set it higher if you have only one server (and spare
	some SQL-queries)    -->
    <property name="ProbeInterval">6000</property>
  </properties>

  <fieldlist>
    <field>
      <descriptions>
	<description xml:lang="en">Name of MMBase servers inside
	  this cluster</description>
	<description xml:lang="nl">Naam van de MMBase servers
	  binnen dit cluster</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">Server</guiname>
	<guiname xml:lang="nl">Server</guiname>
	<guiname xml:lang="eo">Servilo</guiname>
	<guiname xml:lang="it">Server</guiname>
	<guitype>string</guitype>
      </gui>
      <editor>
	<positions>
	  <input>1</input>
	  <list>1</list>
	  <search>1</search>
	</positions>
      </editor>
      <db>
	<name>name</name>
	<type key="false" notnull="false" size="32" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
	<description xml:lang="en">State of MMBase servers inside
	  this cluster</description>
	<description xml:lang="nl">Status van de MMBase servers
	  binnen dit cluster</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">State</guiname>
	<guiname xml:lang="nl">Status</guiname>
	<guiname xml:lang="eo">Stato</guiname>
	<guiname xml:lang="it">Stato</guiname>
	<guitype>integer</guitype>
      </gui>
      <editor>
	<positions>
	  <input>2</input>
	  <list>2</list>
	  <search>2</search>
	</positions>
      </editor>
      <db>
	<name>state</name>
	<type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
	<description xml:lang="en">Time of the last check of this server</description>
	<description xml:lang="nl">De tijd dat deze server voor
	  het laatst gecontroleerd is</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">Last Seen</guiname>
	<guiname xml:lang="nl">Laatst Gezien</guiname>
	<guiname xml:lang="eo">Laste vidita</guiname>
	<guiname xml:lang="it">Visto da ultimo</guiname>
	<guitype>eventtime</guitype>
      </gui>
      <editor>
	<positions>
	  <input>3</input>
	  <list>3</list>
	  <search>3</search>
	</positions>
      </editor>
      <db>
	<name>atime</name>
	<type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
	<description xml:lang="en">Hostname or ipaddress of MMBase servers inside
	  this cluster</description>
	<description xml:lang="nl">Servernaam of ip-adres van de MMBase servers
	  binnen dit cluster</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">Host</guiname>
	<guiname xml:lang="nl">Host</guiname>
	<guiname xml:lang="eo">Äˆefkomputilo</guiname>
	<guiname xml:lang="it">Sistema ospitante</guiname>
	<guitype>string</guitype>
      </gui>
      <editor>
	<positions>
	  <input>4</input>
	  <list>4</list>
	  <search>4</search>
	</positions>
      </editor>
      <db>
	<name>host</name>
	<type key="false" notnull="false" size="80" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
	<description xml:lang="en">Operating System of MMBase servers inside
	  this cluster</description>
	<description xml:lang="nl">Besturingssystemen van de MMBase servers
	  binnen dit cluster</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">OS</guiname>
	<guiname xml:lang="nl">OS</guiname>
	<guiname xml:lang="eo">Operaciumo</guiname>
	<guiname xml:lang="it">OS</guiname>
	<guitype>string</guitype>
      </gui>
      <editor>
	<positions>
	  <input>5</input>
	  <list>5</list>
	  <search>5</search>
	</positions>
      </editor>
      <db>
	<name>os</name>
	<type key="false" notnull="false" size="80" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
	<description xml:lang="en">JDK (Java Developers Kit) used
	  on the MMBase servers inside this cluster</description>
	<description xml:lang="nl">JDK (Java Developers Kit)
	  gebruikt op de MMBase servers binnen dit cluster</description>
      </descriptions>
      <gui>
	<guiname xml:lang="en">JDK</guiname>
	<guiname xml:lang="nl">JDK</guiname>
	<guiname xml:lang="eo">JDK</guiname>
	<guiname xml:lang="it">JDK</guiname>
	<guitype>string</guitype>
      </gui>
      <editor>
	<positions>
	  <input>6</input>
	  <list>6</list>
	  <search>6</search>
	</positions>
      </editor>
      <db>
	<name>jdk</name>
	<type key="false" notnull="false" size="80" state="persistent">STRING</type>
      </db>
    </field>

  </fieldlist>

</builder>
