<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="mediaurlcomposers" extends="object">

  <classfile>org.mmbase.applications.media.builders.MediaURLComposers</classfile>

  <names>
    <singular xml:lang="en">URL composer</singular>
    <singular xml:lang="nl">URL-maker</singular>
    <plural xml:lang="en">URL composers</plural>
    <plural xml:lang="nl">URL-makers</plural>
  </names>

  <descriptions>
    <description xml:lang="en">Provides the info and functionality to create URI's for a certain provider.</description>
  </descriptions>

  <fieldlist>

    <field>
      <descriptions>
        <description xml:lang="en">
          Protocol: http, ftp, rtsp etc.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Protocol</guiname>
        <guiname xml:lang="nl">Protokol</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input> <list>1</list><search>1</search>
        </positions>
      </editor>
      <db>
        <name>protocol</name>
        <type state="persistent" size="255" notnull="false">STRING</type>
      </db>
    </field> 

    <field>
      <descriptions>
        <description xml:lang="en">
          First part of the path on the server. This is if often the
          same for many streams.
        </description>
        <description xml:lang="nl">
          Eerste stuk van het path.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">RootPath</guiname>
        <guiname xml:lang="nl">HoofdPad</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>2</input> <list>2</list><search>2</search>
        </positions>
      </editor>
      <db>
        <name>rootpath</name>
        <type state="persistent" size="255" notnull="false">STRING</type>
      </db>
    </field>


  </fieldlist>
</builder>
