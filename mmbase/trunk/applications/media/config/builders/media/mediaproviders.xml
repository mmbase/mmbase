<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object">
<status>active</status>

<classfile>org.mmbase.module.builders.media.MediaProviders</classfile>

<names>
	<singular xml:lang="en">Media provider</singular>
	<singular xml:lang="nl">Mediaprovider</singular>

	<plural xml:lang="en">Media providers</plural>
	<plural xml:lang="nl">Mediaproviders</plural>
</names>

<descriptions>
	<description xml:lang="en">Describes the system that is providing media files.</description>
	<description xml:lang="nl">Beschrijft het systeem dat media bestanden beschikbaar steld.</description>
</descriptions>

  <properties>
    <!-- specify which protocols to use for which media formats -->
    <property name="rm">rtsp://</property>
    <property name="ra">pnm://</property>
    <property name="default">http://</property>
  </properties>

<fieldlist>
	<!-- POS 3 : <field> 'name'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">Name</guiname>
			<guiname xml:lang="nl">Naam</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>1</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>name</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="40" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 4 : <field> 'Rooturl'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">RootUrl</guiname>
			<guiname xml:lang="nl">RootUrl</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>2</input>
				<!-- position in list area of the editor -->
				<list>2</list>
				<!-- position in search area of the editor -->
				<search>2</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>rooturl</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="200" notnull="false">STRING</type>
		</db>
	</field>

	<!-- POS 5 : <field> 'state'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">State</guiname>
			<guiname xml:lang="nl">Toestand</guiname>
			<guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>3</input>
				<!-- position in list area of the editor -->
				<list>3</list>
				<!-- position in search area of the editor -->
				<search>3</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>state</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="false">INTEGER</type>
		</db>
	</field>

	<!-- POS 6 : <field> 'rootpath'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">RootPath</guiname>
			<guiname xml:lang="nl">HoofdPad</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>4</input>
				<!-- position in list area of the editor -->
				<list>4</list>
				<!-- position in search area of the editor -->
				<search>4</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>rootpath</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="200" notnull="false">STRING</type>
		</db>
	</field>


	<!-- POS 5 : <field> 'info'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">Informacion</guiname>
			<guiname xml:lang="nl">Informatie</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>5</input>
				<!-- position in list area of the editor -->
				<list>5</list>
				<!-- position in search area of the editor -->
				<search>-1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>info</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="300" notnull="false">STRING</type>
		</db>
	</field>
</fieldlist>
</builder>
