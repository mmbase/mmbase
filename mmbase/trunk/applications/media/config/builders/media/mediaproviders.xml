<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object">
<status>active</status>

<classfile>org.mmbase.module.builders.media.MediaProviders</classfile>

<names>
	<singular xml:lang="en">Media provider</singular>
	<singular xml:lang="nl">Mediaprovider</singular>

	<plural xml:lang="en">Media providers</plural>
	<plural xml:lang="nl">Mediaproviders</plural>
</names>

<descriptions>
	<description xml:lang="en">Describes the system that is providing media files.</description>
	<description xml:lang="nl">Beschrijft het systeem dat media bestanden beschikbaar steld.</description>
</descriptions>

  <properties>
    <!-- specify which protocols to use for which media formats -->
    <property name="rm">rtsp://</property>
    <property name="ra">pnm://</property>
    <property name="default">http://</property>
  </properties>

  <fieldlist>
    <field>
      <descriptions>
        <description xml:lang="en">
          An name for this provider, which can be used as an
          identifier to the user.
        </description>
        <description xml:lang="nl">
          Naam van deze media-server.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="nl">Naam</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input> <list>1</list> <search>1</search>
        </positions>
      </editor>

      <db>
        <name>name</name>
        <type state="persistent" size="40" notnull="true">STRING</type>
      </db>
    </field>
    
    <!-- POS 4 : <field> 'Rooturl'  -->
    <field>
      <descriptions>
        <description xml:lang="en">
          The root-url is in fact the servername of the provider which
          serves the stream.
        </description>
        <description xml:lang="nl">
          De naam van deze media-server.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">RootUrl</guiname>
        <guiname xml:lang="nl">RootUrl</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>2</input><list>2</list><search>2</search>
        </positions>
      </editor>
      <db>
        <name>rooturl</name>
        <type state="persistent" size="200" notnull="false">STRING</type>
      </db>
    </field>
    
    <!-- POS 5 : <field> 'state'  -->
    <field>
      <descriptions>
        <description xml:lang="en">
          State of this media-provider. Online/offline.
        </description>
        <description xml:lang="nl">
          Status van deze media-server. Online/offline.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">State</guiname>
        <guiname xml:lang="nl">Toestand</guiname>
        <guitype>org.mmbase.module.builders.media.resources.providerstates</guitype>
      </gui>
      <editor>
        <positions>
          <input>3</input> <list>3</list> <search>3</search>
        </positions>
      </editor>
      <db>
        <name>state</name>
        <type state="persistent" notnull="false">INTEGER</type>
      </db>
    </field>
    
    <!-- POS 6 : <field> 'rootpath'  -->
    <field>
      <descriptions>
        <description xml:lang="en">
          First part of the path on the server. This is if often the
          same for many stream, so you can define it in the 'provider'.
        </description>
        <description xml:lang="nl">
          Eerste stuk van het path.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">RootPath</guiname>
        <guiname xml:lang="nl">HoofdPad</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>4</input> <list>4</list><search>4</search>
        </positions>
      </editor>
      <db>
        <name>rootpath</name>
        <type state="persistent" size="200" notnull="false">STRING</type>
      </db>
    </field>
    

    <!-- POS 5 : <field> 'info'  -->
    <field>
      <descriptions>
        <description xml:lang="en">
          Description of this provider.
        </description>
        <description xml:lang="nl">
          Beschrijving van deze provider.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Information</guiname>
        <guiname xml:lang="nl">Informatie</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>5</input><list>5</list><search>-1</search>
        </positions>
      </editor>
      <db>
        <name>info</name>
        <type state="persistent" size="300" notnull="false">STRING</type>
      </db>
    </field>
  </fieldlist>
</builder>
