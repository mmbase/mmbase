<?xml version="1.0" encoding="UTF-8"?>
<component
    name="resources"
    xmlns="http://www.mmbase.org/xmlns/component"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/component http://www.mmbase.org/xmlns/component.xsd">

  <class name="org.mmbase.framework.BasicComponent" />

  <description xml:lang="nl">Resources</description>
  <description xml:lang="en">Resources</description>

  <block name="recent" mimetype="text/html">
    <description xml:lang="en">Displays recent resources</description>
    <body jsp="/resources/recent.jspx">
      <param name="nodetypes" />
    </body>
  </block>

  <block name="imageupload">
    <description xml:lang="en">An image upload tool</description>
    <body jsp="/resources/upload.jspx" />
  </block>


  <block name="captchamail">
    <description xml:lang="en">
      Mail form, with captcha Turing test. The email builder must be
      installed for this to work.
    </description>
    <body jsp="/resources/mail.jspx">
      <param name="to" type="string" />
      <param name="title" type="string" />
    </body>
  </block>


  <block
      name="demo"
      classification="examples"
      >
    <description xml:lang="en">Examples of how to use images an so on</description>
    <body jsp="/resources/test.jspx" />
  </block>

</component>
