<?xml version="1.0"?>
<project>
  <!--
      Experimental mvn2 build
  -->
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mmbase</groupId>
    <artifactId>mmbase-parent</artifactId>
    <version>1.9</version>
  </parent>

  <artifactId>applications</artifactId>
  <packaging>pom</packaging>
  <name>MMBase Applications</name>
  <version>${mmbase.version}</version>

  <modules>
    <module>resources</module>
    <module>taglib</module>
    <module>crontab</module>
    <module>email</module>
    <module>cloudcontext</module>
    <module>richtext</module>
    <module>dove</module>
    <module>editwizard</module>
    <module>mynews</module>
    <module>jumpers</module>
  </modules>

  <build>
    <defaultGoal>install</defaultGoal>
  </build>

  <repositories>
    <repository>
      <id>mmbase</id>
      <url>http://www.mmbase.org/maven2</url>
    </repository>
  </repositories>
</project>
