<?xml version="1.0"?>
<!DOCTYPE project
 [ <!ENTITY base     SYSTEM "buildbase.xml" > ]
>
<!--
New versions of ant support 'real' inheritance:
So instead of trickery with XML-ENTITYs you can also do:

  <import file="../buildbase-include.xml" />

The advantage is that you also can extend targets like this:

  <target name="clean" depends="buildbase.clean">
  .. more deleting...
  </target>

-->

<project name="buildbase" basedir=".">
  <dirname property="buildbase.dir" file="${ant.file.buildbase}"/>
  <property name="applications.dir"   location="${buildbase.dir}" />
  &base;

</project>