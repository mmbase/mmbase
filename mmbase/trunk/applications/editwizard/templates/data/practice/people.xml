<wizard-schema id="people">
  <title>People</title>

  <action type="create">
    <object type="people">
      <field name="firstname">Enter firstname HERE</field>
      </object>
    </action>
  
  <action type="delete" />
  
  <action type="load">
    <relation destination="news" role="related" />
    </action>
  
  <form-schema id="step1">
    <title>People_</title>
    <field name="firstname" >
      <prompt>Firstname</prompt>
      </field>
    <field name="lastname" >
      <prompt>Lastname</prompt>
      </field>
    <list role="related" destination="news" minoccurs="0"
      maxoccurs="*">
      <title>
        Related newsitems
        </title>
      <command name="search" nodepath="news" fields="title" age="-1"
        >
        <prompt>Search newsitems</prompt>
        <search-filter>
          <name>name contains</name>
          <search-fields>title</search-fields>
          </search-filter>
        </command>

      <item>
        <field name="title" ftype="data">
          <prompt>Newsitem</prompt>
          <description>
Here you can see the name of the related newsitem
</description>
          </field>
        </item>
      <action type="create">
        <relation destinationtype="news" role="related">
          </relation>
        </action>
      </list>
    </form-schema>
</wizard-schema>

