<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase//DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="overview">
  <title xml:lang="en">Topics</title>
  <title xml:lang="nl">Topics</title>

  <action type="load">
    <relation destination="categories" role="posrel" searchdir="destination" />
  </action>

  <lists include="tasks/sitestatlists.xml" />

  <form-schema id="basics">
    <title xml:lang="en">Topic list</title>
    <title xml:lang="nl">Topic lijst</title>

    <field name="title" ftype="data" />

    <field name="sitestatteller" />

    <field name="label" ftype="enum" dtrequired="true" >
      <optionlist select="labels" />
    </field>

    <field name="theme" ftype="enum" dtrequired="true" >
      <optionlist select="themes" />
    </field>

    <list role="posrel" destination="categories" ordertype="number" orderby="field[@name='pos']">
      <title xml:lang="en">Topics</title>
      <title xml:lang="nl">Topics</title>

      <item>
        <field ftype="data" name="title" />
        <field ftype="startwizard" wizardname="tasks/categories/topic" inline="true" />
      </item>

      <command name="search" nodepath="categories" fields="title" orderby="title" age="-1">
        <prompt xml:lang="en">Search a topic</prompt>
        <prompt xml:lang="nl">Zoek een topic</prompt>
        <search-filter>
          <name xml:lang="en">Contains</name>
          <name xml:lang="nl">Bevat</name>
          <search-fields>title|body</search-fields>
        </search-filter>
      </command>

      <command name="startwizard" inline="true" wizardname="tasks/categories/topic_create" objectnumber="new" >
        <prompt xml:lang="en">New topic</prompt>
        <prompt xml:lang="nl">Nieuw topic</prompt>
      </command>

      <action type="add">
        <relation role="posrel">
          <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
        </relation>
      </action>
    </list>

  </form-schema>
</wizard-schema>
