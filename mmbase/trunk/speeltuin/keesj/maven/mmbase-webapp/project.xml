<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <id>mmbase-webapp</id>
  <name>mmbase-webapp</name>
  <groupId>mmbase</groupId>
  <currentVersion>1.8.0-SNAPSHOT</currentVersion>
  <organization>
    <name>MMBase.org</name>
    <url>http://www.mmbase.org</url>
  </organization>
  <inceptionYear>2001</inceptionYear>
  <package>org.mmbase</package>
  <shortDescription>Configuration for the MMBase content management system</shortDescription>
  <description>MMBase is a Web Content Management System with strong multi media features. MMBase has a large installed base in The Netherlands, and is used by major Dutch broadcasters, publishers, educational institutes, national and local governments. MMBase is written in Java, it is Open Source Software (MPL) and all standards used are as 'open' as possible. The system can be used with all major operating systems, webservers and databases. </description>
  <url>http://maven.mmbase.net/mmbase</url>
  <issueTrackingUrl>http://www.mmbase.org/bug</issueTrackingUrl>
  <siteAddress>maven.mmbase.net</siteAddress>
  <siteDirectory>/home/maven/site/mmbase</siteDirectory>
  <distributionDirectory>/home/maven/site/mmapps/jars/</distributionDirectory>
  <dependencies>
    <dependency>
      <artifactId>mmbase-core</artifactId>
      <groupId>mmbase</groupId>
      <version>1.8.0-SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <artifactId>mmbase-core-config</artifactId>
      <groupId>mmbase</groupId>
      <version>1.8.0-SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <artifactId>mmbase-taglib</artifactId>
      <groupId>mmbase</groupId>
      <version>2.0-SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>commons-fileupload</id>
      <version>1.0</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>
    <dependency>
      <id>hsqldb</id>
      <version>1.7.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>
  </dependencies>
  <repository>
    <connection>scm:cvs:pserver:guest@cvs.mmbase.org:/var/cvs:mmbase-webapp</connection>
    <url>http://www.mmbase.org/viewcvs/</url>
  </repository>
  <reports/>
  <build>
    <nagEmailAddress>maven@keesj.dds.nl</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/tests</unitTestSourceDirectory>
    <aspectSourceDirectory/>
    <resources>
      <resource>
        <directory>${basedir}/config</directory>
        <targetPath>org/mmbase/config</targetPath>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.dtd</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
<!-- Integration unit test cases -->
    <integrationUnitTest/>
    <jars/>
  </build>
</project>
<!-- -->
