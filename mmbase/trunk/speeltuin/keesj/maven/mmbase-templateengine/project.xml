<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <id>mmbase-templategine</id>
  <name>mmbase-templategine</name>
  <groupId>mmbase</groupId>
  <currentVersion>0.1-dev</currentVersion>
  <inceptionYear>2003</inceptionYear>
  <package>org.mmbase.applications.templateengine</package>
  <repository>
    <connection>scm:cvs:pserver:guest@www.mmbase.org:/usr/local/cvs:speeltuin</connection>
    <url>http://www.mmbase.org/viewcvs/</url>
  </repository>
  <developers>
    <developer>
      <name>Kees Jongenburger</name>
      <id>keesj</id>
      <email>Kees.Jongenburger@omroep.nl</email>
      <organization>Publieke Omroep</organization>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>mmbase</groupId>
      <artifactId>mmbase-core</artifactId>
      <version>1.7-rc3</version>
      <url>http://www.mmbase.org/</url>
    </dependency>
    <dependency>
      <groupId>mmbase</groupId>
      <artifactId>mmbase-taglib</artifactId>
      <version>1.1</version>
      <url>http://www.mmbase.org/taglib</url>
    </dependency>
    <dependency>
      <groupId>mmapps</groupId>
      <artifactId>simplexml</artifactId>
      <version>1.0</version>
      <url>http://mmapps.sf.net/simplexml/index.html</url>
    </dependency>
  </dependencies>
  <build>
    <nagEmailAddress>dev@maven.apache.org</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
	 <resources>
				<resource>
						  <directory>${basedir}/config</directory>
						  <targetPath>../docs/config</targetPath>
						  <includes><include>*.xml</include></includes>
				</resource>
	 </resources>
  </build>
