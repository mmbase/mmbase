<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="mmpo_basicobject" maintainer="kennisnet.nl" version="1" extends="object">
<!-- <status>
		what is the status of this builder options : active or inactive
-->
<status>active</status>

<names>
		<!-- singles per language as defined by ISO 639 -->
		<singular xml:lang="en">MMPOBasicObject</singular>
		<!-- multiple per language as defined by ISO 639 -->
		<plural xml:lang="en">MMPOBasicObjects</plural>
</names>

	<!-- <descriptions>
		small description of the builder for human reading
	-->
	<descriptions>
		<!-- descriptions per language as defined by ISO 639  -->
		<description xml:lang="en">MMPOBasicObjects</description>
	</descriptions>

	<fieldlist>
		<!-- POS 3 : <field> 'name'  -->
				 <field>
				<descriptions>
					<!-- descriptions per language as defined by ISO 639  -->
					<description xml:lang="en">name</description>
				</descriptions>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="en">name</guiname>
				<guitype>string</guitype>
			</gui>
			<!-- editor related  -->
			<editor>
				<positions>
					<!-- position in the input area of the editor -->
					<input>1</input>
					<!-- position in list area of the editor -->
					<list>1</list>
					<!-- position in search area of the editor -->
					<search>1</search>
				</positions>
			</editor>
			<!-- database related  -->
			<db>
				<!-- name of the field in the database -->
				<name>name</name>
				<!-- MMBase datatype and demands on it -->
				<type state="persistent" size="255" notnull="true" key="false">STRING</type>
			</db>
		</field>

		<!-- POS 5 : <field> 'description'  -->
				 <field>
				<descriptions>
					<!-- descriptions per language as defined by ISO 639  -->
					<description xml:lang="en">Description</description>
				</descriptions>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="en">Description</guiname>
				<guitype>field</guitype>
			</gui>
			<!-- editor related  -->
			<editor>
				<positions>
					<!-- position in the input area of the editor -->
					<input>3</input>
					<!-- position in list area of the editor -->
					<list>-1</list>
					<!-- position in search area of the editor -->
					<search>3</search>
				</positions>
			</editor>
			<!-- database related  -->
			<db>
				<!-- name of the field in the database -->
				<name>description</name>
				<!-- MMBase datatype and demands on it -->
				<type state="persistent" size="255" notnull="true" key="false">STRING</type>
			</db>
		</field>

</fieldlist>

</builder>
