<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Module Editor</title>

    <action type="create">
      <object type="modules">
      </object>
    </action>
    
    <action type="load">
        <relation destination="learnblocks" role="posrel" />
        <relation destination="mmevents" role="related" />
    </action>

    <action type="delete" />
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Module invoeren</title>
        <field name="name">
            <prompt>Module naam</prompt>
        </field>

        <field name="intro" ftype="html" dtminlength="0">
            <prompt>Tekst</prompt>
        </field>

        <list role="posrel" extends="list/learnblocks.xml" />
        <list role="related" extends="list/online.xml" />
    </form-schema>
</wizard-schema>
