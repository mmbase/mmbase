<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="descriptionrel" destinationtype="learnblocks"  minoccurs="0" maxoccurs="*" searchdir="both"> 
    <title>Bijbehorende leerblokken</title>
    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van het leerblok</description>
        </field>
        <field fdatapath="field[@name='description']" ftype="line"><prompt>Omschrijving van de link</prompt></field> 
        <field wizardname="config/learnblocks/learnblocks" ftype="startwizard" />
    </item>

    <action type="create">
        <relation role="descriptionrel" destinationtype="learnblocks">
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="config/learnblocks/learnblocks" objectnumber="new">
      <prompt>Nieuw leerblok
      </prompt>
    </command>
     <command name="search" nodepath="learnblocks" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar leerbloken</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
   </command>
</list>

