<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="roles" maintainer="didactor.nl" version="3" extends="object">

  <searchage>-1</searchage>
  <names>
    <singular xml:lang="nl">Rol</singular>
    <singular xml:lang="en">Role</singular>
    <plural xml:lang="nl">Rollen</plural>
    <plural xml:lang="en">Roles</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Een rol van een gebruiker binnen het systeem, bijvoorbeeld 'student'.</description>
    <description xml:lang="en">A role definition of a user within the system, like 'student'. </description>
  </descriptions>

  <properties>
    <property name="max-nodes-from-query">99999</property>
  </properties>

  <fieldlist>
    <field name="name">
      <descriptions>
        <description xml:lang="nl">Naam van de rol</description>
        <description xml:lang="en">Name of the role</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Naam</guiname>
        <guiname xml:lang="en">Name</guiname>
      </gui>
      <editor>
        <positions>
          <list>1</list>
          <search>1</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type state="persistent" size="255" notnull="true" key="false">STRING</type>
      </db>
    </field>
  </fieldlist>
</builder>
