<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_reactform">
	<title xml:lang="nl">Mail vriend formulier</title>
	<title xml:lang="en">Mail friend form</title>
	<field name="title">
       <prompt xml:lang="nl">Titel</prompt>
       <prompt xml:lang="en">Title</prompt>
    </field>
	<field name="intro" dtmaxlength="64000" ftype="html" rows="20">
		<prompt xml:lang="en">Intro</prompt>
		<prompt xml:lang="nl">Introductie</prompt>
	</field>
	<field name="subject" ftype="line" dtrequired="true">
		<prompt xml:lang="en">Email subject</prompt>
		<prompt xml:lang="nl">Email onderwerp</prompt>
	</field>
	<field name="message" dtrequired="true" ftype="text">
		<prompt xml:lang="en">Email body</prompt>
		<prompt xml:lang="nl">Email tekst</prompt>
	</field>
	<field name="confirmation" dtmaxlength="64000" ftype="html" rows="20">
		<prompt xml:lang="en">Confirmation message</prompt>
		<prompt xml:lang="nl">Bevestigings bericht</prompt>
	</field>	

</form-schema>