<?xml version="1.0"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="couplinganswers" maintainer="didactor.nl" version="2" extends="answers">

  <names>
    <singular xml:lang="nl">Koppelantwoord</singular>
    <singular xml:lang="en">Coupling Answer</singular>
    <plural xml:lang="nl">Koppelntwoorden</plural>
    <plural xml:lang="en">Coupling Answers</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Een van de set antwoorden op een koppelvraag</description>
    <description xml:lang="en">One of the set answers to a coupling question</description>
  </descriptions>

  <fieldlist>
    <field name="text1">
      <descriptions>
        <description xml:lang="nl">Linkertekst van het antwoord</description>
        <description xml:lang="en">Left text of the answer</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">LinkerTekst</guiname>
        <guiname xml:lang="en">LeftText</guiname>
      </gui>
      <editor><positions><list>2</list></positions></editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <required value="true" />
        <maxLength value="65535" />
      </datatype>
    </field>
    <field name="text2">
      <descriptions>
        <description xml:lang="nl">Rechtertekst van het antwoord</description>
        <description xml:lang="en">Right text of the answer</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">RechterTekst</guiname>
        <guiname xml:lang="en">RightText</guiname>
      </gui>
      <editor><positions><list>3</list></positions></editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <required value="true" />
        <maxLength value="65535" />
      </datatype>
    </field>
  </fieldlist>
</builder>
