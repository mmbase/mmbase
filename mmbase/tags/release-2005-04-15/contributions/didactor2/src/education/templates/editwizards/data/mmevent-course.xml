<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Looptijd</title>

    <action type="create">
        <object type="mmevents">
        </object>
    </action>
    
    <action type="load">
    </action>

    <action type="delete">
      <prompt>Weet u zeker dat u deze tijd wilt verwijderen?</prompt>
      <description>Klik hier om deze tijd te verwijderen</description>
    </action>
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Looptijd invoeren</title>
        <field name="start" ftype="datetime">
            <prompt>Begin van de cursus</prompt>
        </field>
        <field name="stop" ftype="datetime">
            <prompt>Eind van de cursus</prompt>
        </field>
    </form-schema>
</wizard-schema>
