<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="profiles">
   <title>Profielen editor</title>
   <action type="create">
      <object type="profiles">
      </object>
   </action>
   <action type="delete">
      <prompt>Weet u zeker dat u deze profiel wilt verwijderen ?</prompt>
      <description>Klik hier om deze profiel te verwijderen.</description>
   </action>
   <action type="load">
      <relation destination="preassessments" role="related"/>
      <relation destination="competencies" role="related"/>
   </action>
   <lists>
   </lists>
   <steps>
      <step form-schema="edit_profiles"/>
   </steps>

<form-schema id="edit_profiles">
   <field name="name" dtminlength="0" dtmaxlength="255">
   <prompt>name</prompt></field>

   <list extends="list/preassessments.xml"/>

   <list role="related" destination="competencies" minoccurs="0" maxoccurs="*" ordertype="number">
      <title>Bijbehorende competenties</title>
      <item>
         <field name="name" ftype="data"/>
         <field ftype="startwizard" wizardname="competencies" />
      </item>
      <command name="search" nodepath="competencies" fields="name" age="-1" orderby="number" directions="down">
         <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
         </search-filter>
      </command>
      <command name="startwizard" inline="true" wizardname="competencies" objectnumber="new">
         <prompt>Nieuw</prompt>
      </command>

      <action type="create">
         <relation destinationtype="competencies" role="related">
         </relation>
      </action>
   </list>
</form-schema>
</wizard-schema>
