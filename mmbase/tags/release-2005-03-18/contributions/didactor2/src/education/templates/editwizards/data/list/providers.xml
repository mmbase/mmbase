<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="providers" role="related" minoccurs="1" maxoccurs="1">
    <title>Aanbieder van de opleiding</title>

    <item>
        <field name="name" ftype="data">
            <prompt>Naam van de aanbieder</prompt>
        </field>
    </item>

    <action type="create">
        <relation destinationtype="providers" role="related">
            <object type="providers">
            </object>
        </relation>
    </action>

    <action type="add">
        <relation destinationtype="providers" role="related">
            <object type="providers">
            </object>
        </relation>
    </action>

    <action type="load">
        <relation destinationtype="providers" role="related">
            <object type="providers">
            </object>
        </relation>
    </action>

    <command name="search" nodepath="providers" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar aanbieders</prompt>
        <search-filter>
             <name>Naam bevat</name>
             <search-fields>name</search-fields>
        </search-filter>
    </command>
    <!--
    This command is being misused; we will not allow teachers to add providers
    <command name="insert" /> 
    -->
</list>
