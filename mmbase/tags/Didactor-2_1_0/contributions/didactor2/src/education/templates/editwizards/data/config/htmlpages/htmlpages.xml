<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>HTML Pagina Editor</title>


    <action type="create">
       <object type="htmlpages">
           <field name="showtitle">1</field>
       </object>
    </action>


    <action type="load"/>

    <action type="delete" />


    <lists>
       <optionlist include="config/option_list/boolean.xml" />
    </lists>


    <form-schema id="step1">
       <title>Pagina invoeren</title>
       <field name="name" >
          <prompt xml:lang="en">Name</prompt>
          <prompt xml:lang="nl">Naam</prompt>
       </field>

       <field name="showtitle" ftype="enum">
          <prompt xml:lang="en">Show title</prompt>
          <prompt xml:lang="nl">Titel laten zien</prompt>
          <optionlist select="boolean" />
       </field>

       <field name="content" ftype="html" dtminlength="0">
          <prompt xml:lang="en">Content</prompt>
          <prompt xml:lang="nl">Content</prompt>
       </field>
    </form-schema>

</wizard-schema>
