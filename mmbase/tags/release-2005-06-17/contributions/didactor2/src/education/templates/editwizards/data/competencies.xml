<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="competencies">
   <title xml:lang="nl">Competentie editor</title>
   <title xml:lang="en">Competence editor</title>

   <action type="create">
      <object type="competencies">
      </object>
   </action>
   <action type="delete">
      <prompt>Weet u zeker dat u deze competentie wilt verwijderen ?</prompt>
      <description>Klik hier om deze competentie te verwijderen.</description>
   </action>
   <action type="load">
      <relation destination="tests" role="comprel">
         <object type="tests">
            <field name="name"/>
         </object>
      </relation>
      <relation destination="competencetypes" role="posrel">
         <object type="competencetypes">
            <field name="name"/>
         </object>
      </relation>
   </action>

   <lists>
   </lists>

   <steps>
      <step form-schema="edit_competencies"/>
   </steps>

<form-schema id="edit_competencies">
   <field name="name" dtminlength="0" dtmaxlength="255">
   <prompt>naam</prompt></field>

   <list role="comprel" destination="tests" minoccurs="0" maxoccurs="*" ordertype="number">
      <title>Bijbehorende testen</title>
      <item>
         <field name="name" ftype="data"/>
         <field ftype="startwizard" wizardname="tests" />
      </item>
      <command name="search" nodepath="tests" fields="name" age="-1" orderby="number" directions="down">
         <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
         </search-filter>
      </command>
      <command name="startwizard" inline="true" wizardname="tests" objectnumber="new">
         <prompt>Nieuw</prompt>
      </command>

      <action type="create">
         <relation destinationtype="tests" role="comprel">
         </relation>
      </action>
   </list>


   <list role="posrel" destination="competencetypes" minoccurs="1" maxoccurs="1" ordertype="number">
      <title xml:lang="nl">Competentie type</title>
      <title xml:lang="en">Competence type</title>
      <item>
         <field name="name" ftype="data"/>
         <field ftype="startwizard" wizardname="competencetypes" />
      </item>
      <command name="search" nodepath="competencetypes" fields="name" age="-1" orderby="number" directions="down">
         <search-filter>
            <name xml:lang="nl">Naam bevat</name>
            <name xml:lang="en">Name</name>
            <search-fields>name</search-fields>
         </search-filter>
      </command>
      <command name="startwizard" inline="true" wizardname="competencetypes" objectnumber="new">
         <prompt xml:lang="nl">Nieuw</prompt>
         <prompt xml:lang="en">New</prompt>
      </command>

      <action type="create">
         <relation destinationtype="competencetypes" role="posrel"/>
      </action>
   </list>


</form-schema>
</wizard-schema>
