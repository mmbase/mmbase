<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//MMBase/ DTD module config 1.0//EN" "http://www.mmbase.org/dtd/module_1_0.dtd">
<module>
  <!-- <status>
	what is the status of this module options : active or inactive
  -->
  <status>active</status>

  <!-- <classfile>
	main classfile that this module is defined in
  -->
  <classfile>nl.didactor.mail.ExtendedJMSendMail</classfile>

  <!-- <properties>
     you can define properties to be used by the classfile (if used) it uses
     a key/value system. Its a optional tag.
   -->
    <properties>
        <!-- for SendMail: -->
        <property name="mailhost">${sendmail.smarthost}</property>
        <!-- for JMSendMail (j2ee way). Can also use mailhost, then
        comment the following two away. And tolerate some warnings in
        the log :-) It's nicer to comment the 'mailhost' property away
        then. -->
        <!--
        <property name="context">java:comp/env</property>
        <property name="datasource">mail/MMBase</property>
        -->
    </properties>


</module>
