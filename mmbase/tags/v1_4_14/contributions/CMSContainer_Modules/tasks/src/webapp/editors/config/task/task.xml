<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="task">

   <title xml:lang="nl">Taak</title>
   <title xml:lang="en">Task</title>
   <action include="config/task/create_task.xml"/>
   <action include="config/task/delete_task.xml"/>
   <action include="config/task/load_task.xml"/>

   <lists>
      <optionlist include="config/task/taskstatus.xml" />
   </lists>

   <steps>
      <step form-schema="edit_task"/>
   </steps>
   <form-schema id="edit_task" extends="config/task/edit_task.xml"/>
</wizard-schema>
