<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
   <list role="developcomp" destination="competencies" minoccurs="0" maxoccurs="*">
      <title xml:lang="nl">Ontwikkelde competenties</title>
      <title xml:lang="en">Developed competences</title>
      <item>
         <field name="name" ftype="data"/>
         <field ftype="startwizard" wizardname="config/competency/competencies" />
      </item>

      <command name="search" nodepath="competencetypes,competencies" fields="competencetypes.name,competencies.name,competencies.value" age="-1" orderby="competencetypes.name,competencies.name" directions="up,up">
         <search-filter>
            <name xml:lang="nl">Competentie type bevat</name>
            <name xml:lang="nl">Competence type contains</name>
            <search-fields>competencetypes.name</search-fields>
         </search-filter>
         <search-filter>
            <name xml:lang="nl">Competentie bevat</name>
            <name xml:lang="nl">Competence contains</name>
            <search-fields>competencies.name</search-fields>
         </search-filter>
         <search-filter>
            <name xml:lang="nl">Competentie waarde</name>
            <name xml:lang="nl">Competence value</name>
            <search-fields>competencies.value</search-fields>
         </search-filter>
      </command>

      <command name="startwizard" inline="true" wizardname="config/competency/competencies" objectnumber="new">
        <prompt xml:lang="nl">Nieuw</prompt>
        <prompt xml:lang="en">New</prompt>        
      </command>
      <action type="create">
         <relation destinationtype="competencies" role="developcomp">
         </relation>
      </action>
   </list>
