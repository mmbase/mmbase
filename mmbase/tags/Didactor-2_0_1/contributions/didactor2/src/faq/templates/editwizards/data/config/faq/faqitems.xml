<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>FAQ Item Editor</title>

    <action type="create">
        <object type="faqitems"/>
    </action>

    <action type="load">
        <object type="faqitems"/>      
    </action>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
      <title>FAQ Item</title>
        <field name="question" >
            <prompt>Vraag</prompt>
        </field>
        <field name="answer" ftype="html">
            <prompt>Antwoord</prompt>
        </field>
        <field name="active" ftype="enum">
            <prompt>Item zichtbaar maken</prompt>
            	<optionlist name="active">
								<option id="0">ja</option>
								<option id="1">nee</option>
							</optionlist>
				</field>			
        <field name="order_number" >
            <prompt>Positie</prompt>
        </field>          
		</form-schema>   
</wizard-schema>
