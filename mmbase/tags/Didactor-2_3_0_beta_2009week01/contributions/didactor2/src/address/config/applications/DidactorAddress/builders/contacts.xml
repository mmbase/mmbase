<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="contacts" maintainer="didactor.nl" version="2" extends="people">
  <status>active</status>

  <classfile>nl.didactor.builders.PeopleBuilder</classfile>
  <searchage>1000</searchage>

  <names>
    <!-- singles per language as defined by ISO 639 -->
    <singular xml:lang="en">Contact</singular>
    <singular xml:lang="nl">Contactpersoon</singular>
    <!-- multiple per language as defined by ISO 639 -->
    <plural xml:lang="en">Contacts</plural>
    <plural xml:lang="nl">Contactpersonen</plural>
  </names>

  <descriptions>
    <!-- descriptions per language as defined by ISO 639  -->
    <description xml:lang="en">Contacts in an addressbook</description>
    <description xml:lang="nl">Contactpersonen in een adresboek</description>
  </descriptions>

</builder>
