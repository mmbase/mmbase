<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="roles" role="related" minoccurs="0" maxoccurs="*">
  <title>Bijbehorende Rollen</title>
  <item>
    <field name="name" ftype="data">
      <prompt>Rol naam</prompt>
    </field>
  </item>

  <action type="add">
    <relation destinationtype="roles" role="related" />
  </action>

  <action type="delete"/>

  <action type="load">
    <relation destinationtype="roles" role="related">
      <object type="roles"/>
    </relation>
  </action>

  <command name="search" nodepath="roles" fields="name" age="-1" orderby="number" directions="down" >
    <prompt>Zoeken naar Rollen</prompt>
    <search-filter>
      <name>naam bevat</name>
      <search-fields>name</search-fields>
    </search-filter>
  </command>
</list>
