<!DOCTYPE hibernate-configuration PUBLIC
   "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
	
    <!-- ontwikkel:-->
    <property name="connection.username">root</property>
    <property name="connection.password"></property>
    <property name="connection.url">jdbc:mysql://localhost/jaasdb</property>
    <property name="connection.driver_class">org.gjt.mm.mysql.Driver</property>
    <property name="show_sql">true</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    
    
    <property name="show_sql">true</property>
    <property name="generate_statistics">false</property>
    <property name="c3p0.acquire_increment">1</property>
    <property name="c3p0.idle_test_period">100</property>
    <property name="c3p0.max_size">15</property>
    <property name="c3p0.max_statements">0</property>
    <property name="c3p0.min_size">10</property>
    <property name="c3p0.timeout">100</property>
<!--
    <property name="connection.datasource">java:comp/env/jdbc/hub</property>
    <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="show_sql">false</property>
    <property name="use_outer_join">false</property>
-->

    <mapping class="com.finalist.cmsc.services.community.data.User" />
    
  </session-factory>
</hibernate-configuration>