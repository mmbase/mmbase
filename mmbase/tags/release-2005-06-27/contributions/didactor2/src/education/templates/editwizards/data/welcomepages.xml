<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Welkom Pagina Editor</title>

    <action type="create">
       <object type="flashpages">
       </object>
    </action>


    <action type="load">
        <relation destination="attachments" role="related" />
    </action>

    <action type="delete" />

    <lists>
      <optionlist name="layout">
        <option id="-1">Geen tekst tonen</option>
        <option id="0">Tekst boven</option>
        <option id="1">Tekst onder</option>
        <option id="2">Tekst links</option>
        <option id="3">Tekst rechts</option>
      </optionlist>
    </lists>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Pagina gegevens invoeren</title>
        <field name="name" >
            <prompt>Naam</prompt>
        </field>
        <field name="text" ftype="html" dtminlength="0">
            <prompt>Tekst</prompt>
        </field>
        <field name="layout" ftype="enum">
            <prompt>Layout</prompt>
            <optionlist select="layout" />
        </field>

        <list minoccurs="0" maxoccurs="1" role="related" extends="list/attachments.xml" />
    </form-schema>
</wizard-schema>
