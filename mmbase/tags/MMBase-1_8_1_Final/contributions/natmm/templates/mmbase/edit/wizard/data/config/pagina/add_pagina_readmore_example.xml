<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="pagina" minoccurs="0" maxoccurs="*" >
	<title>paginas waarnaar wordt doorverwezen</title>
	<item>
		<title></title>
		<description>pagina</description>
		<field name="titel" ftype="data">
			<prompt>naam</prompt>
		</field>
   </item>
	<action type="create">
		<relation role="readmore">
			<object type="pagina" />
			 <field name="readmore">Lees verder op pagina</field>
      </relation>
	</action>
	<command name="search" nodepath="pagina" fields="titel" orderby="titel" age="-1">
    	<prompt>zoek pagina</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
	</command>
</list>
