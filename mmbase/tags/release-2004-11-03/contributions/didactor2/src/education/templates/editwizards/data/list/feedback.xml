<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="feedback" role="related" minoccurs="0" maxoccurs="*">
    <title>Bijbehorende Feedback</title>

    <item>
        <title>Feedback invoeren</title>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van de feedback</description>
        </field>
	<field wizardname="feedback" ftype="startwizard">
	    <prompt>Edit ...</prompt>
	</field>
    </item>

    <command name="startwizard" inline="true" wizardname="feedback" objectnumber="new" />

    <command name="search" nodepath="feedback" fields="name" age="7" orderby="number" directions="down" >
        <prompt>Zoeken naar feedback</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>

    <action type="create">
        <relation destinationtype="feedback" role="related" />
    </action>
</list>
