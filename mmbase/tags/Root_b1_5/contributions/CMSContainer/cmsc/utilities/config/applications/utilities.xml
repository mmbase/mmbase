<?xml version="1.0"?>
<!DOCTYPE application PUBLIC "-//MMBase/DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="utilities" maintainer="finalist.com" version="1" auto-deploy="true">
   <neededbuilderlist>
     <!-- These are the application specific builders -->
      <builder maintainer="finalist.com" version="1">editwizards</builder>
      <builder maintainer="finalist.com" version="1">properties</builder>
      <builder maintainer="finalist.com" version="1">popupinfo</builder>
      <builder maintainer="finalist.com" version="1">childrel</builder>
    </neededbuilderlist>
    <neededreldeflist>
   </neededreldeflist>
   <allowedrelationlist>
   </allowedrelationlist>

   <datasourcelist>
   <!-- A testdata/back up skelet is generated. If the testdata is not available, it will still work. -->
      <datasource builder="editwizards" path="utilities/editwizards.xml" />
      <datasource builder="properties" path="utilities/properties.xml" />
      <datasource builder="popupinfo" path="utilities/popupinfo.xml" />
   </datasourcelist>

   <relationsourcelist>
   </relationsourcelist>

   <contextsourcelist>
      <contextsource goal="backup" type="depth" path="utilities/backup.xml"/>
   </contextsourcelist>

   <description><![CDATA[Installs the utilities. Included are all the builders.]]></description>
   <install-notice><![CDATA[You have installed the utilities.]]></install-notice>
</application>