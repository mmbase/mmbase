<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Student Editor</title>
    <action type="create">
      <object type="students">
        <relation role="related">
          <object type="mailboxes">
            <field name="name">postvak in</field>
            <field name="type">0</field>
          </object>
        </relation>
        <relation role="related">
          <object type="mailboxes">
            <field name="name">verzonden items</field>
            <field name="type">1</field>
          </object>
        </relation>
        <relation role="related">
          <object type="mailboxes">
            <field name="name">verwijderde items</field>
            <field name="type">2</field>
          </object>
        </relation>
        <relation role="related">
          <object type="mailboxes">
            <field name="name">persoonlijke map</field>
            <field name="type">3</field>
          </object>
        </relation>
        <relation role="related">
          <object type="agendas">
            <field name="name">Persoonlijke Agenda</field>
          </object>
        </relation>
        <relation role="related">
          <object type="workspaces">
            <field name="name">Persoonlijke Werkruimte</field>
          </object>
        </relation>
      </object>
    </action>
    
    <action type="load">
        <relation destination="workgroups" role="related" />
    </action>

    <action type="delete" />
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Student invoeren</title>
        <field name="initials" >
            <prompt>Initialen</prompt>
        </field>
        <field name="firstname" >
            <prompt>Voornaam</prompt>
        </field>
        <field name="lastname" >
            <prompt>Achternaam</prompt>
        </field>
        <field name="address" >
            <prompt>Adres</prompt>
        </field>
        <field name="zipcode" >
            <prompt>Postcode</prompt>
        </field>
        <field name="city" >
            <prompt>Plaats</prompt>
        </field>
        <field name="telephone" >
            <prompt>Telefoonnummer</prompt>
        </field>
        <field name="email" >
            <prompt>E-mail adres</prompt>
        </field>
        <field name="username" >
            <prompt>Gebruikersnaam</prompt>
        </field>
        <field name="password" >
            <prompt>Wachtwoord</prompt>
        </field>
        <list destination="workgroups" extends="list/workgroups.xml" />
    </form-schema>
</wizard-schema>
