<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="typedef" extends="object" maintainer="mmbase.org" version="0">
	<classfile>org.mmbase.module.corebuilders.ObjectTypes</classfile>

	<searchage>1000</searchage>

	<!-- <names>
	names defines the different names used in user visible parts, singular for
	for talking about 1 object (Url,Person) and plurar for talking about multiple
	<Urls, people).
	>-->
	<names>
		 <!-- singles per language as defined by ISO 639 -->
		 <singular xml:lang="en">Object Type</singular>
		 <singular xml:lang="nl">Objekttype</singular>
		 <singular xml:lang="eo">Objekttipo</singular>
		 <singular xml:lang="fy">Object Tiepe</singular>
		 <singular xml:lang="it">Oggetto Tipo</singular>
		 <!-- multiple per language as defined by ISO 639 -->
		 <plural xml:lang="en">Object Types</plural>
		 <plural xml:lang="nl">Objekttypen</plural>
		 <plural xml:lang="eo">Objekttipoj</plural>
		 <plural xml:lang="fy">Object Tiepes</plural>
		 <plural xml:lang="it">Oggetto Tipi</plural>
	</names>

	<!-- <descriptions>
	small description of the builder for human reading
	-->
	<descriptions>
		 <!-- descriptions per language as defined by ISO 639  -->
		 <description xml:lang="en">Defines object types</description>
		 <description xml:lang="nl">Definitie van objekt types</description>
		 <description xml:lang="eo">Difinoj de objekttipoj</description>
		 <description xml:lang="fy">Definitsie fan de object tiepes</description>
		 <description xml:lang="it">Definisci i tipi per gli oggetti</description>
	</descriptions>

	<fieldlist>

		 <!-- POS 3 : <field> 'name'  -->
		 <field>
			 <descriptions>
				 <!-- descriptions per language as defined by ISO 639  -->
				 <description xml:lang="en">Name of the object type</description>
				 <description xml:lang="nl">Naam van het objecttype</description>
			 </descriptions>
				<!-- gui related -->
				<gui>
					<guiname xml:lang="en">Name</guiname>
					<guiname xml:lang="nl">Naam</guiname>
					<guiname xml:lang="eo">Nomo</guiname>
					<guiname xml:lang="fy">Namme</guiname>
					<guiname xml:lang="it">Nome</guiname>
					<guitype>string</guitype>
				</gui>
				<!-- editor related  -->
				<editor>
					<positions>
						 <!-- position in the input area of the editor -->
						 <input>1</input>
						 <!-- position in list area of the editor -->
						 <list>1</list>
						 <!-- position in search area of the editor -->
						 <search>1</search>
					</positions>
				</editor>
				<!-- database related  -->
				<db>
					<!-- name of the field in the database -->
					<name xml:lang="en">name</name>
					<!-- MMBase datatype and demands on it -->
					<type key="true" notnull="false" size="32" state="persistent">STRING</type>
				</db>
		 </field>

		 <!-- POS 4 : <field> 'description'  -->
		 <field>
			 <descriptions>
				 <!-- descriptions per language as defined by ISO 639  -->
				 <description xml:lang="en">Description of the object type</description>
				 <description xml:lang="nl">Omschrijving van het objecttype</description>
			 </descriptions>
				<!-- gui related -->
				<gui>
					<guiname xml:lang="en">Description</guiname>
					<guiname xml:lang="nl">Omschrijving</guiname>
					<guiname xml:lang="eo">Priskribo</guiname>
					<guiname xml:lang="fy">Beskrowing</guiname>
					<guiname xml:lang="it">Descrizione</guiname>
					<guitype>field</guitype>
				</gui>
				<!-- editor related  -->
				<editor>
					<positions>
						 <!-- position in the input area of the editor -->
						 <input>2</input>
						 <!-- position in list area of the editor -->
						 <list>2</list>
						 <!-- position in search area of the editor -->
						 <search>2</search>
					</positions>
				</editor>
				<!-- database related  -->
				<db>
					<!-- name of the field in the database -->
					<name xml:lang="en">description</name>
					<!-- MMBase datatype and demands on it -->
					<type key="false" notnull="false" size="255" state="persistent">STRING</type>
				</db>
		 </field>

		 <!-- POS 5 : <field> 'config'  -->
		 <field>
			 <descriptions>
				 <!-- descriptions per language as defined by ISO 639  -->
				 <description xml:lang="en">Configuration of the object type,
				 stored as xml</description>
				 <description xml:lang="nl">Configuratie van het objecttype,
				 opgeslagen als xml</description>
			 </descriptions>
				<!-- gui related -->
				<gui>
					<guiname xml:lang="en">Configuration</guiname>
					<guiname xml:lang="nl">Configuratie</guiname>
					<guiname xml:lang="eo">Agordo</guiname>
					<guiname xml:lang="fy">Ynstellings</guiname>
					<guiname xml:lang="it">Configurazione</guiname>
					<guitype>field</guitype>
				</gui>
				<!-- editor related  -->
				<editor>
					<positions>
						 <!-- position in the input area of the editor -->
						 <input>3</input>
						 <!-- position in list area of the editor -->
						 <list>-1</list>
						 <!-- position in search area of the editor -->
						 <search>-1</search>
					</positions>
				</editor>
				<!-- database related  -->
				<db>
					<!-- name of the field in the database -->
					<name xml:lang="en">config</name>
					<!-- MMBase datatype and demands on it -->
					<type doctype="&lt;!DOCTYPE builder PUBLIC &quot;-//MMBase//DTD builder config 1.1//EN&quot; &quot;http://www.mmbase.org/dtd/builder_1_1.dtd&quot;&gt;" key="false" notnull="true" state="virtual">XML</type>
				</db>
		 </field>
	</fieldlist>
</builder>
