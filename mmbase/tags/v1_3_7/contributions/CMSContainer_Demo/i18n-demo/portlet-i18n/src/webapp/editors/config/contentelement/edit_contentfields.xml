<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_contentfields">
	<title xml:lang="nl">Algemeen</title>
	<title xml:lang="en">Generic</title>
	
	<field name="title" ftype="data">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>

	<field name="language" ftype="enum" >
		<prompt xml:lang="en">Language</prompt>
		<prompt xml:lang="nl">Taal</prompt>
		<optionlist select="languagecodes" />
	</field>

	<field name="description" ftype="text" rows="4">
		<prompt xml:lang="en">Description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
	</field>
	<field name="status" ftype="data">
		<prompt xml:lang="en">Current status</prompt>
		<prompt xml:lang="nl">Huidige status</prompt>
	</field>
	<field name="publishdate">
		<prompt xml:lang="en">Publishdate</prompt>
		<prompt xml:lang="nl">Publicatie datum</prompt>
	</field>
	<field name="archivedate">
		<prompt xml:lang="en">Archivedate</prompt>
		<prompt xml:lang="nl">Archief datum</prompt>
	</field>
	<field name="notificationdate">
		<prompt xml:lang="en">Notificationdate</prompt>
		<prompt xml:lang="nl">Notificatie datum</prompt>
	</field>
	<field name="use_expirydate" ftype="enum">
		<prompt xml:lang="en">Use expirydate</prompt>
		<prompt xml:lang="nl">Gebruik verloopdatum</prompt>
		<optionlist select="boolean" />
	</field>
	<field name="expiredate">
		<prompt xml:lang="en">Expiredate</prompt>
		<prompt xml:lang="nl">Verloopdatum</prompt>
	</field>
	<field name="source" ftype="line">
		<prompt xml:lang="en">Source</prompt>
		<prompt xml:lang="nl">Bronvermelding</prompt>
	</field>
	<field name="keywords" ftype="text" rows="4">
		<prompt xml:lang="en">Keywords</prompt>
		<prompt xml:lang="nl">Trefwoorden</prompt>
	</field>
	<field name="editor_note" ftype="text" rows="4">
		<prompt xml:lang="en">Note</prompt>
		<prompt xml:lang="nl">Notitie</prompt>
	</field>
</form-schema>