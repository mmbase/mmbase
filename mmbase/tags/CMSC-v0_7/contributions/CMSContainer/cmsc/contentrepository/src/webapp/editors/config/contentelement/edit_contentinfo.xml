<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_contentinfo">
	<title xml:lang="nl">Extra informatie</title>
	<title xml:lang="en">Extra information</title>

	<field name="creationdate" ftype="data">
		<prompt xml:lang="en">Creationdate</prompt>
		<prompt xml:lang="nl">Aangemaakt</prompt>
	</field>
	<field name="lastmodifieddate" ftype="data">
		<prompt xml:lang="en">Lastmodifieddate</prompt>
		<prompt xml:lang="nl">Gewijzigd</prompt>
	</field>
	<field name="lastmodifier" ftype="data">
		<prompt xml:lang="en">Lastmodifier</prompt>
		<prompt xml:lang="nl">Gewijzigd door</prompt>
	</field>
	<!-- 
	<field name="status">
		<prompt xml:lang="en">Status</prompt>
		<prompt xml:lang="nl">Status</prompt>
	</field>
	-->
	<list role="creationrel" destination="contentchannel" minoccurs="0" maxoccurs="1" hidecommand="delete-item">
		<title xml:lang="nl">Aangemaakt in</title>
		<title xml:lang="en">Created in</title>
		<item>
			<field name="path" ftype="data">
				<prompt xml:lang="en">Path</prompt>
				<prompt xml:lang="nl">Pad</prompt>
			</field>
		</item>
	</list>
	<list role="contentrel" destination="contentchannel" minoccurs="0" maxoccurs="*" hidecommand="delete-item">
		<title xml:lang="nl">Gekoppeld aan</title>
		<title xml:lang="en">Linked in</title>
		<item>
			<field name="path" ftype="data">
				<prompt xml:lang="en">Path</prompt>
				<prompt xml:lang="nl">Pad</prompt>
			</field>
		</item>
	</list>
	<list role="authorrel" destination="user" minoccurs="0" maxoccurs="1" hidecommand="delete-item">
		<title xml:lang="nl">Auteur</title>
		<title xml:lang="en">Author</title>
		<item>
			<field name="firstname" ftype="data">
				<prompt xml:lang="en">Firstname</prompt>
				<prompt xml:lang="nl">Voornaam</prompt>
			</field>
			<field name="prefix" ftype="data">
				<prompt xml:lang="en">prefix</prompt>
				<prompt xml:lang="nl">Tussenvoegsel</prompt>
			</field>
			<field name="surname" ftype="data">
				<prompt xml:lang="en">Surname</prompt>
				<prompt xml:lang="nl">Achternaam</prompt>
			</field>
		</item>
	</list>
</form-schema>