<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">HTML Pagina Editor</title>
  <title xml:lang="en">HTML Page Editor</title>

  <action type="create">
    <object type="htmlpages">
      <relation destination="$origin" role="posrel" createdir="source"/>
    </object>
  </action>

  <action type="load"/>
  <action type="delete" />


  <form-schema id="step1">
    <title xml:lang="nl">Pagina invoeren</title>
    <title xml:lang="en">Page edit</title>

    <field name="name"  />
    <field name="showtitle" />
    <field name="content" ftype="html" dtminlength="0" rows="30" />
  </form-schema>

</wizard-schema>
