<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="htmlpages" maintainer="didactor.nl" version="2" extends="learnobjects">

   <class>nl.didactor.builders.DidactorBuilder</class>
   <searchage>9999</searchage>
   <names>
     <singular xml:lang="nl">HTML Page</singular>
     <singular xml:lang="en">HTML Page</singular>
     <plural xml:lang="nl">HTML Pages</plural>
     <plural xml:lang="en">HTML Pages</plural>
   </names>

   <properties>
     <property name="max-nodes-from-query">99999</property>
   </properties>

   <fieldlist>
     <field name="content">
       <gui>
         <guiname xml:lang="nl">Content</guiname>
         <guiname xml:lang="en">Content</guiname>
       </gui>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <maxLength value="102400" enforce="never"/>
      </datatype>
     </field>

     <field name="path">
       <gui>
         <guiname xml:lang="nl">Path</guiname>
         <guiname xml:lang="en">Path</guiname>
       </gui>
       <editor>
         <positions>
           <list>3</list>
         </positions>
       </editor>
       <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" >
         <maxLength value="102400" enforce="never"/>
       </datatype>
     </field>
   </fieldlist>
</builder>
