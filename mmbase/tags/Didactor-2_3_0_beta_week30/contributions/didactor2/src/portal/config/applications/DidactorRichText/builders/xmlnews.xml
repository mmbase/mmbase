<?xml version="1.0" encoding="UTF-8"?>
<builder xmlns="http://www.mmbase.org/xmlns/builder" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         extends="object" maintainer="mmbase.org" name="xmlnews" 
         version="0" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
  <status>active</status>
  <searchage>14</searchage>
  <names>
    <singular xml:lang="en">XML NewsItem</singular>
    <singular xml:lang="fr">XML Nouvelle</singular>
    <singular xml:lang="nl">XML-NieuwsItem</singular>
    <singular xml:lang="eo">XML-Novaĵo</singular>
    <plural xml:lang="en">XML NewsItems</plural>
    <plural xml:lang="fr">XML Nouvelles</plural>
    <plural xml:lang="nl">XML-NieuwsItems</plural>
    <plural xml:lang="eo">XML-Novaĵoj</plural>
  </names>
  <descriptions>
    <description xml:lang="en">XML News item are for demonstration XML fields</description>
    <description xml:lang="fr">Nouvelles</description>
    <description xml:lang="nl">Nieuws item zijn om XML velden te demonstreren</description>
    <description xml:lang="eo">Novaĵoj ekzistas por montro de XML-kampoj</description>
  </descriptions>

  <fieldlist>
    <field name="title">
      <descriptions>
        <description xml:lang="en">Title of this object</description>
        <description xml:lang="nl">Titel van dit object</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Title</guiname>
        <guiname xml:lang="fr">Titre</guiname>
        <guiname xml:lang="nl">Titel</guiname>
        <guiname xml:lang="eo">Titolo</guiname>
      </gui>
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="line">
        <default value="Titel"/>
        <minLength value="2"/>
      </datatype>
      <db>
        <type key="false" notnull="true" size="255" state="persistent">STRING</type>
      </db>
    </field>

    <field name="subtitle">
      <descriptions>
        <description xml:lang="en">Subtitle of the object</description>
        <description xml:lang="nl">Sub hoofd van het object</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">SubTitle</guiname>
        <guiname xml:lang="fr">Sous-titre</guiname>
        <guiname xml:lang="nl">SubTitel</guiname>
        <guiname xml:lang="eo">Subtitolo</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="line"/>
      <db>
        <type key="false" notnull="false" size="255" state="persistent">STRING</type>
      </db>
    </field>

    <field name="intro">
      <descriptions>
        <description xml:lang="en">Introduction text or teaser</description>
        <description xml:lang="nl">Introductietekst of teaser</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Intro</guiname>
        <guiname xml:lang="fr">Intro</guiname>
        <guiname xml:lang="nl">Intro</guiname>
        <guiname xml:lang="eo">Enkonduko</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="field"/>
      <db>
        <type key="false" notnull="false" size="2048" state="persistent">STRING</type>
      </db>
    </field>

    <field name="body">
      <descriptions>
        <description xml:lang="en">Main text of the object</description>
        <description xml:lang="nl">Hoofdtekst van het object</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Text</guiname>
        <guiname xml:lang="fr">Texte</guiname>
        <guiname xml:lang="nl">Tekst</guiname>
        <guiname xml:lang="eo">Teksto</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="mmxfunp"/>
      <db>
        <type key="false" notnull="false" size="64000" state="persistent">XML</type>
      </db>
    </field>
    <field name="begin">
      <gui>
        <guiname xml:lang="nl">Online op</guiname>
        <guiname xml:lang="en">Online on</guiname>
      </gui>
      <editor>
        <positions>
          <list>10</list>
        </positions>
      </editor>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="datetime">
        <default value="now + 1 hour"/>
        <minInclusive enforce="oncreate" value="yesterday"/>
        <maxInclusive enforce="never" value="today + 150 year"/>
      </datatype>
    </field>

    <field name="end">
      <gui>
        <guiname xml:lang="nl">Offline op</guiname>
        <guiname xml:lang="en">Offline on</guiname>
      </gui>
      <editor>
        <positions>
          <input>11</input>
         </positions>
      </editor>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="date">
        <default value="next month"/>
        <minInclusive enforce="oncreate" value="yesterday"/>
        <maxInclusive enforce="never" value="today + 150 year"/>
      </datatype>
    </field>
    <field name="lastmodifiedby" state="system">
      <descriptions>
        <description xml:lang="en">Last modified by</description>
        <description xml:lang="nl">Laatst veranderd door</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Last modifier</guiname>
        <guiname xml:lang="nl">Laatste veranderaar</guiname>
        <guiname xml:lang="eo">Lasta ŝanĝinto</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="lastmodifier"/>
      <db>
        <type key="false" notnull="false" size="255" state="system">STRING</type>
      </db>
    </field>
    <field name="lastmodified" state="system">
      <descriptions>
        <description xml:lang="en">Last modified on</description>
        <description xml:lang="nl">Laatst veranderd op</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Last modified time</guiname>
        <guiname xml:lang="nl">Laatste verandering</guiname>
        <guiname xml:lang="eo">Lasta ŝanĝo</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="lastmodified"/>
    </field>
    <field name="creator">
      <descriptions>
        <description xml:lang="en">Created by</description>
        <description xml:lang="nl">Gecreëerd door</description>
        <description xml:lang="nl">Kreinto</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Creator</guiname>
        <guiname xml:lang="nl">Creëerder</guiname>
        <guiname xml:lang="eo">Kreinto</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="creator"/>
      <db>
        <type key="false" notnull="false" size="255" state="system">STRING</type>
      </db>
    </field>
    <field name="created" state="system">
      <descriptions>
        <description xml:lang="en">Created on</description>
        <description xml:lang="nl">Gecreëeerd op</description>
        <description xml:lang="nl">Kreita je</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Created time</guiname>
        <guiname xml:lang="nl">Creëertijd</guiname>
        <guiname xml:lang="eo">Kretempo</guiname>
      </gui>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="created"/>
    </field>

    <field name="date">
      <gui>
        <guiname xml:lang="nl">Datum</guiname>
        <guiname xml:lang="en">Date</guiname>
      </gui>
      <editor>
        <positions>
          <list>10</list>
        </positions>
      </editor>
      <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="date">
        <default value="today"/>
        <minInclusive enforce="oncreate" value="today - 1 year"/>
        <maxInclusive enforce="never" value="today + 150 year"/>
      </datatype>
    </field>
  </fieldlist>

  <functionlist>
    <function key="{REQUEST.getContextPath}/portal?article={NODE.number}&amp;col2=rich-article&amp;col3=ignore" name="url">
      <class>org.mmbase.util.functions.PatternNodeFunctionProvider</class>
    </function>
  </functionlist>

</builder>
