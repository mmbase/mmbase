<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="classes" role="classrel" minoccurs="0" maxoccurs="*">
    <title>Bijbehorende Klassen</title>
    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van de klas</description>
        </field>
        <field wizardname="classes" ftype="startwizard" />
    </item>

    <action type="create">
        <relation destinationtype="classes" role="classrel">
          <object type="classes"/>
        </relation>
    </action>

    <action type="add">
        <relation destinationtype="classes" role="classrel"/>
    </action>

    <action type="load">
        <relation destinationtype="classes" role="classrel">
            <object type="classes"/>
        </relation>
    </action>


    <command name="startwizard" inline="true" wizardname="classes" objectnumber="new" />

    <command name="search" nodepath="classes" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar klassen</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>
</list>
