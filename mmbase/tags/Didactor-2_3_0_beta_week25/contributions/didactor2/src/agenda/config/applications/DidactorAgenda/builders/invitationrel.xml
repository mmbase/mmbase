<?xml version="1.0" encoding="UTF-8"?>
<builder xmlns="http://www.mmbase.org/xmlns/builder" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         extends="insrel" maintainer="didactor.nl" 
         name="invitationrel" version="2" 
         xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
  <names>
    <singular xml:lang="en">Invitation Relation</singular>
    <singular xml:lang="nl">Uitnodigingrelatie</singular>
    <plural xml:lang="en">Invitation Relations</plural>
    <plural xml:lang="nl">Uitnodiging Relaties</plural>
  </names>
  <descriptions>
    <description xml:lang="en">This relation has a invitation attribute</description>
    <description xml:lang="fr">Cette relation a un attribut de invitation</description>
    <description xml:lang="nl">Deze relatie heeft een uitnodiging attribuut</description>
  </descriptions>

  <fieldlist>
    <field name="status">
      <descriptions>
        <description xml:lang="en">Invitation status (1 = author, 2 = accepted, 3 = declined, other = pending)</description>
        <description xml:lang="nl">Uitnodigings status  (1 = author, 2 = accepted, 3 = declined, other = pending)</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Status</guiname>
        <guiname xml:lang="fr">Status</guiname>
        <guiname xml:lang="nl">Status</guiname>
      </gui>
      <editor>
        <positions>
          <list>3</list>
          <search>3</search>
        </positions>
      </editor>
      <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <enumeration>
          <entry value="0" display="pending" xml:lang="nl" />
          <entry value="0" display="pending"  xml:lang="en"  />
          <entry value="1" display="auteur" xml:lang="nl" />
          <entry value="1" display="author"  xml:lang="en"  />
          <entry value="2" display="afgewezen" xml:lang="nl" />
          <entry value="2" display="declined"  xml:lang="en"  />
        </enumeration>
      </datatype>
    </field>

</fieldlist>

</builder>
