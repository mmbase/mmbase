<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="audiotapes" role="related" minoccurs="0" maxoccurs="*">
    <title>Bijbehorende audiofragmenten</title>

    <item>
        <field ftype="data" name="title">
            <prompt>Titel</prompt>
        </field>
        <field name="subtitle" ftype="data">
            <prompt>Subtitel</prompt>
        </field>
        <field name="url" ftype="data">
            <prompt>URL</prompt>
        </field>
        <field wizardname="audiotapes" ftype="startwizard" />
   </item>

    <command name="startwizard" inline="true" wizardname="audiotapes" objectnumber="new" />

    <action type="create">
        <relation destination="audiotapes" role="related"/>
    </action>

    <command name="search" nodepath="audiotapes" fields="title" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar Audiofragmenten</prompt>
        <search-filter>
            <name>Titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
        <search-filter>
            <name>Subtitel bevat</name>
            <search-fields>subtitle</search-fields>
        </search-filter>
    </command>
</list>
