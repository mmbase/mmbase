<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="copybooks" maintainer="didactor.nl" version="2" extends="object">
  <status>active</status>

  <classfile>Dummy</classfile>
  <searchage>31</searchage>

  <names>
    <!-- singles per language as defined by ISO 639 -->
    <singular xml:lang="nl">Schrift</singular>
    <singular xml:lang="en">Copybook</singular>
    <!-- multiple per language as defined by ISO 639 -->
    <plural xml:lang="nl">Schriften</plural>
    <plural xml:lang="en">Copybooks</plural>
  </names>

  <descriptions>
    <!-- descriptions per language as defined by ISO 639  -->
    <description xml:lang="nl">Een schrift bevat de antwoorden van studenten op vragen die ze maken.</description>
    <description xml:lang="en">A copybook contains the answers of students on questions answered.</description>
  </descriptions>

  <properties>
    <property name="max-nodes-from-query">99999</property>
  </properties>

  <fieldlist>
    <!-- POS 3 : <field> 'name'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="nl">Naam van het schrift</description>
        <description xml:lang="en">Name of the copybook</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Naam</guiname>
        <guiname xml:lang="en">Name</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>1</input>
          <!-- position in list area of the editor -->
          <list>1</list>
          <!-- position in search area of the editor -->
          <search>1</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>name</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" size="255" notnull="true" key="false">STRING</type>
      </db>
    </field>
  </fieldlist>
</builder>
