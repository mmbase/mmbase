<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>BannerPortlet</description>
        <portlet-name>bannerportlet</portlet-name>
        <display-name>BannerPortlet</display-name>
        <portlet-class>com.finalist.portlets.banner.BannerPortlet</portlet-class>
        <init-param>
            <name>template.edit_defaults</name>
            <value>Banner.jsp</value>
        </init-param>
        <init-param>
            <name>template.help</name>
            <value>Banner.jsp</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>EDIT_DEFAULTS</portlet-mode>
            <portlet-mode>DELETE</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <supported-locale>nl</supported-locale>
        <resource-bundle>com.finalist.portlets.banner.BannerPortlet</resource-bundle>
        <portlet-info>
            <title>BannerPortlet</title>
            <short-title>BannerPortlet</short-title>
            <keywords>Content,Bannert</keywords>
        </portlet-info>
    </portlet>

</portlet-app>