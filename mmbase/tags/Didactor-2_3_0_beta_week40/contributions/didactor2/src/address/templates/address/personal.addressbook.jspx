<mm:node xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0" >
  <mm:import externid="link" />
            
  <mm:relatednodes type="addressbooks" max="1">
    <span class="${addr_class eq _node.number ? 'current' : ''} addressbook">
      <mm:link referid="link" referids="_node@addressbook">
        <a href="${_}"><mm:field name="name"/></a>
      </mm:link>
    </span>
  </mm:relatednodes>
</mm:node>
