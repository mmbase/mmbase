<?xml version="1.0" encoding="UTF-8"?>
<builder 
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
                        http://www.mmbase.org/xmlns/builder.xsd"                        
    name="forumrules" maintainer="mmbase.org" version="0" extends="object">

  <names>
    <singular xml:lang="en">Forum Rules</singular>
    <singular xml:lang="nl">Forum Regels</singular>
    <plural xml:lang="en">Forum Rules</plural>
    <plural xml:lang="nl">Forum Regels</plural>
  </names>

  <descriptions>
    <description xml:lang="en">Forum Rules</description>
    <description xml:lang="nl">Forum Regels</description>
  </descriptions>

  <fieldlist>
    <field>
      <descriptions>
        <description xml:lang="en">title</description>
        <description xml:lang="nl">titel</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Title</guiname>
        <guiname xml:lang="nl">Titel</guiname>
      </gui>
      <editor>
        <positions>
          <input>1</input>
          <list>2</list>
          <search>1</search>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <name>title</name>
        <type key="false" notnull="true" size="255" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
        <description xml:lang="en">Text</description>
        <description xml:lang="nl">Tekst</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Text</guiname>
        <guiname xml:lang="nl">Tekst</guiname>
      </gui>
      <editor>
        <positions>
          <input>2</input>
          <list>3</list>
          <search>2</search>
        </positions>
      </editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <name>body</name>
        <type key="false" notnull="true" size="64000" state="persistent">STRING</type>
      </db>
    </field>

  </fieldlist>

</builder>
