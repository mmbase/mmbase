<?xml version="1.0"?>
<!DOCTYPE util PUBLIC "-//MMBase//DTD util config 1.0//EN" "http://www.mmbase.org/dtd/util_1_0.dtd">
<util>
  <properties>
    <!-- maxrequestsize defines how big the incommig request may be-->
    <property name="maxrequestsize">2000000</property><!-- about 2 MB -->
    <!-- maxinmemoryparametersize defines how big an item may be before is is stored to disk-->
    <property name="maxinmemoryparametersize">2000000</property><!-- about 2 MB -->
		<!-- maxparametersize defines how big an item may be. if this parameter is bigger then maxinmemoryparametersize it can happen that the parameter is stored on disk( in that case other code is used and filename/mimetype are lost) -->
    <property name="maxparametersize">2000000</property><!-- about 2 MB -->
    <property name="uploaddir">/tmp</property><!-- temp directory for temp storage -->
  </properties>
</util>
