<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">

    <form-schema>
        <title>Audiofragmenten</title>
     <list role="related" extends="list/audiotapes.xml" />
 
        <!-- we need a new list because there can be only one search command per list -->
        <list minoccurs="0" maxoccurs="*" role="related">
            <title>Zoeken op tekenreeks</title>
            <item displaytype="none"></item>
 
            <action type="create">
                <relation role="related" destinationtype="audiotapes"/>
            </action>


             <command name="search" nodepath="metalangstring,metadata,audiotapes" fields="audiotapes.title,metalangstring.value" age="7" orderby="audiotapes.number" directions="down" >
                <prompt>Zoeken op metadata</prompt>
                <search-filter>
                    <name>Metadata tekenreeks bevat</name>
                    <search-fields>metalangstring.value</search-fields>
                </search-filter>
           </command>           
        </list>

        <!-- we need a new list because there can be only one search command per list -->
        <list minoccurs="0" maxoccurs="*" role="related">
            <title>Zoeken op vocabulair</title>
            <item displaytype="none"></item>
 
            <action type="create">
                <relation role="related" destinationtype="audiotapes"/>
            </action>


             <command name="search" nodepath="metavocabulary,metadata,audiotapes" fields="audiotapes.title,metavocabulary.value" age="7" orderby="audiotapes.number" directions="down" >
                <prompt>Zoeken op metadata</prompt>
                <search-filter>
                    <name>Metadata vocabulair bevat</name>
                    <search-fields>metavocabulary.value</search-fields>
                </search-filter>
           </command>
           
        </list>

        <!-- we need a new list because there can be only one search command per list -->
        <list minoccurs="0" maxoccurs="*" ordertype="number" role="related">
            <title>Zoeken op datum (YYYY-MM-DD HH:MM:SS)</title>
            <item displaytype="none"></item>
 
            <action type="create">
                <relation role="posrel" destinationtype="audiotapes"/>
            </action>


             <command name="search" nodepath="metadate,metadata,audiotapes" fields="audiotapes.name,metadate.value" age="7" orderby="audiotapes.number" directions="down" >
                <prompt>Zoeken naar leerobjecten op metadata</prompt>
                <search-filter>
                    <name>Metadata datum bevat</name>
                    <search-fields>FROM_UNIXTIME(metadate.value)</search-fields>
                </search-filter>
           </command>
           
        </list>
 


    </form-schema>
   


