<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="competencies">
   <title>Competentie editor</title>
   <action type="create">
      <object type="competencies">
      </object>
   </action>
   <action type="delete">
      <prompt>Weet u zeker dat u deze competentie wilt verwijderen ?</prompt>
      <description>Klik hier om deze competentie te verwijderen.</description>
   </action>
   <action type="load">
      <relation destination="tests" role="comprel">
         <object type="tests">
            <field name="name"/>
         </object>
      </relation>
   </action>
   <lists>
   </lists>
   <steps>
      <step form-schema="edit_competencies"/>
   </steps>

<form-schema id="edit_competencies">
   <field name="name" dtminlength="0" dtmaxlength="255">
   <prompt>naam</prompt></field>
   <list role="comprel" destination="tests" minoccurs="0" maxoccurs="*" ordertype="number">
      <title>Bijbehorende testen</title>
   <item>
      <field name="name" ftype="data"/>
      <field ftype="startwizard" wizardname="tests" />
   </item>
   <command name="search" nodepath="tests" fields="name" age="-1" orderby="number" directions="down">
      <search-filter>
         <name>Naam bevat</name>
         <search-fields>name</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="tests" objectnumber="new">
       <prompt>Nieuw</prompt>
   </command>

   <action type="create">
      <relation destinationtype="tests" role="comprel">
      </relation>
   </action>
</list>
</form-schema>
</wizard-schema>
