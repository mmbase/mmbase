<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//MMBase//DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="DidactorComponent" maintainer="didactor.nl" version="2" auto-deploy="true">
    <requirements>
        <requires name="Resources" maintainer="didactor.nl" version="2" />
        <requires name="DidactorCore" maintainer="didactor.nl" version="2" />
    </requirements>  

    <neededbuilderlist>
        <!-- Didactor specific relations -->
        <builder maintainer="didactor.nl" version="2">components</builder>
        <builder maintainer="didactor.nl" version="2">settings</builder>

        <builder maintainer="didactor.nl" version="2">settingrel</builder>
    </neededbuilderlist>

    <neededreldeflist>
       <reldef source="settingrel" target="settingrel" direction="bidirectional" guisourcename="SettingRel" guitargetname="SettingRel" />
       <reldef source="related" target="related" direction="bidirectional" guisourcename="Related" guitargetname="Related" />
    </neededreldeflist>

    <allowedrelationlist>
        <relation from="providers" to="components" type="settingrel" />
        <relation from="educations" to="components" type="settingrel" />
        <relation from="people" to="components" type="settingrel" />
        <relation from="settingrel" to="settings" type="related" />
    </allowedrelationlist>

    <datasourcelist>
        <datasource builder="components" path="DidactorComponent/components.xml" />
    </datasourcelist>

    <relationsourcelist />

    <contextsourcelist />

    <description />

    <install-notice />
</application>
