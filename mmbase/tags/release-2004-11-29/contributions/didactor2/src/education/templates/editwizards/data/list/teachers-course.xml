<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list fdatapath="relation[@role='courserel']/object[@type='teachers' or @type='administrators']/.." fparentdatapath="//object[@type='courses']">
    <title>Docenten die deze cursus begeleiden</title>
    <item>
        <fieldset>
            <field fdatapath="object/field[@name='firstname']" ftype="data" />
            <field fdatapath="object/field[@name='lastname']" ftype="data" />
            <prompt>Naam</prompt>
        </fieldset>
        <field wizardname="teachers" ftype="startwizard" />
    </item>
    <action type="create">
        <relation destinationtype="teachers" role="courserel">
        </relation>
    </action>
    <command name="startwizard" inline="true" wizardname="teachers" objectnumber="new" />
    <command name="search" nodepath="teachers" fields="firstname,lastname" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar docenten</prompt>
        <search-filter>
             <name>Voornaam bevat</name>
             <search-fields>firstname</search-fields>
        </search-filter>
        <search-filter>
             <name>Achternaam bevat</name>
             <search-fields>lastname</search-fields>
        </search-filter>
    </command>
</list>
