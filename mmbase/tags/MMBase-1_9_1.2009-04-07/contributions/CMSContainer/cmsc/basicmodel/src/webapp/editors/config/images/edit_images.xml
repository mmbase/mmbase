<?xml version="1.0" ?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_images">
	<title xml:lang="nl">Afbeelding</title>
	<title xml:lang="en">Image</title>
	<title xml:lang="zh">图片</title>

	<field name="title" dtrequired="true">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
		<prompt xml:lang="zh">标题</prompt>
	</field>
	<field name="description" ftype="text" rows="4">
		<prompt xml:lang="en">Description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
		<prompt xml:lang="zh">描述</prompt>
	</field>
	<field name="width" ftype="data">
		<prompt xml:lang="en">Width</prompt>
		<prompt xml:lang="nl">Breedte</prompt>
		<prompt xml:lang="zh">宽</prompt>
	</field>
	<field name="height" ftype="data">
		<prompt xml:lang="en">Height</prompt>
		<prompt xml:lang="nl">Hoogte</prompt>
		<prompt xml:lang="zh">高</prompt>
	</field>
	<field name="itype" ftype="data">
		<prompt xml:lang="en">MIME-TYPE</prompt>
		<prompt xml:lang="nl">MIME-TYPE</prompt>
		<prompt xml:lang="zh">MIME类型</prompt>
	</field>
	<field name="handle" ftype="image" dtmaxsize="16000000" dtrequired="true">
		<prompt xml:lang="en">Image</prompt>
		<prompt xml:lang="nl">Afbeelding</prompt>
		<prompt xml:lang="zh">图片</prompt>
	</field>
</form-schema>
