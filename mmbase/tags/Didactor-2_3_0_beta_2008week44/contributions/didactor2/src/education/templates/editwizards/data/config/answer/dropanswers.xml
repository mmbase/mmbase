<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">Sleepvraag combinatie</title>
  <title xml:lang="en">Drag and drop combination</title>
  
  <action type="create">
    <object type="dropanswers" />
  </action>
  
  <action type="delete" />

  <form-schema id="step1">
    <title xml:lang="nl">Nieuw drag en drop positie combinatie invoeren</title>
    <title xml:lang="en">Enter new drag and drop position combination</title>
    <field name="dragnumber" >
      <prompt xml:lang="nl">Sleepafbeelding op positie:</prompt>
      <prompt xml:lang="en">Drag image position:</prompt>
    </field>
    <field name="dropnumber">
      <prompt xml:lang="nl">Doelafbeelding op positie:</prompt>
      <prompt xml:lang="en">Drop image position:</prompt>
    </field>
  </form-schema>
</wizard-schema>

