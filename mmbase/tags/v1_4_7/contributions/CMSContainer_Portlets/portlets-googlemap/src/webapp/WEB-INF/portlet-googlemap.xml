<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>the google map portlet</description>
        <portlet-name>googlemapportlet</portlet-name>
        <display-name>Google Map Portlet</display-name>
        <portlet-class>com.finalist.portlets.googlemap.GoogleMapPortlet</portlet-class>
        <init-param>
            <name>template.edit_defaults</name>
            <value>google_map.jsp</value>
        </init-param>
        <init-param>
            <name>template.help</name>
            <value>google_map.jsp</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
            <portlet-mode>EDIT_DEFAULTS</portlet-mode>
            <portlet-mode>DELETE</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <supported-locale>nl</supported-locale>
        <resource-bundle>com.finalist.portlets.googlemap.GoogleMapPortlet</resource-bundle>
        <portlet-info>
            <title>Google Map Portlet</title>
            <short-title>GoogleMap</short-title>
            <keywords>map,position,gencode</keywords>
        </portlet-info>
    </portlet>
</portlet-app>