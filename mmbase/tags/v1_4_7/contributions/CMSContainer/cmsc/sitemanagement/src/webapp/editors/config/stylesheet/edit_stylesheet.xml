<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_stylesheet">
	<title xml:lang="nl">Style Sheet</title>
	<title xml:lang="en">Style Sheet</title>

	<field name="title" dtmaxlength="40" dtrequired="true">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>
	<field name="description" dtmaxlength="1024" ftype="text" rows="3">
		<prompt xml:lang="en">Description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
	</field>
	<field name="resource" dtmaxlength="255" ftype="line" dtrequired="true">
		<prompt xml:lang="en">Resource</prompt>
		<prompt xml:lang="nl">Style Sheet</prompt>
	</field>
	<field name="media" ftype="enum" dtrequired="true">
		<prompt xml:lang="en">Media</prompt>
		<prompt xml:lang="nl">Media</prompt>
		<optionlist select="media" />
	</field>
</form-schema>