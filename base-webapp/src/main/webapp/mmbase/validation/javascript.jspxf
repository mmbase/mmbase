<jsp:root
    version="2.0"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0" >
  <jsp:directive.include file="/mmbase/jquery/jquery.jspx" />
  <mm:context>
    <mm:import id="__javascript" from="request" externid="org.mmbase.validation" />
    <mm:log> JS ${__javascript}</mm:log>
    <mm:isempty referid="__javascript">
      <mm:log>SCHIJT</mm:log>
      <mm:link page="/mmbase/validation/validation.js.jsp">
        <script src="${_}" type="text/javascript"><!-- help IE --></script>
      </mm:link>
      <mm:write request="org.mmbase.validation" value="yes" />
    </mm:isempty>
  </mm:context>
</jsp:root>
