<?xml version="1.0"?>
<project name="calendar"  default="package" basedir=".">
  <property name="project.name"      value="calendar" />
  <property name="project.comment"   value="MMBase Calendar application" />
  <property name="java.source.version" value="1.5" />

  <import file="../../applications/buildbase-include.xml" />
  <property file="build.properties.default" />


  <target name="icu.jar" description="Get ICU jar">

    <antcall target="download">
      <param name="sourcefile" value="${icu.loc}"/>
      <param name="destfile" value="${icu.dest}"/>
    </antcall>

    <echo message="${project.jars.dir}${project.jars.includes}" />
    <copy file="${icu.dest}" todir="${project.jar.dir}" preservelastmodified="true" />
  </target>



</project>
