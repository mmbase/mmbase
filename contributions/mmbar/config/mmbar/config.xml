<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mmbar PUBLIC "-//MMBase/DTD mmbar 1.0//EN" "http://www.mmbase.org/dtd/mmbarconfig_1_0.dtd">
<mmbarconfig>
 <basetesturl>http://localhost:8081/mmbar/tests/</basetesturl>
 <machinespecs os="osx" cpu="G4/768Mhz" server="Tomcat 5.0" database="MySQL" driver="mysqlconnector 3.0.11" java="jdk-1.4.2" />
 <writetests>
	<writetest name="NodeBridgeWrite1" action="start" class="org.mmbase.applications.mmbar.writetests.NodeBridgeWriteTest" count="100" threads="1">
		<description>This test inserts 100 simple nodes into the mmpo_basicobject builder using the bridge</description>
		<benchmark result="462.2" os="Linux" cpu="p3/1.26Ghz" server="Tomcat 5.0" database="MySQL" driver="mysqlconnector 3.0.11" java="jdk-1.4.2" />
		<benchmark result="705.6" os="Linux" cpu="p4/2.0Ghz" server="Tomcat 5.0" database="MySQL" driver="mysqlconnector 3.0.14" java="jdk-1.4.2" />
	</writetest>
	<writetest name="NodeBridgeWrite2" action="start" class="org.mmbase.applications.mmbar.writetests.NodeBridgeWriteTest" count="1000" threads="1" />
 </writetests>


 <readtests>
	<readtest name="NodeBridgeRead1" action="start" class="org.mmbase.applications.mmbar.readtests.NodeBridgeReadTest" count="100" threads="1">
		<description>This test reads 100 simple nodes from mmpo_basicobject builder using the bridge</description>
		<benchmark result="462.2" os="Linux" cpu="p3/1.26Ghz" server="Tomcat 5.0" database="MySQL" driver="mysqlconnector 3.0.11" java="jdk-1.4.2" />
	</readtest>
	<readtest name="NodeBridgeRead2" action="start" class="org.mmbase.applications.mmbar.readtests.NodeBridgeReadTest" count="1000" threads="1">
		<description>This test reads 1000 simple nodes from mmpo_basicobject builder using the bridge</description>
	</readtest>
	<readtest name="NodeBridgeRead3" action="start" class="org.mmbase.applications.mmbar.readtests.NodeBridgeReadTest" count="10000" threads="1">
		<description>This test reads 10000 simple nodes from mmpo_basicobject builder using the bridge</description>
	</readtest>
	<readtest name="NodeHttpRead1" action="start" class="org.mmbase.applications.mmbar.readtests.NodeHttpReadTest" count="100" threads="1">
		<description>This test reads 100 webpages each getting 1 node from mmpo_basicobject builder</description>
	</readtest>
	<readtest name="NodeHttpRead2" action="start" class="org.mmbase.applications.mmbar.readtests.NodeHttpReadTest" count="1000" threads="1">
		<description>This test reads 1000 webpages each getting 1 node from mmpo_basicobject builder</description>
	</readtest>
	<readtest name="NodeHttpRead3" action="start" class="org.mmbase.applications.mmbar.readtests.NodeHttpReadTest" count="10000" threads="1">
		<description>This test reads 10000 webpages each getting 1 node from mmpo_basicobject builder</description>
	</readtest>
</readtests>

 <mixedtests>
	<mixedtest name="NodeBridgeMixed1" action="start" class="org.mmbase.applications.mmbar.mixedtests.NodeBridgeMixedTest" count="100" threads="1" />
</mixedtests>

 <endurancetests>
	<endurancetest name="NodeBridgeEndurance1" action="start" class="org.mmbase.applications.mmbar.endurancetests.NodeBridgeEnduranceTest" count="100" threads="1" />
</endurancetests>

</mmbarconfig>
