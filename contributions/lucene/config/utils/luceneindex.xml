<?xml version="1.0"?>
<!DOCTYPE luceneindex PUBLIC "-//MMBase//DTD luceneindex config 1.0//EN" "http://www.mmbase.org/dtd/luceneindex_2_0.dtd">
<luceneindex>
  <index>
    <constraints type="documents">
      <field name="title" />
      <field name="subtitle" />
      <field name="intro" />
      <field name="body" />
      <field name="handle" />
      <field name="documentnummer" />
    </builder>
    <constraints type="cases">
      <field name="title" />
      <field name="subtitle" />
      <field name="intro" />
      <field name="body" />
      <field name="casusnummer" />
    </builder>
  </index>
</luceneindex>
