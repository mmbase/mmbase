<?xml version="1.0" encoding="UTF-8"?><project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>finalist</groupId>
  <artifactId>cmsc-portlets-ecard</artifactId>
  <packaging>war</packaging>
  <name>Ecard portlet</name>
  <parent>
        <groupId>finalist</groupId>
        <artifactId>portlets</artifactId>
        <version>1.6-SNAPSHOT</version>
  </parent>
  <dependencies>
    <dependency>
      <groupId>finalist</groupId>
      <artifactId>cmsc-portlets-gallery</artifactId>
      <version>${cmsc.version}</version>
    </dependency>
  </dependencies>
  <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native2ascii-maven-plugin</artifactId>
                <version>1.0-alpha-1</version>
                <configuration>
                    <dest>${basedir}/target/classes</dest>
                    <src>${basedir}/resources</src>
                </configuration>
                <executions>
                    <execution>
                    <id>native2ascii-utf8</id>
                        <goals>
                            <goal>native2ascii</goal>
                        </goals>
                        <configuration>
                             <encoding>UTF-8</encoding>
                             <includes>**/*.properties</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>                
                    <webResources>
                        <resource>
                            <targetPath>WEB-INF/config</targetPath>
                            <directory>${basedir}/config</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
  </build>
</project>