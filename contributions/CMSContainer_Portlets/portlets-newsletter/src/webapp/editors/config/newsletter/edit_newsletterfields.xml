<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_newsletterfields">
	<title xml:lang="nl">Algemeen</title>
	<title xml:lang="en">Generic</title>
	<title xml:lang="zh">概要</title>
	
	<field name="title" ftype="line"  dtrequired="false">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
		<prompt xml:lang="zh">标题</prompt>
	</field>
	<field name="description" dtmaxlength="1024" ftype="text" rows="4">
		<prompt xml:lang="en">Description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
		<prompt xml:lang="zh">描述</prompt>
	</field>
	<field name="publishdate">
		<prompt xml:lang="en">(First) publishdate</prompt>
		<prompt xml:lang="nl">(Eerste) publicatiedatum</prompt>
		<prompt xml:lang="zh">起始发布日期</prompt>
	</field>
	<field name="use_expirydate" ftype="enum">
		<prompt xml:lang="en">Use expirydate</prompt>
		<prompt xml:lang="nl">Gebruik verloopdatum</prompt>
		<prompt xml:lang="zh">使用过期</prompt>
		<optionlist select="boolean" />
	</field>
	<field name="expiredate">
		<prompt xml:lang="en">Expiredate</prompt>
		<prompt xml:lang="nl">Verloopdatum</prompt>
		<prompt xml:lang="zh">截止日期</prompt>
	</field>
	<field name="creationdate" ftype="data">
		<prompt xml:lang="en">Creationdate</prompt>
		<prompt xml:lang="nl">Aangemaakt</prompt>
		<prompt xml:lang="zh">创建时间</prompt>
	</field>
	<field name="lastmodifieddate" ftype="data">
		<prompt xml:lang="en">Lastmodifieddate</prompt>
		<prompt xml:lang="nl">Gewijzigd</prompt>
		<prompt xml:lang="zh">最后修改时间</prompt>
	</field>
	<field name="lastmodifier" ftype="data">
		<prompt xml:lang="en">Lastmodifier</prompt>
		<prompt xml:lang="nl">Gewijzigd door</prompt>
		<prompt xml:lang="zh">最后修改人</prompt>
		<optionlist select="boolean" />
	</field>
</form-schema>