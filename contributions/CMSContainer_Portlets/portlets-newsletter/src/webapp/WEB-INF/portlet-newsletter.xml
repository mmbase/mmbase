<portlet-app
      xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
      version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

   <portlet>
      <description>a newsletter portlet</description>
      <portlet-name>newslettercontentportlet</portlet-name>
      <display-name>Newsletter Content Portlet</display-name>
      <portlet-class>
         com.finalist.portlets.newsletter.NewsletterContentPortlet
      </portlet-class>
      <init-param>
         <name>template.edit_defaults</name>
         <value>newsletter/newslettercontent.jsp</value>
      </init-param>
      <init-param>
         <name>template.help</name>
         <value>newsletter/newslettercontent.jsp</value>
      </init-param>
      <supports>
         <mime-type>text/*</mime-type>
         <portlet-mode>VIEW</portlet-mode>
         <portlet-mode>HELP</portlet-mode>
         <portlet-mode>EDIT_DEFAULTS</portlet-mode>
         <portlet-mode>DELETE</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <supported-locale>nl</supported-locale>
      <resource-bundle>portlets-newslettercontent</resource-bundle>
      <portlet-info>
         <title>newsletter Portlet</title>
         <short-title>newsletter</short-title>
         <keywords>newsletter</keywords>
      </portlet-info>
   </portlet>


   <portlet>
      <description>Newsletter Subscription Portlet</description>
      <portlet-name>newslettersubscriptionportlet</portlet-name>
      <display-name>Newsletter Subscription Portlet</display-name>
      <portlet-class>
         com.finalist.portlets.newsletter.NewsletterSubscriptionPortlet
      </portlet-class>
      <init-param>
         <name>template.edit_defaults</name>
         <value>newsletter/newslettersubscription.jsp</value>
      </init-param>
      <init-param>
         <name>template.help</name>
         <value>newsletter/newslettersubscription.jsp</value>
      </init-param>
      <init-param>
         <name>template.options</name>
         <value>newsletter/subscription/options.jsp</value>
      </init-param>
      <init-param>
         <name>template.subscribe</name>
         <value>newsletter/subscription/subscribe.jsp</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
         <portlet-mode>EDIT</portlet-mode>
         <portlet-mode>HELP</portlet-mode>
         <portlet-mode>EDIT_DEFAULTS</portlet-mode>
         <portlet-mode>DELETE</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <supported-locale>nl</supported-locale>
      <resource-bundle>portlets-newslettersubscription</resource-bundle>
      <portlet-info>
         <title>Newsletter Subscription Portlet</title>
         <short-title>newslettersubscription</short-title>
         <keywords>newslettersubscription</keywords>
      </portlet-info>
   </portlet>
   <portlet>
      <description>a unsubscribeportlet portlet</description>
      <portlet-name>unsubscribeportlet</portlet-name>
      <display-name>unsubscribeportlet Content Portlet</display-name>
      <portlet-class>
         com.finalist.portlets.newsletter.UnsubscribePortlet
      </portlet-class>
      <init-param>
         <name>template.edit_defaults</name>
         <value>unsubscribe/unsubscribe.jsp</value>
      </init-param>
      <init-param>
         <name>template.help</name>
         <value>unsubscribe/unsubscribe.jsp</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
         <portlet-mode>HELP</portlet-mode>
         <portlet-mode>EDIT_DEFAULTS</portlet-mode>
         <portlet-mode>DELETE</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <supported-locale>nl</supported-locale>
      <resource-bundle>portlets-unsubscribe</resource-bundle>
      <portlet-info>
         <title>unsubscribe Portlet</title>
         <short-title>unsubscribe</short-title>
         <keywords>unsubscribe</keywords>
      </portlet-info>
   </portlet>
</portlet-app>