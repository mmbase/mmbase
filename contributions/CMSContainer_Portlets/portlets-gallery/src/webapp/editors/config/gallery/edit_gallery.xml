<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_gallery">
	<title xml:lang="nl">Galerij</title>
	<title xml:lang="en">Gallery</title>
	<title xml:lang="zh">相册</title>

	<field name="title" dtmaxlength="255" ftype="line" dtrequired="true">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
		<prompt xml:lang="zh">标题</prompt>
	</field>
	<field name="intro" dtmaxlength="64000" ftype="html" dtrequired="false" rows="20">
		<prompt xml:lang="en">Intro</prompt>
		<prompt xml:lang="nl">Introductie</prompt>
		<prompt xml:lang="zh">简介</prompt>
	</field>
	
	<list include="config/images/search_gallery_imagerel_images.xml" />
</form-schema>