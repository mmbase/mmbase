<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="posters" maintainer="mmbase.org" version="1" extends="object">

  <names>
    <singular xml:lang="en">Poster</singular>
    <plural xml:lang="en">Posters</plural>
  </names>

  <descriptions>
    <description xml:lang="en">Posters in a forum</description>
  </descriptions>

  <fieldlist>
    <field name="firstname">
      <gui>
        <guiname xml:lang="nl">Voornaam</guiname>
        <guiname xml:lang="en">FirstName</guiname>
        <guiname xml:lang="fr">firstname</guiname>
      </gui>
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="32" state="persistent">STRING</type>
      </db>
    </field>

    <field name="lastname">
      <gui>
        <guiname xml:lang="nl">Achternaam</guiname>
        <guiname xml:lang="en">LastName</guiname>
        <guiname xml:lang="fr">nomDeFamille</guiname>
      </gui>
      <editor>
        <positions>
          <list>2</list>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="32" state="persistent">STRING</type>
      </db>
    </field>

    <field name="email">
      <gui>
        <guiname xml:lang="nl">Email</guiname>
        <guiname xml:lang="en">Email</guiname>
        <guiname xml:lang="fr">Email</guiname>
      </gui>
      <editor>
        <positions>
          <list>3</list>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="255" state="persistent">STRING</type>
      </db>
    </field>

    <field name="account">
      <gui>
        <guiname xml:lang="nl">Account</guiname>
        <guiname xml:lang="en">Account</guiname>
        <guiname xml:lang="fr">Compte</guiname>
      </gui>
      <editor>
        <positions>
          <list>4</list>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="true" size="128" state="persistent">STRING</type>
      </db>
    </field>

    <field name="password">
      <gui>
        <guiname xml:lang="nl">Wachtwoord</guiname>
        <guiname xml:lang="en">Password</guiname>
      </gui>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <password value="true" />
      </datatype>
      <db>
        <type key="false" notnull="true" size="128" state="persistent">STRING</type>
      </db>
    </field>

    <field name="description">
      <gui>
        <guiname xml:lang="nl">Opmerkingen</guiname>
        <guiname xml:lang="en">Remarks</guiname>
      </gui>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="true" size="1024" state="persistent">STRING</type>
      </db>
    </field>

    <field name="postcount">
      <gui>
        <guiname xml:lang="en">postcount</guiname>
      </gui>
      <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

    <field name="level">
      <gui>
        <guiname xml:lang="en">level</guiname>
      </gui>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="64" state="persistent">STRING</type>
      </db>
    </field>

    <field name="gender">
      <gui>
        <guiname xml:lang="en">gender</guiname>
      </gui>
      <editor>
        <positions>
          <input>12</input>
          <list>-1</list>
          <search>12</search>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="10" state="persistent">STRING</type>
      </db>
    </field>

    <field name="birthdate">
      <gui>
        <guiname xml:lang="en">birthdate</guiname>
      </gui>
      <datatype base="living-birthdate" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

    <field name="location">
      <gui>
        <guiname xml:lang="en">location</guiname>
      </gui>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="128" state="persistent">STRING</type>
      </db>
    </field>

    <field name="firstlogin">
      <gui>
        <guiname xml:lang="en">firstlogin</guiname>
      </gui>
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

    <field name="lastseen">
      <gui>
        <guiname xml:lang="en">lastseen</guiname>
      </gui>
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

    <field name="language">
      <gui>
        <guiname xml:lang="en">language</guiname>
      </gui>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      <db>
        <type key="false" notnull="false" size="64" state="persistent">STRING</type>
      </db>
    </field>

    <field name="state">
      <gui>
        <guiname xml:lang="en">state</guiname>
      </gui>
      <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

    <field name="registrationdate">
      <gui>
        <guiname xml:lang="en">date of registration</guiname>
      </gui>
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>

  </fieldlist>
</builder>
