<?xml version="1.0" encoding="UTF-8"?>
<builder 
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
                        http://www.mmbase.org/xmlns/builder.xsd"                        
    name="forumprivatemessage" maintainer="mmbase.org" version="0" extends="object">


  <names>
    <singular xml:lang="en">Forum private message</singular>
    <plural xml:lang="en">Forum private messages</plural>
   </names>

  <descriptions>
    <description xml:lang="en">Forum private message, specially designed to work with the forum (its not a full mail system!)</description>
  </descriptions>

  <fieldlist>
    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Subject</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input>
          <list>1</list>
          <search>1</search>
        </positions>
      </editor>
      <db>
        <name>subject</name>
        <type key="false" notnull="true" size="255" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Poster</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>2</input>
          <list>-1</list>
          <search>2</search>
        </positions>
      </editor>
      <db>
        <name>poster</name>
        <type key="false" notnull="false" size="64" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
         <guiname xml:lang="en">Mood</guiname>
          <guitype>field</guitype>
      </gui>
      <editor>
        <positions>
          <input>3</input>
          <list>-1</list>
          <search>3</search>
        </positions>
      </editor>
      <db>
        <name>mood</name>
        <type key="false" notnull="false" size="32" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Text</guiname>
        <guitype>field</guitype>
      </gui>
      <editor>
        <positions>
          <input>4</input>
          <list>-1</list>
          <search>4</search>
        </positions>
      </editor>
      <db>
        <name>body</name>
        <type key="false" notnull="false" size="64000" state="persistent">STRING</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">createtime</guiname>
        <guitype>eventtime</guitype>
      </gui>
      <editor>
        <positions>
          <input>8</input>
          <list>-1</list>
          <search>8</search>
        </positions>
      </editor>
      <db>
        <name>createtime</name>
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">edittime</guiname>
        <guitype>integer</guitype>
      </gui>
      <editor>
         <positions>
           <input>10</input>
           <list>-1</list>
           <search>10</search>
         </positions>
       </editor>
      <db>
        <name>edittime</name>
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">viewstate</guiname>
        <guitype>integer</guitype>
      </gui>
      <editor>
        <positions>
          <input>10</input>
          <list>-1</list>
          <search>10</search>
        </positions>
      </editor>
      <db>
        <name>viewstate</name>
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
      </descriptions>
      <gui>
        <guiname xml:lang="en">fullname</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>11</input>
          <list>-1</list>
          <search>11</search>
        </positions>
      </editor>
      <db>
        <name">fullname</name>
        <type key="false" notnull="false" size="128" state="persistent">STRING</type>
      </db>
    </field>

  </fieldlist>
</builder>
