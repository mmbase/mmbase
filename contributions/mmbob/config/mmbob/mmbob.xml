    <generatedata role="body" file="generate/body.txt" tokenizer=",!? " />
    <generatedata role="smileys" file="generate/smileys.txt" tokenizer=" \n\r" />
    <generatedata role="firstnames" file="generate/firstnames.txt" tokenizer="," />
    <generatedata role="surnames" file="generate/surnames.txt" tokenizer="," />
    <generatedata role="providers" file="generate/providers.txt" tokenizer="," />
    <generatedata role="places" file="generate/places.txt" tokenizer="," />
    <generatedata role="areas" file="generate/areas.txt" tokenizer="," />
    <generatedata role="punctuation" file="generate/punctuation.txt" tokenizer=" " />

    <urls externalroot="http://localhost:9000/mmbob/" root="/mmbob/" />

    <preloadchangedthreads days="90" />
    <swapoutunusedthreads hours="12" />

    <accountcreation type="open" />
    <accountremoval type="open" />
    <loginmode type="open" />
    <logoutmode type="open" />

    <guestreadmode type="open" />
    <guestwritemode type="open" />

    <avatars>
      <upload enable="true"/>
      <gallery enable="true"/>
    </avatars>

    <email from="daniel@xs4all.nl" />
    <emailtexts>
	<emailtext role="updateheader">
Hai $account ($firstname $lastname),

</emailtext>
	<emailtext role="updatedivider">----------------------------------------

</emailtext>
	<emailtext role="updatethreadchange">$lastposter has just replied a thread your subscribed to : '$lastsubject'

