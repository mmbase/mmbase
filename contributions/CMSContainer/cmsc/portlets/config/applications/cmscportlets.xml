<?xml version="1.0"?>
<!DOCTYPE application PUBLIC "-//MMBase/DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="cmscportlets" maintainer="finalist.com" version="1" auto-deploy="true">
   <requirements>
      <requires name="contentrepository" maintainer="finalist.com" version="3" type="application"/>
      <requires name="sitemanagement" maintainer="finalist.com" version="1" type="application"/>
   </requirements>

   <neededbuilderlist>
    </neededbuilderlist>

    <neededreldeflist>
   </neededreldeflist>

   <allowedrelationlist>
   </allowedrelationlist>

   <datasourcelist>
   <!-- A testdata/back up skelet is generated. If the testdata is not available, it will still work. -->
      <datasource builder="editwizards" path="cmscportlets/editwizards.xml" />
      <datasource builder="properties" path="cmscportlets/properties.xml" />
      <datasource builder="popupinfo" path="cmscportlets/popupinfo.xml" />
      <datasource builder="portletdefinition" path="cmscportlets/portletdefinition.xml"/>
      <datasource builder="portlet" path="cmscportlets/portlet.xml"/>
      <datasource builder="portletparameter" path="cmscportlets/portletparameter.xml"/>
      <datasource builder="nodeparameter" path="cmscportlets/nodeparameter.xml"/>
      <datasource builder="view" path="cmscportlets/view.xml"/>
   </datasourcelist>

   <relationsourcelist>
   <!-- A testdata/backup skelet is generated for relation data. If the testdata is not available, it will still work. -->
      <relationsource builder="allowrel" path="cmscportlets/allowrel.xml"/>
      <relationsource builder="insrel" path="cmscportlets/insrel.xml"/>
      <relationsource builder="posrel" path="cmscportlets/posrel.xml"/>
      <relationsource builder="definitionrel" path="cmscportlets/definitionrel.xml"/>
      <relationsource builder="viewrel" path="cmscportlets/viewrel.xml"/>
      <relationsource builder="parameterrel" path="cmscportlets/parameterrel.xml"/>
   </relationsourcelist>

   <contextsourcelist>
      <contextsource goal="backup" type="depth" path="cmscportlets/backup.xml"/>
   </contextsourcelist>

   <description><![CDATA[Installs the cmscportlets. Included are all the builders.]]></description>
   <install-notice><![CDATA[You have installed the cmscportlets.]]></install-notice>
</application>