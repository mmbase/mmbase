<?xml version="1.0" encoding="UTF-8"?>
<builder extends="contentelement" maintainer="finalist.com" name="faqitem"
    version="1" xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd">
    <names>
        <singular xml:lang="nl">Veelgestelde vraag</singular>
        <singular xml:lang="en">FAQ item</singular>
        <singular xml:lang="zh">FAQ项</singular>
        <plural xml:lang="nl">Veel gestelde vragen</plural>
        <plural xml:lang="en">FAQ items</plural>
        <plural xml:lang="zh">FAQ项</plural>
    </names>
    <fieldlist>
        <field name="question">
            <gui>
                <guiname xml:lang="nl">Vraag</guiname>
                <guiname xml:lang="en">Question</guiname>
                <guiname xml:lang="zh">问题</guiname>
            </gui>
            <editor>
                <positions>
                    <input>4</input>
                    <list>4</list>
                    <search>4</search>
                </positions>
            </editor>
            <datatype base="cmscrichtext" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="1024"/>
            </datatype>
        </field>
        <field name="body">
            <gui>
                <guiname xml:lang="nl">Tekst</guiname>
                <guiname xml:lang="en">Body</guiname>
                <guiname xml:lang="zh">主体</guiname>
            </gui>
            <editor>
                <positions>
                    <input>5</input>
                </positions>
            </editor>
            <datatype base="cmscrichtext" xmlns="http://www.mmbase.org/xmlns/datatypes">
                <maxLength value="512000"/>
            </datatype>
        </field>
    </fieldlist>
</builder>
