<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_article">
	<title xml:lang="nl">Artikel</title>
	<title xml:lang="en">Article</title>

	<field name="title" ftype="line" dtrequired="true">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>
	<field name="subtitle" ftype="line">
		<prompt xml:lang="en">Subtitle</prompt>
		<prompt xml:lang="nl">Ondertitel</prompt>
	</field>
	<field name="intro" ftype="html" dtrequired="false" rows="8">
		<prompt xml:lang="en">Intro</prompt>
		<prompt xml:lang="nl">Introductie</prompt>
	</field>
	<field name="body" ftype="html" dtrequired="false" rows="30">
		<prompt xml:lang="en">Body</prompt>
		<prompt xml:lang="nl">Tekst</prompt>
	</field>
	<list include="config/article/search_article_posrel_article.xml" />
	<list include="config/attachments/search_article_posrel_attachments.xml" />
	<list include="config/images/search_article_imagerel_images.xml" />
	<list include="config/urls/search_article_posrel_urls.xml" />
</form-schema>