<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_faqitem">
	<title xml:lang="nl">Veelgestelde vraag</title>
	<title xml:lang="en">Frequently asked question</title>

	<field name="title" dtmaxlength="255" ftype="line" dtrequired="true">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>
	<field name="question" dtmaxlength="1024" ftype="html" dtrequired="false" rows="15">
		<prompt xml:lang="en">Question</prompt>
		<prompt xml:lang="nl">Vraag</prompt>
	</field>
	<field name="body" dtmaxlength="64000" ftype="html" dtrequired="false" rows="20">
		<prompt xml:lang="en">Body</prompt>
		<prompt xml:lang="nl">Tekst</prompt>
	</field>
	<list include="config/attachments/search_faqitem_posrel_attachments.xml" />
	<list include="config/faqcategory/search_faqitem_related_faqcategory.xml" />
	<list include="config/images/search_faqitem_imagerel_images.xml" />
	<list include="config/urls/search_faqitem_posrel_urls.xml" />
</form-schema>