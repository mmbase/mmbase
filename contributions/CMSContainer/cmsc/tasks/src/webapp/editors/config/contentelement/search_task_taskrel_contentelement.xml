   <command name="startwizard" inline="true" wizardname="config/contentelement/contentelement" objectnumber="new">
       <prompt>Nieuw</prompt>
   </command>

   <action type="create">
      <relation destinationtype="contentelement" role="taskrel">
      </relation>
