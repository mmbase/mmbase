<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
                        http://www.mmbase.org/xmlns/builder.xsd"
	name="imageinlinerel" maintainer="wiab.org" version="1" extends="insrel">

	<status>active</status>
	<class>com.finalist.cmsc.richtext.builders.InlineRel</class>
	<searchage>1000</searchage>

	<names>
		<!-- singles per language as defined by ISO 639 -->
		<singular xml:lang="nl">AfbeeldingInlineRelatie</singular>
		<singular xml:lang="en">imageinlinerel</singular>
		<!-- multiple per language as defined by ISO 639 -->
		<plural xml:lang="nl">AfbeeldingInlineRelaties</plural>
		<plural xml:lang="en">imageinlinerels</plural>
	</names>

	<descriptions>
		<description xml:lang="nl">
			Een relatie binnen een richtextfield die beschrijft hoe en waar een plaatje getoond moet
			worden.
		</description>
		<description xml:lang="en"></description>
	</descriptions>

	<properties></properties>

	<fieldlist>
		<field>
			<gui>
				<guiname xml:lang="nl">ReferentieId</guiname>
				<guiname xml:lang="en">ReferId</guiname>
			</gui>
			<editor>
				<positions>
					<input>5</input>
					<list>5</list>
					<search>5</search>
				</positions>
			</editor>
			<datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" />
			<db>
				<name>referid</name>
				<type state="persistent" size="20" notnull="true" key="false">STRING</type>
			</db>
		</field>

		<field>
			<gui>
				<guiname xml:lang="fr">mesure</guiname>
				<guiname xml:lang="nl">grootte</guiname>
				<guiname xml:lang="en">size</guiname>
				<guiname xml:lang="us">size</guiname>
			</gui>
			<editor>
				<positions>
					<input>2</input>
					<list>2</list>
					<search>2</search>
				</positions>
			</editor>
			<db>
				<name>size</name>
				<type state="persistent" notnull="true" key="false">INTEGER</type>
			</db>
		</field>

		<field>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="fr">lï¿½gende</guiname>
				<guiname xml:lang="nl">bijschrift</guiname>
				<guiname xml:lang="en">legend</guiname>
				<guiname xml:lang="us">legend</guiname>
			</gui>
			<editor>
				<positions>
					<input>4</input>
					<list>3</list>
					<search>4</search>
				</positions>
			</editor>
			<db>
				<name>legend</name>
				<type state="persistent" notnull="false" key="false">INTEGER</type>
			</db>
		</field>
	</fieldlist>

</builder>