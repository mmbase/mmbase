<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>finalist</groupId>
    <artifactId>basesystem</artifactId>
    <version>1.6.0</version>
    <packaging>pom</packaging>
    <name>basesystem</name>
    <properties>
        <cmsc.version>1.6.0</cmsc.version>
        <cmscmodules.version>1.6.0</cmscmodules.version>
        <mmbase.version>1.8.6-20080927</mmbase.version>
        <mmbasermmci.version>1.8.2-20061020</mmbasermmci.version>
        <pluto.version>1.0.1</pluto.version>
    </properties>
    <modules>
        <module>community</module>
        <module>live-staging</module>
        <module>single</module>
    </modules>
    <repositories>
        <repository>
            <id>m1-local-reps</id>
            <name>Maven1 Repo</name>
            <url>file://${user.home}/.maven/repository</url>
            <layout>legacy</layout>
        </repository>
        <!-- use finalist cmsc repo-->
        <repository>
            <id>cmsc-reps</id>
            <name>Cmsc maven repository</name>
            <url>http://maven.finalist.hk/content/groups/cmsc</url>
            <layout>legacy</layout>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
          <id>finalist</id>
          <name>finalist.cn Repository</name>
          <url>http://maven.finalist.hk/content/groups/public</url>
          <layout>default</layout>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <releases>
            <updatePolicy>never</updatePolicy>
          </releases>
        </pluginRepository>
      </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-modules-tasks</artifactId>
            <version>${cmscmodules.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-modules-versioning</artifactId>
            <version>${cmscmodules.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-modules-linkvalidator</artifactId>
            <version>${cmscmodules.version}</version>
            <type>mmbase-module</type>
        </dependency>

        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-modules-directreaction</artifactId>
            <version>${cmscmodules.version}</version>
            <type>mmbase-module</type>
        </dependency>

        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-modules-alias</artifactId>
            <version>${cmscmodules.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-basicmodel</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-contentrepository</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-edit-webapp</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-maintenance</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-portal</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-portlets</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-richtext</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-search</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-security</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-servicemanagement</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-sitemanagement</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-taglib</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>finalist</groupId>
            <artifactId>cmsc-utilities</artifactId>
            <version>${cmsc.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase</artifactId>
            <version>${mmbase.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase-cloudcontext</artifactId>
            <version>${mmbase.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase-crontab</artifactId>
            <version>${mmbase.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase-dove</artifactId>
            <version>${mmbase.version}</version>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase-editwizard</artifactId>
            <version>${mmbase.version}</version>
            <type>mmbase-module</type>
        </dependency>
        <dependency>
            <groupId>mmbase</groupId>
            <artifactId>mmbase-email</artifactId>
            <version>${mmbase.version}</version>
            <type>mmbase-module</type>
        </dependency>
    </dependencies>
    <build>

        <plugins>

            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1-alpha-2</version>
                <configuration>
                    <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
                    <archiveClasses>true</archiveClasses>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
            <plugin>
                <groupId>finalist.maven.plugins</groupId>
                <artifactId>maven-mmbase-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>mmbase</goal>
                        </goals>
                        <configuration>
                            <mmbaseOverlays>
                                <mmbaseOverlay>
                                    <groupId>mmbase</groupId>
                                    <artifactId>mmbase</artifactId>
                                    <version>${mmbase.version}</version>
                                    <myProperties>
                                        <property>
                                            <name>config.bundle</name>
                                            <value>false</value>
                                        </property>
                                    </myProperties>
                                </mmbaseOverlay>
                                <mmbaseOverlay>
                                    <groupId>mmbase</groupId>
                                    <artifactId>mmbase-cloudcontext</artifactId>
                                    <version>${mmbase.version}</version>
                                    <myProperties>
                                        <property>
                                            <name>config.bundle</name>
                                            <value>false</value>
                                        </property>
                                        <property>
                                            <name>templates.path</name>
                                            <value>mmbase/security</value>
                                        </property>
                                    </myProperties>
                                </mmbaseOverlay>
                                <mmbaseOverlay>
                                    <groupId>mmbase</groupId>
                                    <artifactId>mmbase-crontab</artifactId>
                                    <version>${mmbase.version}</version>
                                    <myProperties>
                                        <property>
                                            <name>config.bundle</name>
                                            <value>false</value>
                                        </property>
                                        <property>
                                            <name>templates.path</name>
                                            <value>mmbase/crontab</value>
                                        </property>
                                    </myProperties>
                                </mmbaseOverlay>
                                <mmbaseOverlay>
                                    <groupId>mmbase</groupId>
                                    <artifactId>mmbase-editwizard</artifactId>
                                    <version>${mmbase.version}</version>
                                    <myProperties>
                                        <property>
                                            <name>config.bundle</name>
                                            <value>false</value>
                                        </property>
                                        <property>
                                            <name>templates.path</name>
                                            <value>mmbase/edit/wizard</value>
                                        </property>
                                    </myProperties>
                                </mmbaseOverlay>
                                <mmbaseOverlay>
                                    <groupId>mmbase</groupId>
                                    <artifactId>mmbase-email</artifactId>
                                    <version>${mmbase.version}</version>
                                    <myProperties>
                                        <property>
                                            <name>config.bundle</name>
                                            <value>false</value>
                                        </property>
                                    </myProperties>
                                </mmbaseOverlay>
                            </mmbaseOverlays>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>