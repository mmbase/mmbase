									<version>${mmbase.version}</version>									
									<myProperties>
										<property>
											<name>config.bundle</name>
											<value>false</value>
										</property>						
									</myProperties>
								</mmbaseOverlay>
							</mmbaseOverlays>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			<plugin>
                <groupId>finalist.maven.plugins</groupId>
                <artifactId>maven-mmbasejar-plugin</artifactId>
				<version>1.0</version>
                <executions>
                    <execution>
						<phase>test</phase>
