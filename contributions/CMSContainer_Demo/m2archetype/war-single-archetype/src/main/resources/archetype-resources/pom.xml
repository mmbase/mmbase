  <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>			
			<plugin>
                <groupId>finalist.maven.plugins</groupId>
                <artifactId>maven-mmbase-plugin</artifactId>
				<version>1.0</version>
                <executions>
                    <execution>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>mmbase</goal>
                        </goals>
                        <configuration>
							<mmbaseOverlays>
								<mmbaseOverlay>
									<groupId>mmbase</groupId>
									<artifactId>mmbase</artifactId>
									<version>${mmbase.version}</version>									
									<myProperties>
										<property>
											<name>config.bundle</name>
											<value>false</value>
										</property>																			
									</myProperties>
								</mmbaseOverlay>
								<mmbaseOverlay>
									<groupId>mmbase</groupId>
									<artifactId>mmbase-cloudcontext</artifactId>
									<version>${mmbase.version}</version>									
									<myProperties>
										<property>
											<name>config.bundle</name>
											<value>false</value>
										</property>										
										<property>
											<name>templates.path</name>
											<value>mmbase/security</value>
										</property>
									</myProperties>
								</mmbaseOverlay>
								<mmbaseOverlay>
									<groupId>mmbase</groupId>
									<artifactId>mmbase-crontab</artifactId>
									<version>${mmbase.version}</version>									
									<myProperties>
