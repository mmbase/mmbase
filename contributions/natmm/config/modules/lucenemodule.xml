<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "//MMBase - module//" "http://www.mmbase.org/dtd/module.dtd">
<module>

	<status>inactive</status>

   <classfile>com.finalist.mmplaza.module.search.LuceneModule</classfile>

	<properties>
      <!-- Minutes how long the thread will sleep between index actions -->
      <property name="interval">1440</property>
      
      <property name="starthour">1</property>
      
      <!-- Do or do not index on startup -->
      <property name="index-on-startup">true</property>
      <!-- seconds to wait before first index run -->
      <property name="index-on-startup-wait">10</property>
       
      <!-- Definition file for index, what is indexed from where -->
      <property name="configfile">lucenedatadefinition.xml</property>
	</properties>

</module>
