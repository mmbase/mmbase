<?xml version="1.0"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<!-- groups -->
<builder version="0" name="groups" maintainer="mmbase.org" extends="object">
    <searchage>90</searchage>
    <names>
        <singular xml:lang="nl">Groep</singular>
        <singular xml:lang="en">Group</singular>
        <plural xml:lang="nl">Groepen</plural>
        <plural xml:lang="en">Groups</plural>
    </names>
    <descriptions>
        <description xml:lang="nl">verschillende groepen van mensen</description>
        <description xml:lang="en">different types of groups of people</description>
    </descriptions>
    <properties>
        <property name="max-nodes-from-query">1000</property>
    </properties>
    <fieldlist>
        <field>
            <descriptions/>
            <gui>
                <guiname xml:lang="nl">Naam</guiname>
                <guiname xml:lang="en">Name</guiname>
                <guitype>string</guitype>
            </gui>
            <editor>
                <positions>
                    <input>1</input>
                    <list>1</list>
                    <search>1</search>
                </positions>
            </editor>
            <db>
                <name>name</name>
                <type size="50" key="false" state="persistent" notnull="false">STRING</type>
            </db>
        </field>
        <field>
            <descriptions/>
            <gui>
                <guiname xml:lang="nl">Omschrijving</guiname>
                <guiname xml:lang="en">Description</guiname>
                <guitype>field</guitype>
            </gui>
            <editor>
                <positions>
                    <input>2</input>
                    <list>-1</list>
                    <search>2</search>
                </positions>
            </editor>
            <db>
                <name>description</name>
                <type size="2048" key="false" state="persistent" notnull="false">STRING</type>
            </db>
        </field>
        <field>
            <descriptions/>
            <gui>
                <guiname xml:lang="nl">Externe ID</guiname>
                <guiname xml:lang="us">External ID</guiname>
                <guitype>string</guitype>
            </gui>
            <editor>
                <positions>
                    <input>8</input>
                    <list>-1</list>
                    <search>8</search>
                </positions>
            </editor>
            <db>
                <name>externid</name>
                <type size="32" key="false" state="persistent" notnull="false">STRING</type>
            </db>
        </field>
    </fieldlist>
</builder>
