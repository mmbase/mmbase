<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="education_pools" minoccurs="1" maxoccurs="*"
   orderby="field[@name='pos']" ordertype="number" hidecommand="move-up|move-down">
	<title>categorie</title>
	<item>
		<title>categorie</title>
		<description></description>
		<field name="name" ftype="data">
			<prompt>naam</prompt>
		</field>
	 </item>
	<action type="create">
		<relation role="posrel">
			<object type="education_pools" />
		</relation>
	</action>
	<command name="search" nodepath="education_pools" fields="name,description" orderby="name" age="-1">
    	<prompt>zoek categorie</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>name</search-fields>
		</search-filter>
		<search-filter>
			<name>omschrijving bevat</name>
			<search-fields>description</search-fields>
		</search-filter>
	</command>
</list>
