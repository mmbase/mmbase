<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="images"  minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>afbeelding</title>	
	<item displaytype="image">
		<field name="titel" ftype="data"><prompt>titel</prompt></field>
		<field name="titel_fra" ftype="data"><prompt>filenaam</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field ftype="startwizard" wizardname="config/images/images" />
	</item>
	<command name="search" nodepath="images" fields="titel_fra,titel,alt_tekst,titel_de,metatags" orderby="titel" age="-1">
		<prompt>zoek afbeeldingen</prompt>
		<search-filter>
			<name>titel bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
      <search-filter>
			<name>filenaam bevat</name>
			<search-fields>titel_fra</search-fields>
		</search-filter>
      <search-filter>
         <name>categorie</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
		<search-filter>
			<name>alt tekst bevat</name>
			<search-fields>alt_tekst</search-fields>
		</search-filter>
      <search-filter>
			<name>sitemanager nummer</name>
			<search-fields>titel_de</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/images/images" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="images" role="posrel">
	      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

