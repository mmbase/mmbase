<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-item">
    <title>product of dienst</title>
    <task-description>Use this wizard to edit a product.</task-description>
    <action include="config/products/create_products.xml" />
    <action include="config/products/delete_products.xml" />
    <action include="config/products/load_products.xml" />
    <steps>
        <step form-schema="edit_products" />
    </steps>
    <form-schema id="edit_products">
        <title></title>
        <field name="name" ftype="html" rows="24">
            <prompt>naam</prompt>
        </field>
        <field name="description" ftype="html" rows="40">
              <prompt>dienstenniveau</prompt>
        </field>
        <list include="config/producttypes/add_producttypes_posrel.xml" />
        <list include="config/locations/add_locations_readmore_products.xml" />
        <list include="config/shopitems/add_shopitems_posrel.xml" />
    </form-schema>
</wizard-schema>
