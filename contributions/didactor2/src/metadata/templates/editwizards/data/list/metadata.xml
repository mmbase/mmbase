<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="metadata" role="related" minoccurs="0" maxoccurs="*">
    <title>Bijbehorende Metadata</title>
    <item>
       <field fdatapath="object/relation[@role='related']/object[@type='metadefinition']/field[@name='name']" ftype="data">
            <prompt>Naam</prompt>
        </field>
       <field fdatapath="object/relation[@role='related']/object[@type='metadefinition']/field[@name='type']" ftype="data">
            <prompt>Type</prompt>
        </field>
       <field fdatapath="object/relation[@role='related']/object[@type='metadefinition']/field[@name='maxvalues']" ftype="data">
            <prompt>Maxvalues</prompt>
        </field>
       <field fdatapath="object/relation[@role='related']/object[@type='metadefinition']/field[@name='handler']" ftype="data">
            <prompt>Handler</prompt>
        </field>
        <field name="value" ftype="data">
            <prompt>Waarde</prompt>
        </field>
 
        <list extends="list/metalangstring.xml"/>
        <list extends="list/metadate.xml"/>
        <list extends="list/metavocabulary.xml"/>
    </item>
 

     <action type="create">
        <relation destinationtype="metadata" role="related">
            <object type="metadata">
              <relation destinationtype="metadefinition" role="related"/>
              <relation destinationtype="metavalue" role="posrel"/>
            </object>
        </relation>
    </action>

    <action type="load">
      <relation destinationtype="metadefinition" role="related">
        <object type="metadefinition"/>
      </relation>
      <relation destinationtype="metavalue" role="posrel">
        <object type="metavalue"/>
      </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="metalangstringwithdefinition" objectnumber="new">
      <prompt>Nieuwe tekenreeks toevoegen</prompt>
    </command>
    <command name="startwizard" inline="true" wizardname="metadatewithdefinition" objectnumber="new">
      <prompt>Nieuwe duur of datumtijd toevoegen</prompt>
    </command>
    <command name="startwizard" inline="true" wizardname="metavocabularywithdefinition" objectnumber="new">
      <prompt>Nieuwe vocabulary selecteren</prompt>
    </command>

    <command name="search" nodepath="metadefinition" fields="name,type,handler" age="7" orderby="number" directions="down" >
      <prompt>Zoeken naar metadata definities</prompt>
      <search-filter>
        <name>Naam bevat</name>
        <search-fields>name</search-fields>
      </search-filter>
      <search-filter>
        <name>Type bevat</name>
        <search-fields>type</search-fields>
      </search-filter>
      <search-filter>
        <name>Handler</name>
        <search-fields>handler</search-fields>
      </search-filter>
    </command>
</list>
