<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title>Metavocabulary Editor</title>

  <action type="load">
    <field name="value" />
    <relation destinationtype="metavocabulary" role="posrel" />
    <relation destinationtype="metadefinition" role="constraints" />
  </action>

  <action type="create">
    <object type="metadata"/>
  </action>

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Metadata Invoeren</title>

    <list extends="config/metadefinition/metadefinition-inmetavocabulary.xml"/>

    <list destination="metavocabulary" role="posrel" minoccurs="0" maxoccurs="*">
      <title>Bijbehorende Metavocabulary</title>
      <item>
        <field name="value" ftype="data">
          <prompt>Waarde</prompt>
        </field>
      </item>

      <action type="add">
        <relation destinationtype="metavocabulary" role="posrel">
          <object type="metavocabulary"></object>
        </relation>
      </action>

      <action type="load">
        <relation destinationtype="metavocabulary" role="posrel">
          <object type="metavocabulary"/>
        </relation>
      </action>

      <command name="search" nodepath="metavocabulary" fields="value" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar metavocabulary</prompt>
        <search-filter>
          <name>Waarde bevat</name>
          <search-fields>value</search-fields>
        </search-filter>
      </command>

    </list>

    <list destination="metadefinition" role="constraints" minoccurs="0" maxoccurs="*">
      <title>Beperking voor metadefinitie</title>
      <item>
        <field name="name" ftype="data">
          <prompt>Naam</prompt>
        </field>
      </item>

      <action type="add">
        <relation destinationtype="metadefinition" role="constraints">
          <object type="metadefinition"></object>
        </relation>
      </action>

      <action type="load">
        <relation destinationtype="metadefinition" role="constraints">
          <object type="metadefinition"/>
        </relation>
      </action>

      <command name="search" nodepath="metadefinition" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar metadefinition</prompt>
        <search-filter>
          <name>Naam bevat</name>
          <search-fields>name</search-fields>
        </search-filter>
      </command>

    </list>


  </form-schema>
</wizard-schema>
