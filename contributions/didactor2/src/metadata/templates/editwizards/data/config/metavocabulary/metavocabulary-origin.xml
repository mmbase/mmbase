<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title>Metavocabulary Editor</title>

  <action type="load">
    <field name="value" />
    <relation destinationtype="metavocabulary" role="related" />
    <relation destinationtype="metavocabulary" role="posrel" />
    <relation destinationtype="metadefinition" role="related" />
  </action>

  <action type="create">
    <object type="metavocabulary">
      <relation destination="{$origin}" role="related" createdir="source" />
    </object>
  </action>

 <lists>
    <optionlist include="config/option_list/constraint_type.xml" />
    <optionlist include="config/option_list/metadatatypes.xml" />
    <optionlist include="config/option_list/boolean.xml" />
  </lists>

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Metavocabulary Invoeren</title>
    <field name="value" />
    <list extends="config/metavocabulary/metavocabulary-related-list.xml"/>
    <list extends="config/metadefinition/metadefinition-inmetavocabulary.xml"/>
    <list extends="config/metavocabulary/metavocabulary-posrel-list-source.xml"/>
    <list extends="config/metavocabulary/metavocabulary-posrel-list-destination.xml"/>
  </form-schema>

</wizard-schema>
