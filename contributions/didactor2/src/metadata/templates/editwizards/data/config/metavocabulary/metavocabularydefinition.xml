<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title>Metavocabulary Editor</title>

  <action type="create">
    <object type="metavocabulary"></object>
  </action>
    
  <action type="load">
       <relation destination="metavocabulary" role="related" />
       <relation destination="metavocabulary" role="posrel" />
       <relation destination="metadefinition" role="constraints" />
       <relation destination="synonym" role="related" />
  </action>


  <action type="delete" />
    
  <lists>
   <optionlist include="config/option_list/constraint_type.xml" />
  </lists>
  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Metavocabulary invoeren</title>

   
    <field name="value" dtminlength="1">
      <prompt>Metavocabulary waarde  </prompt>
    </field>


  <list destination="metavocabulary" role="related" extends="config/metavocabulary/metavocabulary-related-list.xml" />
  <list destination="metavocabulary" role="posrel" extends="config/metavocabulary/metavocabulary-posrel-list.xml" />
  <list destination="metadefinition" role="constraints" extends="config/metadefinition/metadefinition-constraints-list.xml" />  
  <list destination="synonym" role="related" extends="config/synonym/synonym-list.xml" />


  </form-schema>
</wizard-schema>
