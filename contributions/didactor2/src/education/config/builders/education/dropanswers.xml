<?xml version="1.0"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="dropanswers" maintainer="didactor.nl" version="2" extends="answers">
  <names>
    <singular xml:lang="nl">Sleepvraagantwoord</singular>
    <singular xml:lang="en">Drag and drop Answer</singular>
    <plural xml:lang="nl">Sleepvraagantwoorden</plural>
    <plural xml:lang="nl">Drag and drop Answers</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Het antwoord op een sleepvraag vraag</description>
    <description xml:lang="en">The answer to a drag and drop question</description>
  </descriptions>

  <fieldlist>
    <field name="dragnumber">
      <descriptions>
        <description xml:lang="nl">Sleep afbeelding nr</description>
        <description xml:lang="en">Drag image nr</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Sleep afbeelding nr</guiname>
        <guiname xml:lang="en">Drag image nr</guiname>
      </gui>
      <editor>
        <positions><list>2</list></positions>
      </editor>
      <!-- would this not be a NODE field? -->
      <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <required value="true" />
      </datatype>
    </field>
    <field name="dropnumber">
      <descriptions>
        <description xml:lang="nl">Doel afbeelding nr</description>
        <description xml:lang="en">Drop image nr</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Doel afbeelding nr</guiname>
        <guiname xml:lang="en">Drop image nr</guiname>
      </gui>
      <editor><positions><list>3</list></positions></editor>
      <!-- would this not be a NODE field? -->
      <datatype base="integer" xmlns="http://www.mmbase.org/xmlns/datatypes" >
        <required value="true" />
      </datatype>
    </field>
  </fieldlist>
</builder>
