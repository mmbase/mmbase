<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="packages" maintainer="didactor.nl" version="1" extends="object">

   <searchage>9999</searchage>
   <names>
      <singular xml:lang="nl">Scorm-package</singular>
      <singular xml:lang="en">Scorm Package</singular>

      <plural xml:lang="nl">Scorm-packages</plural>
      <plural xml:lang="en">Scorm Packages</plural>
   </names>


   <fieldlist>
     <field name="name">
       <gui>
         <guiname xml:lang="nl">Naam</guiname>
         <guiname xml:lang="en">Name</guiname>
       </gui>
       <editor>
         <positions>
           <list>1</list>
         </positions>
       </editor>
       <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" >
         <maxLength value="1024" enforce="never"/>
       </datatype>
     </field>

     <field name="type">
       <gui>
         <guiname xml:lang="nl">Type</guiname>
         <guiname xml:lang="en">Type</guiname>
       </gui>
       <editor>
         <positions>
           <list>2</list>
         </positions>
       </editor>
       <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" >
         <maxLength value="1024" enforce="never"/>
       </datatype>
     </field>

     <field name="uploaddate">
       <gui>
         <guiname xml:lang="nl">Ge√Ømporteerd</guiname>
         <guiname xml:lang="en">Imported</guiname>
       </gui>
       <editor>
         <positions>
           <list>3</list>
         </positions>
       </editor>
       <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes" />
     </field>

     <field name="importdate">
       <gui>
         <guiname xml:lang="nl">Date of import</guiname>
         <guiname xml:lang="en">Date of import</guiname>
       </gui>
       <editor>
         <positions>
           <list>4</list>
         </positions>
       </editor>
       <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      </field>

      <field name="version">
        <gui>
          <guiname xml:lang="nl">Version of package</guiname>
          <guiname xml:lang="en">Version of package</guiname>
        </gui>
        <editor>
          <positions>
            <list>5</list>
          </positions>
        </editor>
        <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
	  <maxLength value="1024" enforce="never"/>
	</datatype>
      </field>

   </fieldlist>

</builder>
