<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="pages" role="posrel" minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']">
    <title>Bijbehorende paginas </title>
    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van de pagina</description>
        </field>
   <field fdatapath="field[@name='pos']" ftype="data" />
    </item>

    <action type="create">
        <relation destinationtype="pages" role="posrel">
          <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="pages" objectnumber="new" />

    <command name="search" nodepath="pages" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar Paginas</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>
</list>
