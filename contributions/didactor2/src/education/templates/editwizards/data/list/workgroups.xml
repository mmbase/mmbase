<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="workgroups" role="related" minoccurs="0" maxoccurs="*" ordertype="number">
    <title>Bijbehorende Werkgroepen</title>
    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van de werkgroep</description>
        </field>
        <field wizardname="workgroups" ftype="startwizard" />
    </item>

    <action type="create">
        <relation destinationtype="workgroups" role="related">
        </relation>
    </action>

    <action type="add">
        <relation destinationtype="workgroups" role="related">
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="workgroups" objectnumber="new" />

    <command name="search" nodepath="workgroups" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar werkgroepen</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>
</list>
