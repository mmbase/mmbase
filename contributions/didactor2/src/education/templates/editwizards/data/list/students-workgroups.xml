<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="students" role="related" minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='number']">
    <title>Studenten in deze werkgroep</title>
    <item>
        <field name="firstname" ftype="data">
            <prompt>Voornaam</prompt>
        </field>
        <field name="lastname" ftype="data">
            <prompt>Achternaam</prompt>
        </field>
        <field wizardname="students" ftype="startwizard" />
    </item>

    <action type="create">
        <relation destinationtype="students" role="related">
        </relation>
    </action>

    <action type="load">
        <relation destinationtype="students" role="related">
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="students" objectnumber="new" />

    <command name="search" nodepath="students" fields="firstname,lastname" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar studenten</prompt>
        <search-filter>
            <name>Achternaam bevat</name>
            <search-fields>lastname</search-fields>
        </search-filter>
        <search-filter>
            <name>Voornaam bevat</name>
            <search-fields>firstname</search-fields>
        </search-filter>
        <search-filter>
            <name>Account bevat</name>
            <search-fields>account</search-fields>
        </search-filter>
    </command>
</list>
