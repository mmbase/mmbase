<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="providers">
   <title>Aanbieder editor</title>
   <action type="load">
      <relation destination="flashpages" role="related"/>
      <relation destination="pages" role="posrel"/>
   </action>
   <lists>
   </lists>
   <steps>
      <step form-schema="edit_provider"/>
   </steps>

<form-schema id="edit_provider">
   <field name="name" ftype="data">
   <prompt>name</prompt></field>

   <list extends="config/welcompage/welcomepages-list.xml"/>
   <list extends="config/pages/pages-list.xml"/>
</form-schema>
</wizard-schema>
