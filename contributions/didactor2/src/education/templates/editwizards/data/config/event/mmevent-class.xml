<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title xml:lang="nl">Looptijd</title>
    <title xml:lang="en">Runtime</title>

    <action type="create">
        <object type="mmevents">
          <field name="playtime">0</field><!-- I hate dove, it does not understand null -->
        </object>
    </action>

    <action type="load">
    </action>

    <action type="delete">
      <prompt xml:lang="nl">Weet u zeker dat u deze tijd wilt verwijderen?</prompt>
      <prompt xml:lang="en">Are you sure you want to delete this runtime?</prompt>
      <description xml:lang="nl">Klik hier om deze tijd te verwijderen</description>
      <description xml:lang="en">Click here to remove this runtime</description>
    </action>

    <form-schema id="step1">
      <title xml:lang="nl">Looptijd invoeren</title>
      <title xml:lang="en">Enter runtime</title>
      <field name="start" ftype="datetime">
        <prompt xml:lang="nl">Start van de klas</prompt>
        <prompt xml:lang="en">Start of the class</prompt>
      </field>
      <field name="stop" ftype="datetime">
        <prompt xml:lang="nl">Eind van de klas</prompt>
        <prompt xml:lang="en">End of the class</prompt>
      </field>
    </form-schema>
</wizard-schema>
