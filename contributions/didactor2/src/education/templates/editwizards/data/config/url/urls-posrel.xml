<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="urls" role="posrel" minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']">
    <title>Bijbehorende Links</title>

    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
        </field>
        <field ftype="data" name="description">
            <prompt>Omschrijving</prompt>
        </field>
       <field wizardname="config/url/urls" ftype="startwizard" />
   </item>

    <command name="startwizard" inline="true" wizardname="config/url/urls" objectnumber="new" />

    <command name="search" nodepath="urls" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar link</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
        <search-filter>
            <name>Omschrijving bevat</name>
            <search-fields>description</search-fields>
        </search-filter>
         <search-filter>
            <name>URL bevat</name>
            <search-fields>url</search-fields>
        </search-filter>
    </command>

    <action type="create">
        <relation destinationtype="urls" role="posrel">
          <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
        </relation>
   </action>

</list>
