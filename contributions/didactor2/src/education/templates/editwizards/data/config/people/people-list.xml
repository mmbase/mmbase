<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="people" role="classrel" minoccurs="0" maxoccurs="*" ordertype="string" orderby="lastname" hidecommand="move-up|move-down">
    <title>Bijbehorende Personen</title>
    <item>
        <field name="firstname" ftype="data">
            <prompt>Voornaam</prompt>
        </field>
        <field name="lastname" ftype="data">
            <prompt>Achternaam</prompt>
        </field>
        <list extends="config/role/roles-inlist.xml"/>
        <field wizardname="config/people/people" ftype="startwizard" />
    </item>

    <action type="create">
        <relation destinationtype="people" role="classrel">
        </relation>
    </action>

    <action type="add">
        <relation destinationtype="peope" role="classrel">
            <object type="people">
            </object>
        </relation>
    </action>

    <action type="load">
        <relation destinationtype="people" role="classrel">
            <object type="people">
              <relation destinationtype="roles" role="related">
                <object type="roles"/>
              </relation>
            </object>
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="config/people/people" objectnumber="new" />

    <command name="search" nodepath="people" fields="firstname,lastname,username" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar personen</prompt>
        <search-filter>
            <name>Achternaam bevat</name>
            <search-fields>lastname</search-fields>
        </search-filter>
        <search-filter>
            <name>Voornaam bevat</name>
            <search-fields>firstname</search-fields>
        </search-filter>
        <search-filter>
            <name>Gebruikersnaam bevat</name>
            <search-fields>username</search-fields>
        </search-filter>
    </command>
</list>
