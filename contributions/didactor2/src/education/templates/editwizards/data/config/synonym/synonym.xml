<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title>Synonym standaard Editor</title>

  <action type="create">
    <object type="synonym"/>
  </action>

  <action type="load">
    <field name="name"/>
    <field name="description"/>
    <relation destinationtype="metadefinition" role="related" />
    <relation destinationtype="metastandard" role="related" />
    <relation destinationtype="metavocabulary" role="related" />
    
  </action>

  <action type="delete" />

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Synonym invoeren</title>

    <field name="name" dtminlength="1">
      <prompt>Metadata synonym naam</prompt>
    </field>

    <field name="description" dtminlength="0" dttype="text">
      <prompt>Omschrijving van de metadata synonym</prompt>
    </field>

