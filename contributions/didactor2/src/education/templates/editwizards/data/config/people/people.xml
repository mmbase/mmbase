<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Personen Editor</title>

    <action type="create">
        <object type="people"/>
    </action>

    <action type="load">
        <object type="people"/>
        <relation destinationtype="roles" role="related"/> 
    </action>

    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
      <title>Persoon invoeren</title>
        <field name="initials" >
            <prompt>Initialen</prompt>
        </field>
        <field name="firstname" >
            <prompt>Voornaam</prompt>
        </field>
        <field name="lastname" >
            <prompt>Achternaam</prompt>
        </field>
        <field name="address" >
            <prompt>Adres</prompt>
        </field>
        <field name="zipcode" >
            <prompt>Postcode</prompt>
        </field>
        <field name="city" >
            <prompt>Plaats</prompt>
        </field>
        <field name="telephone" >
            <prompt>Telefoonnummer</prompt>
        </field>
        <field name="email" >
            <prompt>E-mail adres</prompt>
        </field>
        <field name="username" >
            <prompt>Gebruikersnaam</prompt>
        </field>
        <field name="password" >
            <prompt>Wachtwoord</prompt>
        </field>


        <list extends="config/role/roles-list.xml" />

    </form-schema>
</wizard-schema>