<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">Personen Editor</title>
  <title xml:lang="en">People Editor</title>

  <action type="create">
    <object type="people"/>
  </action>

  <action type="load">
    <object type="people"/>
    <relation destinationtype="roles" role="related"/>
    <relation destinationtype="classes" role="classrel"/>
    <relation destinationtype="workgroups" role="related"/>
    <relation destinationtype="educations" role="classrel"/>
  </action>

  <action type="delete"/>

  <lists>
    <optionlist include="config/option_list/enabled.xml" />
  </lists>

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title xml:lang="nl">Persoon invoeren</title>
    <title xml:lang="en">Enter person</title>
    <field name="firstname">
      <prompt xml:lang="nl">Voornaam</prompt>
      <prompt xml:lang="en">Firstname</prompt>
    </field>
    <field name="initials">
      <prompt xml:lang="nl">Initialen</prompt>
      <prompt xml:lang="en">Initials</prompt>
    </field>
    <field name="suffix" ftype="line">
      <prompt xml:lang="nl">Tussenvoegsel</prompt>
      <prompt xml:lang="en">Suffix</prompt>
    </field>
    <field name="lastname">
      <prompt xml:lang="nl">Achternaam</prompt>
      <prompt xml:lang="en">Lastname</prompt>
    </field>
    <field name="address">
      <prompt xml:lang="nl">Adres</prompt>
      <prompt xml:lang="en">Address</prompt>
    </field>
    <field name="zipcode">
      <prompt xml:lang="nl">Postcode</prompt>
      <prompt xml:lang="en">Zipcode</prompt>
    </field>
    <field name="city">
      <prompt xml:lang="nl">Plaats</prompt>
      <prompt xml:lang="en">City</prompt>
    </field>
    <field name="country" ftype="line">
      <prompt xml:lang="nl">Land</prompt>
      <prompt xml:lang="en">Country</prompt>
    </field>
    <field name="telephone">
      <prompt xml:lang="nl">Telefoonnummer</prompt>
      <prompt xml:lang="en">Telephone number</prompt>
    </field>
    <field name="mobile" ftype="line">
      <prompt xml:lang="nl">Mobiel</prompt>
      <prompt xml:lang="en">Mobile number</prompt>
    </field>
    <field name="email">
      <prompt xml:lang="nl">E-mail adres</prompt>
      <prompt xml:lang="en">E-mail address</prompt>
    </field>
    <field name="website" ftype="line">
      <prompt xml:lang="nl">Website</prompt>
      <prompt xml:lang="en">Website</prompt>
    </field>
    <field name="dayofbirth">
      <prompt xml:lang="nl">Geboortedatum</prompt>
      <prompt xml:lang="en">Date of birth</prompt>
    </field>
    <field name="username">
      <prompt xml:lang="nl">Gebruikersnaam</prompt>
      <prompt xml:lang="en">Username</prompt>
    </field>
    <field name="password">
      <prompt xml:lang="nl">Wachtwoord</prompt>
      <prompt xml:lang="en">Password</prompt>
    </field>
    <field name="remarks" ftype="line">
      <prompt xml:lang="nl">Opmerkingen</prompt>
      <prompt xml:lang="en">Remarks</prompt>
    </field>
    <field name="description" ftype="text" dtminlength="0">
      <prompt xml:lang="nl">Omschrijving</prompt>
      <prompt xml:lang="en">Description</prompt>
    </field>
    <field name="person_status" ftype="enum">
      <prompt xml:lang="nl">Status</prompt>
      <prompt xml:lang="en">Status</prompt>
      <optionlist select="enabled" />
    </field>

    <list extends="config/role/roles-list.xml" />
    <list extends="config/workgroup/workgroups-list.xml" />
    <list extends="config/class/classes-classrelrelated.xml" />
    <list extends="config/education/educations-classrelrelated.xml" />

  </form-schema>
</wizard-schema>
