<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd"
[
   <!ENTITY extra_loads SYSTEM "extra_loads.xml">
   <!ENTITY extra_steps SYSTEM "extra_steps.xml">
   <!ENTITY extra_schemas SYSTEM "extra_schemas.xml">
]>
<wizard-schema id="empty">
    <title>Waarde vraag Editor</title>

    <action type="create">
        <object type="valuequestions">
            <field name="showtitle">1</field>
            <field name="layout">0</field>
            <field name="type">0</field>
        </object>
    </action>



    <action type="load">
        <relation destination="valueanswers" role="posrel" />
        <relation destination="feedback" role="related" />
        &extra_loads;
    </action>

    <action type="delete" />

    <lists>
       <optionlist include="config/option_list/boolean.xml" />
    </lists>

    <steps>
        <step form-schema="step1" />
        &extra_steps;
    </steps>

    <form-schema id="step1">
        <title>Waarde vraag invoeren</title>
        <field name="title" >
            <prompt>Titel</prompt>
        </field>
        <field name="showtitle" ftype="enum">
           <prompt xml:lang="nl">Titel laten zien</prompt>
           <prompt xml:lang="en">Show title</prompt>
           <optionlist select="boolean" />
        </field> 
        <field name="text" ftype="html" dtminlength="0">
            <prompt>Tekst</prompt>
        </field>

       <list minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']" role="posrel" destination="valueanswers">
            <title>Bijbehorende antwoorden</title>
            <item>
                <field name="text" ftype="data">
                    <prompt>Tekst</prompt>
                    <description>De antwoord tekst</description>
                </field>
                <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
                <field wizardname="config/answer/valueanswers" ftype="startwizard"/>
            </item>

            <!-- deze is voor de 'command name="insert"' -->
            <action type="create">
                 <relation role="posrel" destinationtype="valueanswers">
                  <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
                </relation>
             </action>

            <!-- deze is voor de 'command name="search"'
            <action type="add">
                <relation role="posrel">
                    <object type="valueanswers">
                        <field name="text"/>
                    </object>
                </relation>
            </action> -->

            <command name="search" nodepath="valueanswers" fields="text" age="-1" orderby="number" directions="down">
                <prompt>Zoeken naar Antwoorden</prompt>
                <search-filter>
                    <name>Tekst bevat</name>
                    <search-fields>text</search-fields>
                </search-filter>
            </command>

            <command name="startwizard" inline="true" wizardname="config/answer/valueanswers" objectnumber="new">
                <prompt>Nieuwe Waarde antwoord</prompt>
            </command>

        </list>
        <list role="related" extends="config/feedback/feedback-list.xml" />
    </form-schema>

    &extra_schemas;
</wizard-schema>
