<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">Nieuwsbericht Editor</title>
  <title xml:lang="en">Newsitem Editor</title>
  
  <action type="create">
    <object type="news">
      <relation destination="$origin" role="posrel" />
    </object>
  </action>
  
  <action type="load">
    <relation destinationtype="images" role="posrel" />
  </action>
  
  <action type="delete" />
  
  <form-schema id="step1">
    <title xml:lang="nl">Nieuwsbericht invoeren</title>
    <title xml:lang="en">Enter newsitem</title>
    <field name="title" />
    <field name="subtitle" />
    <field name="intro" />
    <field name="body" />
    <field name="date" />
    <list destination="news" extends="config/image/positionedimages.xml" />
  </form-schema>
</wizard-schema>
