<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
  <title xml:lang="nl">Rollen Editor</title>
  <title xml:lang="en">Role Editor</title>

  <action type="create">
    <object type="roles" />
  </action>
    
  <action type="load">
  </action>

  <action type="delete" />
    
  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title xml:lang="nl">Rol invoeren</title>
    <title xml:lang="en">Enter role</title>
    <field name="name" dtminlength="1">
      <prompt xml:lang="nl">Rol naam</prompt>
      <prompt xml:lang="en">Role name</prompt>
    </field>
  </form-schema>
</wizard-schema>
