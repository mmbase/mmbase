<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="profiles">
   <title>Preassessment editor</title>
   <action type="create">
      <object type="preassessments">
          <field name="showtitle">1</field>
      </object>
   </action>
   <action type="delete">
      <prompt>Weet u zeker dat u deze preassessment wilt verwijderen ?</prompt>
      <description>Klik hier om deze preassessment te verwijderen.</description>
   </action>
   <action type="load">
      <relation destination="tests" role="related">
         <object type="tests">
            <field name="name"/>
         </object>
      </relation>
   </action>
   <lists>
       <optionlist include="config/option_lists/boolean.xml" />
   </lists>
   <steps>
      <step form-schema="edit_preassessments"/>
   </steps>

<form-schema id="edit_preassessments">
   <field name="name" dtminlength="0" dtmaxlength="255">
   <prompt>naam</prompt></field>

      <field name="showtitle" ftype="enum">
         <prompt xml:lang="nl">Titel laten zien</prompt>
         <prompt xml:lang="en">Show title</prompt>
         <optionlist select="boolean" />
      </field>

   <list role="related" destination="tests" minoccurs="0" maxoccurs="*" ordertype="number">
      <title>Bijbehorende testen</title>
      <item>
         <field name="name" ftype="data"/>
         <field ftype="startwizard" wizardname="tests" />
      </item>
      <command name="search" nodepath="tests" fields="name" age="-1" orderby="number" directions="down">
         <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
         </search-filter>
      </command>
      <command name="startwizard" inline="true" wizardname="tests" objectnumber="new">
         <prompt>Nieuw</prompt>
      </command>

      <action type="create">
         <relation destinationtype="tests" role="related">
         </relation>
      </action>
   </list>
</form-schema>
</wizard-schema>
