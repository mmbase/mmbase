<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Werkgroep Editor</title>

    <action type="create">
      <object type="workgroups">
      </object>
    </action>
    
    <action type="load">
        <relation destination="people" role="related">
          <object type="people">
            <relation destination="roles" role="related">
              <object type="roles"/>
            </relation>
          </object>
        </relation>
    </action>

    <action type="delete" />
     <lists>
        <optionlist include="config/option_lists/workgrouptype.xml" />
    </lists>

   
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title>Werkgroep Invoeren</title>
        <field name="name" dtminlength="1">
            <prompt>Werkgroep naam</prompt>
        </field>
 
      <field name="protected" ftype="enum">
         <prompt xml:lang="nl">Werkgroep type</prompt>
         <prompt xml:lang="en">Workgroup type</prompt>
         <optionlist select="workgrouptype" />
      </field>
        
      <list destination="people" role="related" extends="config/people/people-workgroup.xml" />
    </form-schema>
</wizard-schema>
