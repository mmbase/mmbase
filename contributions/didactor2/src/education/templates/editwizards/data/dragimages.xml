<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']" role="dragimagerel" destination="images">

    <title>Sleep-Afbeeldingen</title>

    <item>
        <field name="title" ftype="line">
            <prompt>Titel</prompt>
        </field>
        <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
        <field name="description" rows="8">
            <prompt>Omschrijving</prompt>
        </field>
        <field ftype="image" name="title">
            <prompt>Afbeelding</prompt>
        </field>
    </item>

    <command name="startwizard" inline="true" wizardname="image" objectnumber="new" />

    <command name="search" nodepath="images" fields="title" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar afbeeldingen</prompt>
        <search-filter>
            <name>Titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
        <search-filter>
            <name>Omschrijving bevat</name>
            <search-fields>description</search-fields>
        </search-filter>
    </command>

    <action type="create">
        <relation role="dragimagerel" destinationtype="images">
              <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>

</list>
