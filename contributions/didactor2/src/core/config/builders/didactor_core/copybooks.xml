<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder http://www.mmbase.org/xmlns/builder.xsd"
    name="copybooks" maintainer="didactor.nl" version="2" extends="object">
  <searchage>31</searchage>

  <names>
    <singular xml:lang="nl">Schrift</singular>
    <singular xml:lang="en">Copybook</singular>

    <plural xml:lang="nl">Schriften</plural>
    <plural xml:lang="en">Copybooks</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Een schrift bevat de antwoorden van studenten op vragen die ze maken.</description>
    <description xml:lang="en">A copybook contains the answers of students on questions answered.</description>
  </descriptions>

  <fieldlist>
    <field name="name">
      <descriptions>
        <description xml:lang="nl">Naam van het schrift</description>
        <description xml:lang="en">Name of the copybook</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Naam</guiname>
        <guiname xml:lang="en">Name</guiname>
      </gui>
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>
  </fieldlist>
  <functionlist>
    <function key="madetest">
      <class>nl.didactor.functions.CopyBookMadeTest</class>
    </function>
    <function key="madetests">
      <class>nl.didactor.functions.CopyBookMadeTest</class>
    </function>
  </functionlist>
</builder>
