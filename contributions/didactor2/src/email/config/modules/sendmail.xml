<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//MMBase//DTD module config 1.0//EN" "http://www.mmbase.org/dtd/module_1_0.dtd">
<module>
  <status>active</status>
  <class>org.mmbase.applications.email.SendMail</class>
  <properties>


    <!-- for SendMail: -->
    <property name="mailhost">${sendmail.smarthost}</property>
    <!-- for JMSendMail (j2ee way). Can also use mailhost, then
         comment the following two away. And tolerate some warnings in
         the log :-) It's nicer to comment the 'mailhost' property away
         then. -->
    <!--
        <property name="context">java:comp/env</property>
        <property name="datasource">mail/MMBase</property>
    -->
    <property name="emailsenderdomain">${sendmail.emailsenderdomain}</property>
    <!--
        Especially in testing-environments (with production-data), you may want to disable email-forwarding
        globally, to avoid unnecessary spamming of real users.
    -->
    <property name="noforwarding">false</property>

    <property name="emailbuilder">emails</property>

    <property name="emailbuilder.bodyfield">body</property>
    <property name="emailbuilder.tofield">to</property>
    <property name="emailbuilder.ccfield">cc</property>
    <property name="emailbuilder.bccfield">bcc</property>
    <property name="emailbuilder.fromfield">from</property>
    <property name="emailbuilder.subjectfield">subject</property>
    <property name="emailbuilder.headersfield">headers</property>
    <property name="emailbuilder.datefield">date</property>
    <property name="emailbuilder.typefield">type</property>

  </properties>


</module>
