<?xml version="1.0" encoding="UTF-8"?><project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>finalist</groupId>
  <artifactId>cmsc-modules-luceus</artifactId>
  <packaging>war</packaging>
  <name>CMS Container luceus module</name>
  <description>Uses lucene to index the content items using the luceus framework.</description>
  <parent>
        <groupId>finalist</groupId>
        <artifactId>modules</artifactId>
        <version>1.7-SNAPSHOT</version>
  </parent>
  <dependencies>
    <dependency>
      <groupId>com.luceus</groupId>
      <artifactId>luceus-core</artifactId>
      <version>${luceus.version}</version>
    </dependency>
    <dependency>
      <groupId>com.luceus</groupId>
      <artifactId>luceus-server</artifactId>
      <version>${luceus.version}</version>
    </dependency>
  </dependencies>
  <build>
        <resources>
            <resource>
                <targetPath>META-INF</targetPath>
                <directory>${basedir}/src/tld</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
  </build>
</project>