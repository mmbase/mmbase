<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 2.0//EN" "http://www.mmbase.org/dtd/builder_2_0.dtd">
<builder extends="object" maintainer="mmbase.org" name="daymarks" version="0">

  <class>DayMarkers</class>

  <searchage>14</searchage>

  <!-- <names>
  names defines the different names used in user visible parts, singular for
  for talking about 1 object (Url,Person) and plurar for talking about multiple
  <Urls, people).
  >-->
  <names>
    <!-- singles per language as defined by ISO 639 -->
    <singular xml:lang="en">Day Marker</singular>
    <singular xml:lang="nl">Dagmarkeerder</singular>
    <singular xml:lang="fr">Repère De Jour</singular>
    <singular xml:lang="eo">Tagmarkilo</singular>
    <singular xml:lang="it">Marchio del giorno</singular>
    <!-- multiple per language as defined by ISO 639 -->
    <plural xml:lang="en">Day Markers</plural>
    <plural xml:lang="fr">Repères De Jour</plural>
    <plural xml:lang="nl">Dagmarkeerders</plural>
    <plural xml:lang="eo">Tagmarkiloj</plural>
    <plural xml:lang="it">Marchi del giorno</plural>
  </names>

  <!-- <descriptions>
  small description of the builder for human reading
  -->
  <descriptions>
    <!-- descriptions per language as defined by ISO 639  -->
    <description xml:lang="en">Daycount object used to keep track of ages of objects</description>
    <description xml:lang="fr">L'objet de Daycount sont employer à pour savoir l'age d'un objet</description>
    <description xml:lang="nl">DagTeller houd de leeftijd van objecten bij</description>
    <description xml:lang="eo">Per tagmarkilo eblas trovi la aĝon de objekto</description>
    <description xml:lang="it">L'oggetto Daycount è utilizzato per definire l'eta' degli oggetti</description>
  </descriptions>

  <!-- <properties>
  you can define properties to be used by the classfile (if used) it uses
  a key/value system. Its a optional tag.
  -->
  <properties>
  </properties>

  <!-- <fieldlist>
  defines the different fields in this object, be carefull the order is important
  once defined keep them in the same order.
  If you use number and owner (the 2 default fields, please check the docs for this)
  -->
  <fieldlist>
    <!-- POS 3 : <field> 'daycount'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Number of days of this daymarker</description>
        <description xml:lang="nl">Aantal dagen van deze dagmarkeerder</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Day Marker</guiname>
        <guiname xml:lang="fr">Repère De Jour</guiname>
        <guiname xml:lang="nl">Dagmarker</guiname>
        <guiname xml:lang="eo">Tagnombro</guiname>
        <guiname xml:lang="it">Marchio del giorno</guiname>
        <guitype>integer</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>1</input>
          <!-- position in list area of the editor -->
          <list>1</list>
          <!-- position in search area of the editor -->
          <search>1</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>daycount</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

    <!-- POS 4 : <field> 'mark'  -->
    <field>
       <descriptions>
         <!-- descriptions per language as defined by ISO 639  -->
         <description xml:lang="en">Objectnumber of the last new object
         untill this daymark</description>
         <description xml:lang="nl">Objectnummer van het laatste
         nieuwe object voor deze dagmarkeerder</description>
       </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Mark</guiname>
        <guiname xml:lang="fr">Repère</guiname>
        <guiname xml:lang="nl">Mark</guiname>
        <guiname xml:lang="eo">Marko</guiname>
        <guiname xml:lang="it">Marchio</guiname>
        <guitype>integer</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>2</input>
          <!-- position in list area of the editor -->
          <list>2</list>
          <!-- position in search area of the editor -->
          <search>2</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>mark</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>

  </fieldlist>
</builder>
