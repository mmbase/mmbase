    <!-- POS 6 : <field> 'body'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Body</guiname>
            <guiname xml:lang="nl">Body</guiname>
            <guitype>field</guitype>
        </gui>
        <!-- editor related  -->
