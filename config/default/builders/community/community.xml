        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Intro</guiname>
            <guiname xml:lang="nl">Intro</guiname>
            <guitype>field</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>3</input>
                <!-- position in list area of the editor -->
                <list>4</list>
                <!-- position in search area of the editor -->
                <search>3</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
