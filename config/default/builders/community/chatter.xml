<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.0//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder maintainer="mmbase.org" version="0" extends="object">
<!-- @version $Id: chatter.xml,v 1.2 2002-06-18 08:50:33 pierre Exp $ -->
<!-- <status>
    what is the status of this builder options : active or inactive
-->
<status>inactive</status>

<searchage>14</searchage>

<!-- <names>
    names defines the different names used in user visible parts, singular for
    for talking about 1 object (Url,Person) and plurar for talking about multiple
    <Urls, people).
>-->
<names>
    <!-- singles per language  as defined by RFC xxx -->
    <singular xml:lang="en">Chatter</singular>
    <singular xml:lang="nl">Babbelaar</singular>
    <!-- multiple per language  as defined by RFC xxx -->
    <plural xml:lang="en">Chatters</plural>
    <plural xml:lang="nl">Babbeleaars</plural>
</names>

<!-- <descriptions>
    small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language  as defined by RFC xxx -->
    <description xml:lang="en">A user of a community</description>
    <description xml:lang="nl">Een gebruiker in een gemeenschap</description>
</descriptions>

<!-- <fieldlist>
     defines the different fields in this object, be carefull the order is important
    once defined keep them in the same order.
    If you use number and owner (the 2 default fields, please check the docs for this)
-->
<fieldlist>
    <!-- POS 3 : <field> 'username'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Username</guiname>
            <guiname xml:lang="nl">Gebruikersnaam</guiname>
            <guitype>string</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>1</input>
                <!-- position in list area of the editor -->
                <list>1</list>
                <!-- position in search area of the editor -->
                <search>1</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
            <!-- name of the field in the database -->
            <name>username</name>
            <!-- MMBase datatype and demands on it -->
            <type state="persistent" size="30" notnull="true">STRING</type>
        </db>
    </field>

    <!-- POS 4 : <field> 'password'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Password</guiname>
            <guiname xml:lang="nl">Wachtwoord</guiname>
            <guitype>string</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>-1</input>
                <!-- position in list area of the editor -->
                <list>-1</list>
                <!-- position in search area of the editor -->
                <search>-1</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
            <!-- name of the field in the database -->
            <name>password</name>
            <!-- MMBase datatype and demands on it -->
            <type state="persistent" size="40" notnull="false">STRING</type>
        </db>
    </field>

</fieldlist>

</builder>

