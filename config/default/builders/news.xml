<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.0//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder maintainer="mmbase.org" version="0" extends="object">
<status>inactive</status>

<searchage>14</searchage>
<names>
  <!-- singles per language as defined by ISO 639 -->
  <singular xml:lang="en">NewsItem</singular>
  <singular xml:lang="fr">Nouvelle</singular>
  <singular xml:lang="nl">NieuwsItem</singular>
  <singular xml:lang="eo">Novaĵo</singular>
  <!-- multiple per language as defined by ISO 639 -->
  <plural xml:lang="en">NewsItems</plural>
  <plural xml:lang="fr">Nouvelles</plural>
  <plural xml:lang="nl">NieuwsItems</plural>
  <plural xml:lang="eo">Novaĵoj</plural>
</names>

<!-- <descriptions>
  small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language as defined by ISO 639  -->
  <description xml:lang="en">News item</description>
  <description xml:lang="fr">Nouvelles</description>
  <description xml:lang="nl">Nieuws item</description>
  <description xml:lang="eo">Novaĵoj</description>
</descriptions>

<fieldlist>
  <!-- POS 3 : <field> 'title'  -->
  <field>
    <!-- gui related -->
    <gui>
      <guiname xml:lang="en">Title</guiname>
      <guiname xml:lang="fr">Titre</guiname>
      <guiname xml:lang="nl">Titel</guiname>
      <guiname xml:lang="eo">Titolo</guiname>
      <guitype>string</guitype>
    </gui>
    <!-- editor related  -->
    <editor>
      <positions>
        <!-- position in the input area of the editor -->
        <input>1</input>
        <!-- position in list area of the editor -->
        <list>1</list>
        <!-- position in search area of the editor -->
        <search>1</search>
      </positions>
    </editor>
    <!-- database related  -->
    <db>
      <!-- name of the field in the database -->
      <name>title</name>
      <!-- MMBase datatype and demands on it -->
      <type state="persistent" size="255" notnull="true" key="false">STRING</type>
    </db>
  </field>

  <!-- POS 4 : <field> 'subtitle'  -->
