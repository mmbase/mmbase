<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE builder PUBLIC "//MMBase - builder//" "http://www.mmbase.org/dtd/builder.dtd">
<builder>

<!-- <status>
	what is the status of this builder options : active or inactive
-->
<status>inactive</status>

<!-- <classfile>
	This is a optional tag, it names the classfile that allows you to add
	support routines or changes them on a per builder base. For example
	images has routines to image support etc etc.

	possible values : Dummy or disabled tag makes mmbase use the default setup

		short name : Urls will start class : org.mmbase.module.builders.Urls.class

		long name : nl.vpro.mmbase.module.builders.Urls will start that class
-->
<classfile>Dummy</classfile>

<searchage>14</searchage>

<!-- <names>
	names defines the different names used in user visible parts, singular for
	for talking about 1 object (Url,Person) and plurar for talking about multiple
	<Urls, people).
>-->
<names>
	<!-- singles per language  as defined by RFC xxx -->
	<singular xml:lang="us">Chatter</singular>
	<singular xml:lang="en">Chatter</singular>
	<singular xml:lang="nl">Chatter</singular>
	<!-- multiple per language  as defined by RFC xxx -->
	<plural xml:lang="us">Chatters</plural>
	<plural xml:lang="en">Chatters</plural>
	<plural xml:lang="nl">Chatters</plural>
</names>

<!-- <descriptions>
	small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language  as defined by RFC xxx -->
	<description xml:lang="us">A user of a community</description>
	<description xml:lang="en">A user of a community</description>
	<description xml:lang="nl">Een gebruiker in een community</description>
</descriptions>

<!-- <fieldlist>
	 defines the different fields in this object, be carefull the order is important
	once defined keep them in the same order.
	If you use number and owner (the 2 default fields, please check the docs for this)
-->
<fieldlist>
	<!-- POS 1 : <field> 'number' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Object</name>
			<name xml:lang="en">Object</name>
			<name xml:lang="nl">Object</name>
			<type>integer</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>10</list>
				<!-- position in search area of the editor -->
				<search>10</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>number</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true">INTEGER</type>
		</db>
	</field>

	<!-- POS 2 : <field> 'owner' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Owner</name>
			<name xml:lang="en">Owner</name>
			<name xml:lang="us">Eigenaar</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>11</list>
				<!-- position in search area of the editor -->
				<search>11</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>owner</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="12" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 3 : <field> 'username'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Username</name>
			<name xml:lang="en">Username</name>
			<name xml:lang="nl">Gebruikersnaam</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>1</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>username</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="30" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 4 : <field> 'password'  -->
	<field>
		<!-- gui related -->
		<gui>
			<name xml:lang="us">Password</name>
			<name xml:lang="en">Password</name>
			<name xml:lang="nl">Paswoord</name>
			<type>string</type>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>-1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>password</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="40" notnull="false">STRING</type>
		</db>
	</field>

</fieldlist>

</builder>

