<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.0//EN" "http://www.mmbase.org/dtd/builder_1_0.dtd">
<builder maintainer="mmbase.org" version="0" extends="object">
<!-- @version $Id: location.xml,v 1.5 2002-06-07 14:54:32 pierre Exp $ -->
<!-- <status>
    what is the status of this builder options : active or inactive
-->
<status>inactive</status>

<searchage>14</searchage>

<!-- <names>
    names defines the different names used in user visible parts, singular for
    for talking about 1 object (Url,Person) and plurar for talking about multiple
    <Urls, people).
>-->
<names>
    <!-- singles per language as defined by ISO 639 -->
    <singular xml:lang="en">Location</singular>
    <singular xml:lang="fr">Emplacement</singular>
    <singular xml:lang="nl">Lokatie</singular>
    <!-- multiple per language as defined by ISO 639 -->
    <plural xml:lang="en">Locations</plural>
    <plural xml:lang="fr">Emplacements</plural>
    <plural xml:lang="nl">Locaties</plural>
</names>

<!-- <descriptions>
    small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language as defined by ISO 639  -->
    <description xml:lang="en">Location</description>
    <description xml:lang="fr">Denit un certain emplacement</description>
    <description xml:lang="nl">Beschrijft een bepaalde lokatie</description>
</descriptions>

<!-- <fieldlist>
     defines the different fields in this object, be carefull the order is important
    once defined keep them in the same order.
    If you use number and owner (the 2 default fields, please check the docs for this)
-->
<fieldlist>
    <!-- POS 3 : <field> 'title'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Title</guiname>
            <guiname xml:lang="fr">Titre</guiname>
            <guiname xml:lang="nl">Titel</guiname>
            <guitype>string</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>1</input>
                <!-- position in list area of the editor -->
                <list>1</list>
                <!-- position in search area of the editor -->
                <search>1</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
            <!-- name of the field in the database -->
            <name>title</name>
            <!-- MMBase datatype and demands on it -->
            <type state="persistent" size="255" notnull="false" key="false">STRING</type>
        </db>
    </field>

    <!-- POS 4 : <field> 'subtitle'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">SubTitle</guiname>
            <guiname xml:lang="fr">Sous-titre</guiname>
            <guiname xml:lang="nl">SubTitel</guiname>
            <guitype>string</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>2</input>
                <!-- position in list area of the editor -->
                <list>-1</list>
                <!-- position in search area of the editor -->
                <search>2</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
            <!-- name of the field in the database -->
            <name>subtitle</name>
            <!-- MMBase datatype and demands on it -->
            <type state="persistent" size="255" notnull="false" key="false">STRING</type>
        </db>
    </field>

    <!-- POS 5 : <field> 'body'  -->
    <field>
        <!-- gui related -->
        <gui>
            <guiname xml:lang="en">Text</guiname>
            <guiname xml:lang="fr">Texte</guiname>
            <guiname xml:lang="nl">Tekst</guiname>
            <guitype>field</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
            <positions>
                <!-- position in the input area of the editor -->
                <input>3</input>
                <!-- position in list area of the editor -->
                <list>-1</list>
                <!-- position in search area of the editor -->
                <search>3</search>
            </positions>
        </editor>
        <!-- database related  -->
        <db>
            <!-- name of the field in the database -->
            <name>body</name>
            <!-- MMBase datatype and demands on it -->
            <type state="persistent" size="65535" notnull="false" key="false">STRING</type>
        </db>
    </field>

</fieldlist>

</builder>
