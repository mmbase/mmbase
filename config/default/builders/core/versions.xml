<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "//MMBase - builder//" "http://www.mmbase.org/dtd/builder.dtd">
<builder maintainer="mmbase.org" version="0" extends="object">
  <classfile>org.mmbase.module.builders.Versions</classfile>

  <searchage>1000</searchage>

  <!-- <names>
  names defines the different names used in user visible parts, singular for
  for talking about 1 object (Url,Person) and plurar for talking about multiple
  <Urls, people).
  >-->
  <names>
	 <!-- singles per language as defined by ISO 639 -->
	 <singular xml:lang="nl">VersieBeheer</singular>
	 <singular xml:lang="en">VersionControl</singular>
	 <singular xml:lang="us">VersionControl</singular>
	 <singular xml:lang="eo">Versiestrilo</singular>
	 <!-- multiple per language as defined by ISO 639 -->
	 <plural xml:lang="nl">VersieBeheer</plural>
	 <plural xml:lang="en">VersionControl</plural>
	 <plural xml:lang="us">VersionControl</plural>
	 <plural xml:lang="us">Versiestrilo</plural>
  </names>

  <!-- <descriptions>
  small description of the builder for human reading
  -->
  <descriptions>
	 <!-- descriptions per language as defined by ISO 639  -->
	 <description xml:lang="nl">Houd bij van applicaties/builders welke versie actief is</description>
	 <description xml:lang="en">Keeps track of what versions of apps/builders etc etc are installed</description>
	 <description xml:lang="us">Keeps track of what versions of apps/builders etc etc are installed</description>
	 <description xml:lang="eo">Administras la aktivajn versiojn de aplikaÄµoj kaj konstruantoj</description>
  </descriptions>

  <fieldlist>
	 <!-- POS 3 : <field> 'name'  -->
	 <field>
		<!-- gui related -->
		<gui>
		  <guiname xml:lang="nl">Naam</guiname>
		  <guiname xml:lang="en">Name</guiname>
		  <guiname xml:lang="us">Name</guiname>
		  <guiname xml:lang="eo">Nomo</guiname>
		  <guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
		  <positions>
			 <!-- position in the input area of the editor -->
			 <input>1</input>
			 <!-- position in list area of the editor -->
			 <list>1</list>
			 <!-- position in search area of the editor -->
			 <search>1</search>
		  </positions>
		</editor>
		<!-- database related  -->
		<db>
		  <!-- name of the field in the database -->
		  <name>name</name>
		  <!-- MMBase datatype and demands on it -->
		  <type state="persistent" size="64" notnull="false" key="true">STRING</type>
		</db>
	 </field>

	 <!-- POS 4 : <field> 'type'  -->
	 <field>
		<!-- gui related -->
		<gui>
		  <guiname xml:lang="nl">Type</guiname>
		  <guiname xml:lang="en">Type</guiname>
		  <guiname xml:lang="us">Type</guiname>
		  <guiname xml:lang="eo">Tipo</guiname>
		  <guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
		  <positions>
			 <!-- position in the input area of the editor -->
			 <input>2</input>
			 <!-- position in list area of the editor -->
			 <list>2</list>
			 <!-- position in search area of the editor -->
			 <search>2</search>
		  </positions>
		</editor>
		<!-- database related  -->
		<db>
		  <!-- name of the field in the database -->
		  <name>type</name>
		  <!-- MMBase datatype and demands on it -->
		  <type state="persistent" size="64" notnull="true" key="false">STRING</type>
		</db>
	 </field>

	 <!-- POS 5 : <field> 'version'  -->
	 <field>
		<!-- gui related -->
		<gui>
		  <guiname xml:lang="nl">Versie</guiname>
		  <guiname xml:lang="en">Version</guiname>
		  <guiname xml:lang="us">Version</guiname>
		  <guiname xml:lang="eo">Versio</guiname>
		  <guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
		  <positions>
			 <!-- position in the input area of the editor -->
			 <input>3</input>
			 <!-- position in list area of the editor -->
			 <list>3</list>
			 <!-- position in search area of the editor -->
			 <search>3</search>
		  </positions>
		</editor>
		<!-- database related  -->
		<db>
		  <!-- name of the field in the database -->
		  <name>version</name>
		  <!-- MMBase datatype and demands on it -->
		  <type state="persistent" notnull="true" key="false">INTEGER</type>
		</db>
	 </field>

	 <!-- POS 6 : <field> 'maintainer'  -->
	 <field>
		<!-- gui related -->
		<gui>
		  <guiname xml:lang="nl">Beheerder</guiname>
		  <guiname xml:lang="en">Maintainer</guiname>
