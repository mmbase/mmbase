<?xml version="1.0" encoding="UTF-8" ?>
<!-- DOCTYPE mmbase SYSTEM "authentication.dtd" -->
<authentication>

        <loginmodule    name="anonymous"
                        class="org.mmbase.security.implementation.AnonymousLoginModule"
                        rank="anonymous"/>

	<loginmodule 	name="name/password" 
			class="org.mmbase.security.implementation.FileLoginModule" 
			rank="basic user">
		<property 
		    	name="file">../accounts.properties</property>
	</loginmodule>

        <loginmodule    name="admin"
                        class="org.mmbase.security.implementation.AdminLoginModule"
                        rank="administrator">
                <property 
		    	name="key">admin2k</property>
        </loginmodule>

</authentication>
