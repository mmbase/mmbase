<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//MMBase/DTD application config 1.0//EN" "http://www.mmbase.org/dtd/application_1_0.dtd">
<application name="PageCache" maintainer="mmbase.org" version="1" auto-deploy="false">
  
  <neededbuilderlist>
    <builder maintainer="mmbase.org" version="0">vwms</builder>
    <builder maintainer="mmbase.org" version="0">mmservers</builder>
    <builder maintainer="mmbase.org" version="0">netfilesrv</builder>
    <builder maintainer="mmbase.org" version="0">netfiles</builder>
  </neededbuilderlist>

  <neededreldeflist>
    <reldef source="related" target="related" direction="bidirectional" builder="insrel" guisourcename="Related" guitargetname="Related" />
  </neededreldeflist>

  <allowedrelationlist>
    <relation from="mmservers" to="vwms" type="related" />
    <relation from="mmservers" to="netfilesrv" type="related" />
    <relation from="vwms" to="netfilesrv" type="related" />
  </allowedrelationlist>

  <datasourcelist />

  <relationsourcelist />

  <contextsourcelist/>

  <description>Installs builders and relations needed for using
  PageCache. PageCaching allows pages to be cached on frontend
  proxies. A little documentation about PageCache is provided on the
  MMBase-website, this will be expanded in the future. This
  application depends on the Vwms-application, please install that one
  first.
  </description>

  <install-notice>
    PageCache builders and relations installed
  </install-notice>
</application>
