<?xml version="1.0" ?>
<!DOCTYPE fieldtypedefinitions PUBLIC "-//MMBase//DTD fieldtypedefinitions 0.1//EN" "http://www.mmbase.org/dtd/fieldtypedefinitions_0_1.dtd">
<fieldtypedefinitions>
  
<!-- 
  version 0.1 (appearing in 1.7.0) of this file only adds the possibility of set- and get-processor. 
  Later version will define more, like a defining class for every field type itself.

  It could define default values, possible values, default sort orders etc etc.

  @author Michiel Meeuwissen
  @version $Id: fieldtypedefinitions.xml,v 1.6 2005-06-28 12:34:44 michiel Exp $
-->


  <fieldtype id="xml">
    <specialization id="mmxf">
      <setprocessor type="string">
        <class>org.mmbase.bridge.util.fields.xml.MmxfSetString</class>
      </setprocessor>
      <getprocessor type="string">
        <class>org.mmbase.bridge.util.fields.xml.MmxfGetString</class>
      </getprocessor>
    </specialization>

    <specialization id="html">
      <setprocessor type="string">
        <class>org.mmbase.bridge.util.fields.xml.HtmlSetString</class>
      </setprocessor>
      <getprocessor type="string">
        <class>org.mmbase.bridge.util.fields.xml.HtmlGetString</class>
      </getprocessor>
    </specialization>

    <specialization id="field">
      <setprocessor type="string">
        <class>org.mmbase.bridge.util.fields.xml.FieldSetString</class>
      </setprocessor>
      <getprocessor>
        <class>org.mmbase.bridge.util.fields.xml.FieldGetString</class>
      </getprocessor>
    </specialization>
  </fieldtype>

  
  <fieldtype id="string">
    <specialization id="lastmodifier">
      <commitprocessor>
        <class>org.mmbase.bridge.util.fields.LastModifier</class>
      </commitprocessor>
      <setprocessor>
        <!-- only makes it unmodifiable -->
        <class>org.mmbase.bridge.util.fields.LastModifier</class>
      </setprocessor>
    </specialization>
    <specialization id="md5password">
      <setprocessor>
        <class>org.mmbase.util.transformers.MD5</class>
      </setprocessor>
    </specialization>
    <specialization id="lowercaseuppercase">
      <!-- silly example to test 
	   Strings are stored all lowercase, but showed all uppercase
	-->
      <setprocessor>
        <class>org.mmbase.util.transformers.LowerCaser</class>
      </setprocessor>
      <getprocessor>
        <class>org.mmbase.util.transformers.UpperCaser</class>
      </getprocessor>
    </specialization>
    <specialization id="index">
      <getprocessor>
        <class>org.mmbase.bridge.util.fields.GetIndex</class>
      </getprocessor>
    </specialization>
  </fieldtype>

  <fieldtype id="datetime">
    <specialization id="lastmodified">
      <commitprocessor>
        <class>org.mmbase.bridge.util.fields.LastModified</class>
      </commitprocessor>
      <setprocessor>
        <class>org.mmbase.bridge.util.fields.LastModified</class>
      </setprocessor>
    </specialization>
  </fieldtype>

  <fieldtype id="byte">
    <specialization id="checksum">
      <commitprocessor>
        <class>org.mmbase.util.transformers.ChecksumFactory</class>
      </commitprocessor>
    </specialization>
  </fieldtype>

  
</fieldtypedefinitions>
