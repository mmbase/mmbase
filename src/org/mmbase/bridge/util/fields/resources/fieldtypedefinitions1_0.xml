<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE fieldtypes PUBLIC "-//MMBase//DTD fieldtypes 1.0//EN" "http://www.mmbase.org/dtd/fieldtypes_1_0.dtd">
<fieldtypes>

<!-- version 1 of fieldtypes xml will become something like this 
    besides set- and get-processors it must also be possible to define complete new types and specializations
    and to explicitely define the already existing ones.
    Some interfaces need to be defined for that to work first.

    This will be work for release > 1.7 of MMBase.

-->

  <field type="xml">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>

    <setprocessor>
      <class>org.mmbase.core.processors.MMXFValidate</class>
    </setprocessor>

    <specialization id="mmxf">
      <class>some.FieldSpecialization</class>
      <setprocessor>
        <class>org.mmbase.core.processors.MMXFValidate</class>
      </setprocessor>
      <getprocessor type="string">
        <class>org.mmbase.core.processors.UnXML</class>
      </getprocessor>
      <getprocessor type="xml">
        <class>org.mmbase.core.processors.MMXFGetter</class>
      </getprocessor>
    </specialization>
    <specialization id="builder.dtd">
      <class>?</class>
      <setprocessor>
        <class config="builder_1_1.dtd">org.mmbase.core.processors.XMLValidate</class>        
      </setprocessor>
    </specialization>
  </field>

  
  <fieldtype id="string">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
    <specialization id="field">
      <legacy />
    </specialization>
    <specialization id="string">
      <legacy />
    </specialization>
  </fieldtype>

  
  <fieldtype id="integer">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
    <specialization id="eventtime">
      <legacy />
    </specialization>
    <specialization id="myenum">
      <class config="org.mmbase.util.resources.myenum">org.mmbase.core.fieldspecialiatons.ResourceBundleEnumeration</class>        
    </specialization>
  </fieldtype>

  <field type="long">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
    <specialization id="eventtime">
      <legacy />
    </specialization>
  </field>


  <fieldtype id="float">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
  </fieldtype>

  <fieldtype id="double">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
  </fieldtype>

  <fieldtype id="node">
    <class>org.mmbase.module.corebuilders.FieldDefs</class>
    <specialization id="eventtime">
      <legacy />
    </specialization>
    <specialization id="nodetype">
      <class configsource="FIELD">org.mmbase.core.fieldspecialization.NodeTypeSpecialization</class>        
    </specialization>
  </fieldtype>
</fieldtypes>
