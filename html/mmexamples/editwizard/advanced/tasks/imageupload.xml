<?xml version="1.0"?>
<wizard-schema>
  <title>Image Upload</title>

  <action type="create">
    <object type="images" />
  </action>
  
  <action type="load">
    <field name="title" />
    <field name="description" />
    <field name="handle" />
  </action>

  <action type="delete">
    <prompt>Are you really, really, realy sure that you want to remove this image?</prompt>
 		<description>Delete image</description>
  </action>

  <steps>
    <step form-schema="step1" />
  </steps>

  <form-schema id="step1">
    <title>Image upload</title>
    <field fdatapath="field[@name='title']" ftype="line" dttype="string" dtminlength="1" dtmaxlength="255">
      <prompt>Title</prompt>
    </field>
    <field fdatapath="field[@name='description']" ftype="text" rows="8">
      <prompt>Description</prompt>
    </field>    
    <field fdatapath="field[@name='handle']" ftype="upload" dttype="image">
      <prompt>upload</prompt>
    </field>
  </form-schema>  
</wizard-schema>
