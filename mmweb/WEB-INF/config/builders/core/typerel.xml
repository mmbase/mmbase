<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="typerel" maintainer="mmbase.org" version="0" extends="object">
  <classfile>org.mmbase.module.corebuilders.TypeRel</classfile>

  <searchage>14</searchage>

  <!-- <names>
  names defines the different names used in user visible parts, singular for
  for talking about 1 object (Url,Person) and plurar for talking about multiple
  <Urls, people).
  >-->
  <names>
     <!-- singles per language as defined by ISO 639 -->
     <singular xml:lang="en">Type Relation</singular>
     <singular xml:lang="nl">Type Relatie</singular>
     <singular xml:lang="eo">Rilatotipo</singular>
     <singular xml:lang="it">Tipo Rilazione</singular>
     <!-- multiple per language as defined by ISO 639 -->
     <plural xml:lang="en">Type Relations</plural>
     <plural xml:lang="nl">Type Relaties</plural>
     <plural xml:lang="eo">Rilatotipoj</plural>
     <plural xml:lang="it">Tipo relazioni</plural>
  </names>

  <!-- <descriptions>
  small description of the builder for human reading
  -->
  <descriptions>
     <!-- descriptions per language as defined by ISO 639  -->
     <description xml:lang="en">Defines the allowed relations between object types</description>
     <description xml:lang="nl">Defineert de mogelijke relaties tussen objekt typen</description>
     <description xml:lang="eo">Difinas la permesitajn rilatojn inter objekttipoj</description>
     <description xml:lang="it">Definisce le possibili relazioni tra tipi di oggetti</description>
  </descriptions>

  <!-- <properties>
  you can define properties to be used by the classfile (if used) it uses
  a key/value system. Its a optional tag.
  -->
  <properties>
     <!-- These  properties influence cache size inside typerel -->
     <property name="art_cache_size">128</property>
     <property name="reldef_cache_size">128</property>
     <property name="reltype_cache_size">512</property>
     <!-- This switches relation type caching on or off -->
    <property name="reltype_cache_active">true</property>
  </properties>

  <!-- <fieldlist>
  defines the different fields in this object, be carefull the order is important
  once defined keep them in the same order.
  If you use number and owner (the 2 default fields, please check the docs for this)
  -->
  <fieldlist>
     <!-- POS 3 : <field> 'snumber'  -->
     <field>
        <descriptions>
          <!-- descriptions per language as defined by ISO 639  -->
          <description xml:lang="en">Number of the source builder of
          this relationtype</description>
          <description xml:lang="nl">Nummer van de bronbuilder van dit
          relatietype</description>
        </descriptions>
        <!-- gui related -->
        <gui>
          <guiname xml:lang="en">Source</guiname>
          <guiname xml:lang="nl">Bron</guiname>
          <guiname xml:lang="eo">Fonto</guiname>
          <guiname xml:lang="it">Fonte</guiname>
          <guitype>typedef</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
          <positions>
             <!-- position in the input area of the editor -->
             <input>1</input>
             <!-- position in list area of the editor -->
             <list>1</list>
             <!-- position in search area of the editor -->
             <search>1</search>
          </positions>
        </editor>
        <!-- database related  -->
        <db>
          <!-- name of the field in the database -->
          <name>snumber</name>
          <!-- MMBase datatype and demands on it -->
          <type state="persistent" notnull="false" key="false">NODE</type>
        </db>
     </field>

     <!-- POS 4 : <field> 'dnumber'  -->
     <field>
        <descriptions>
          <!-- descriptions per language as defined by ISO 639  -->
          <description xml:lang="en">Number of the destination builder of
          this relationtype</description>
          <description xml:lang="nl">Nummer van de doelbuilder van dit
          relatietype</description>
        </descriptions>
        <!-- gui related -->
        <gui>
          <guiname xml:lang="en">Destination</guiname>
          <guiname xml:lang="nl">Doel</guiname>
          <guiname xml:lang="eo">Celo</guiname>
          <guiname xml:lang="it">Destinazione</guiname>
          <guitype>typedef</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
          <positions>
             <!-- position in the input area of the editor -->
             <input>2</input>
             <!-- position in list area of the editor -->
             <list>2</list>
             <!-- position in search area of the editor -->
             <search>2</search>
          </positions>
        </editor>
        <!-- database related  -->
        <db>
          <!-- name of the field in the database -->
          <name>dnumber</name>
          <!-- MMBase datatype and demands on it -->
          <type state="persistent" notnull="false" key="false">NODE</type>
        </db>
     </field>

     <!-- POS 5 : <field> 'rnumber'  -->
     <field>
        <descriptions>
          <!-- descriptions per language as defined by ISO 639  -->
          <description xml:lang="en">Number of the reldef node used
          for this relation type</description>
          <description xml:lang="nl">Nummer van de reldef node die
          gebruikt wordt voor deze relatie type</description>
        </descriptions>
        <!-- gui related -->
        <gui>
          <guiname xml:lang="en">Relation</guiname>
          <guiname xml:lang="nl">Relatie</guiname>
          <guiname xml:lang="eo">Rilato</guiname>
          <guiname xml:lang="it">Relazione</guiname>
          <guitype>reldef</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
          <positions>
             <!-- position in the input area of the editor -->
             <input>3</input>
             <!-- position in list area of the editor -->
             <list>3</list>
             <!-- position in search area of the editor -->
             <search>3</search>
          </positions>
        </editor>
        <!-- database related  -->
        <db>
          <!-- name of the field in the database -->
          <name>rnumber</name>
          <!-- MMBase datatype and demands on it -->
          <type state="persistent" notnull="false" key="false">NODE</type>
        </db>
     </field>

     <!-- POS 6 : <field> 'max'  -->
     <field>
        <descriptions>
          <!-- descriptions per language as defined by ISO 639  -->
          <description xml:lang="en">Maximum number of relations of
          this type</description>
          <description xml:lang="nl">Maximaal aantal relaties van dit type</description>
        </descriptions>
        <!-- gui related -->
        <gui>
          <guiname xml:lang="en">Maximum Relations</guiname>
          <guiname xml:lang="nl">Max Relaties</guiname>
          <guiname xml:lang="eo">Plejnombro</guiname>
          <guiname xml:lang="it">Massimo di Relazioni</guiname>
          <guitype>integer</guitype>
        </gui>
        <!-- editor related  -->
        <editor>
          <positions>
             <!-- position in the input area of the editor -->
             <input>4</input>
             <!-- position in list area of the editor -->
             <list>4</list>
             <!-- position in search area of the editor -->
             <search>4</search>
          </positions>
        </editor>
        <!-- database related  -->
        <db>
          <!-- name of the field in the database -->
          <name>max</name>
          <!-- MMBase datatype and demands on it -->
          <type state="persistent" notnull="false" key="false">INTEGER</type>
        </db>
     </field>

  </fieldlist>

</builder>
