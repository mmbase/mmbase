<?xml version="1.0"?>
<project name="MMBase database largeobjects" default="jar" basedir=".">

  <property name="project.name"      value="largeobjects"/>
  <property name="project.package"   value="org/mmbase" />
  <property name="project.comment"   value="MMBase database largeobjects implementation" />

  <property name="project.jars.dir"        value="build" />
  <property name="project.jars.includes"   value="postgresql-8.2-506.jdbc3.jar" />
  <property name="java.source.version" value="1.5" />

  <import file="../buildbase-include.xml" />

  <property file="build.properties.default" />

  <target name="jar" description="Create mmbase-largeobjects.jar" depends="postgresql.jar,buildbase.jar" />

  <target name="postgresql.jar" description="Get postgresql jar">
    <antcall target="download">
      <param name="sourcefile" value="${postgresql.loc}"/>
      <param name="destfile" value="${postgresql.dest}"/>
    </antcall>

    <echo message="${project.jars.dir}${project.jars.includes}" />
    <copy file="${postgresql.dest}" todir="${project.jar.dir}" preservelastmodified="true" />
  </target>


</project>
