<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 2.0//EN" "http://www.mmbase.org/dtd/builder_2_0.dtd">
<builder extends="content" maintainer="mmbase.org" name="segments" version="0">
  <status>active</status>
  <searchage>31</searchage>
  <names>
    <singular xml:lang="nl">Hoofdstuk</singular>
    <singular xml:lang="en">Chapter</singular>
    <plural xml:lang="nl">Hoofdstukken</plural>
    <plural xml:lang="en">Chapters</plural>
  </names>
  <descriptions>
    <description xml:lang="nl">Segmenten (hoofdstukken, subhoofdstukken, secties) van een boek.</description>
    <description xml:lang="en">Segments  (chapters, subchapers, sections, subsection) of a book.</description>
  </descriptions>
  <properties/>
  <fieldlist>
    <field>
      <gui>
        <guiname xml:lang="nl">Tekst</guiname>
        <guiname xml:lang="en">Text</guiname>
        <guitype>mmxf</guitype>
      </gui>
      <editor>
        <positions>
          <input>4</input>
          <list>-1</list>
          <search>4</search>
        </positions>
      </editor>
      <db>
        <name>body</name>
      </db>
    </field>
    <!-- forward compatible 'version' field -->
    <field>
      <gui>
        <guiname xml:lang="nl">Versie</guiname>
        <guiname xml:lang="en">Version</guiname>
        <guitype>string</guitype>
      </gui>
      <db>
        <name>version</name>
        <type key="false" notnull="false" state="persistent">INTEGER</type>
      </db>
    </field>
  </fieldlist>
  <functionlist>
    <function name="index">
      <class>org.mmbase.util.functions.IndexFunction</class>
    </function>
    <function name="url" key="{REQUEST.getContextPath}/{INITPARAM.pol.home}?segment={NODE.number}&amp;template=segment.div.jspx">
      <class>org.mmbase.util.functions.PatternNodeFunctionProvider</class>
    </function>
  </functionlist>
</builder>
