<mm:content 
xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    type="text/css" >
  <jsp:directive.page session="false" />
  <jsp:output omit-xml-declaration="true" />
@import url(<mm:url page="/mmbase/style/css/mmbase.css" />);
@import url(<mm:url page="/mmbase/style/css/mmxf.css" />);

<mm:import id="A">#4cb</mm:import>
<mm:import id="B">#046</mm:import>

img {
  border: none;
}
#menu {
  position: relative;
  height: 18px;
  margin: 0px 0px 0px 0px;
  padding: 0px 0px 0px 22px;
  background-color: ${A};
  color: ${B};
  font-weight: bold;
}

#menu a {
  padding-left: 1ex;
  padding-right: 1ex;  
  margin-bottom: 10px;
  color: ${B};
}
#menu div {
  background-color: ${A};
}
#menu a:hover, #menu a.selected {
  background-color: white;
}

#menu div a { 
  display: block;
  margin-right: 0ex;
  padding-right: 1ex;
}

#menu a:hover { 
  text-decoration : none;  
}


a, a:visited, a:link {
  color: ${A};
}
a:hover {
  color: ${B};
}

#end-of-page {
 float: left;
 height: 1px; 
 width: 100%;
}

</mm:content>
