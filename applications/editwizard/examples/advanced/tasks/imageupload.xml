<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<!-- this example is similar to the library wizard lib/createimage-->
<wizard-schema id="imageupload">
  <title>Customized Image upload editwizard</title>

  <action type="create">
    <object type="images" />
  </action>

  <action type="delete">
    <prompt>Are you really, really, realy sure that you want to remove this image?</prompt>
 		<description>Delete image</description>
  </action>

  <form-schema id="step1">
    <title>Image upload</title>
    <field name="title"  dtminlength="1" />
    <field name="description" rows="8" />
    <field name="handle" />
  </form-schema>
</wizard-schema>
