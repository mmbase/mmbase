<list fdatapath="relation[object/@type='urls']" minoccurs="0" maxoccurs="*">
		<title>Related urls</title>
		<description>These are the related urls</description>

		<command name="search" nodepath="urls" fields="url,description">
			<prompt>Search for urls</prompt>
            <search-filter>
                <name>Url contains</name>
                <search-fields>url</search-fields>
            </search-filter>
			<search-filter>
                <name>Description contains</name>
                <search-fields>description</search-fields>
            </search-filter>

		</command>

		<item displaymode="summarize">
			<title>A view to an image</title>
			<description></description>
			<field name="name" fdatapath="object/field[@name='url']" ftype="data" >
				<prompt>Url</prompt>
			</field>
		</item>
		<item displaymode="add">
			<action type="create">
				<relation role="related" destinationtype="urls" >
				</relation>
			</action>
		</item>
	</list>

