<?xml version="1.0"?>
<wizard-schema id="empty">
	<title>Enter Wizard Title Here</title>

	<action type="create">
		<object type="news">
			<field name="title">defaultvalue for this field</field>
		</object>
	</action>
	
	<action type="delete" />
	
	<action type="load">
		<relation destination="people" />
		<relation destination="images" role="related" />
	</action>
	
	<steps>
		<step form-schema="step1" />
	</steps>

	<form-schema id="step1">
		<title>Enter form title here</title>
		<field name="title" >
			<prompt>Title</prompt>
		</field>

		<field name="subtitle" >
			<prompt>Subtitle</prompt>
		</field>

		<field name="intro" ftype="text" rows="4" >
			<prompt>Intro</prompt>
		</field>
		
		<field name="body" ftype="text" rows="8" >
			<prompt>Body</prompt>
		</field>

		<list destination="people" minoccurs="0" maxoccurs="*">
			<command name="search" nodepath="people" fields="firstname,lastname" orderby="lastname" age="-1">
				<prompt>#Search command prompt</prompt>
				<search-filter>
					<name>firstname contains</name>
					<search-fields>firstname</search-fields>
				</search-filter>
				<search-filter>
					<name>lastname contains</name>
					<search-fields>lastname</search-fields>
				</search-filter>
			</command>

			<item>
				<field name="firstname" >
					<prompt>Field prompt</prompt>
					<description>Field Description</description>
				</field>
			</item>
			
			<action type="create">
				<relation destinationtype="people" role="related">
				</relation>
			</action>
		</list>
		<list role="related" destination="images">
			<command name="search" nodepath="images" fields="title" age="-1">
			</command>
			<item>
				<field name="title" ftype="image" />
			</item>
			<action type="create">
				<relation destinationtype="images">
					
				</relation>
			</action>

		</list>
	</form-schema>
</wizard-schema>
