<?xml version="1.0"?>
<!DOCTYPE util PUBLIC "-//MMBase//DTD util config 1.0//EN" "http://www.mmbase.org/dtd/util_1_0.dtd">
<util>
  <properties>
    <!--
      Property wizardStyleSheet: relative link to the default xsl to use when rendering wizard pages.
      The normal default is xsl/wizard.xsl.
      To turn on the tinymce html editor, use:

      <property name="wizardStyleSheet">xsl/wizard_tinymce.xsl</property>
    -->
    <!--
      Property listStyleSheet: relative link to the default xsl to use when rendering wizard list pages.
      The normal default is xsl/list.xsl.

      <property name="listStyleSheet">xsl/list.xsl</property>
    -->
    <!--
      Property searchlistStyleSheet: relative link to the default xsl to use when rendering wizard searchlist pages.
      The normal default is xsl/searchlist.xsl.

      <property name="listStyleSheet">xsl/searchlist.xsl</property>
    -->
    <!--
      Property extraDataDir: link to an extra editwizard data directory.
      Default there is no extra data dir.

      <property name="extraDataDir">/mmbase/edit/wizard/data/</property>
    -->
    <!--
      Property maxUploadSize: the default maximum size (in bytes) for files uploaded through the editwizards.
      The normal default is 4194304 (4 MB).

      <property name="maxUploadSize">4194304</property>
    -->
  </properties>
</util>

