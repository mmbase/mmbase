<!-- ===========================================================================

Applications build file

================= -->
<project name="MMBase" default="all" basedir=".">

  <!-- =================================================================== -->
  <!-- Init                                                                -->
  <!-- =================================================================== -->
  <!-- Read customized values if available -->
  <property file="build.properties"/>
  <!-- Default values for properties that can be customized -->

  <property name="source.dir"   location=".." />
  <property name="share.dir"    location="./share" />

  <property file="${source.dir}/build.properties" />

  <property name="build.dir"    value="${source.dir}/build" />
  <property name="download.dir" value="${build.dir}/download" />
  <property name="expand.dir"   value="${download.dir}/expanded" />
  <property name="download.zip" value="mmbase-downloads.zip"  />
  <property name="mmbase.jar"    value="${build.dir}/mmbase/mmbase-webapp/WEB-INF/lib/mmbase.jar"/>

  <property name="applications.dir"       location="." />
  <property name="applications.build.dir" value="${applications.dir}/build" />

  <!-- override projects jar dir -->
  <property name="project.zip.dir"        value="${applications.build.dir}" />

  <target name="init">
    <mkdir dir="${applications.build.dir}" />
  </target>

  <target name="all16" depends="init,media,bugtracker,email" />

  <!-- target name="all" depends="init,all16,cloudcontext,editwizard,community,rmmci" /-->
  <target name="all" depends="init,all16,cloudcontext,editwizard,dove,xmlimporter,community,rmmci" />


  <target name="jars" depends="all">
    <copy todir="${applications.build.dir}/jars" flatten="true">
      <fileset dir=".">
        <include name="**/*.jar" />
      </fileset>
    </copy>
    <copy todir="${applications.build.dir}/jars" file="${mmbase.jar}" />
  </target>

  <target name="mmbase">
    <ant dir="${source.dir}" target="jar" />
    <ant dir="${source.dir}" target="expand.hsqldb" />
  </target>

  <target name="media" depends="mmbase,editwizard">
     <ant dir="media"      target="package" />
  </target>

  <target name="aselect" depends="mmbase">
     <ant dir="aselect"      target="package" />
  </target>


  <target name="bugtracker">
     <ant dir="bugtracker"      target="package" />
  </target>

  <target name="email">
     <ant dir="email"      target="package" />
  </target>

  <target name="rmmci" depends="mmbase">
     <ant dir="rmmci" target="package"  />
  </target>

  <target name="editwizard" depends="dove,mmbase">
     <ant dir="editwizard" target="dependent.package" />
  </target>


  <target name="dove" depends="mmbase">
     <ant dir="dove" target="package" />
  </target>

  <target name="cloudcontext" depends="mmbase">
     <ant dir="cloudcontext"  target="package" />
  </target>

  <target name="community" depends="mmbase">
     <ant dir="community"  target="dependent.package" />
  </target>

  <target name="xmlimporter" depends="mmbase">
     <ant dir="xmlimporter"  target="package" />
  </target>

  <target name="install">
    <ant dir="editwizard"    target="dependent.install" />
    <ant dir="email"         target="install" />
    <ant dir="community"     target="install" />
    <ant dir="dove"          target="install" />
    <ant dir="xmlimporter"   target="install" />
    <ant dir="cloudcontext"  target="install" />
    <!-- ant dir="rmmci"         target="install" /--><!-- does not work yet -->
  </target>

  <target name="clean">
     <ant dir="media"      target="clean" />
     <ant dir="editwizard" target="clean" />
     <ant dir="dove"      target="clean" />
     <ant dir="rmmci"      target="clean" />
     <ant dir="cloudcontext"    target="clean" />
     <ant dir="bugtracker"      target="clean" />
     <ant dir="community"      target="clean" />
     <ant dir="email"      target="clean" />
     <ant dir="xmlimporter"   target="clean" />
     <!-- <ant dir="aselect"      target="clean" /> -->
    <delete dir="${applications.build.dir}" />
  </target>


  <target name="test">
     <ant dir="cloudcontext"  target="test" />
  </target>

</project>
