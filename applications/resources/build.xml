<?xml version="1.0"?>
<project name="MMBase Resources" default="package" basedir=".">
  <property name="project.name"     value="resources" />
  <property name="project.target.templates.dir"   value="../mmexamples" />

  <property name="jai.jars.dir"        location="build" />
  <property name="project.jars.includes"   value="resources/build/jai_codec.jar,resources/build/jai_core.jar,jumpers/build/mmbase-jumpers.jar" />

  <property name="java.source.version"     value="1.5" />
  <import file="../buildbase-include.xml" />

  <property file="build.properties.default" />
  
  <target name="jar" description="Create mmbase-resources.jar" depends="jumpers,jai.jar,buildbase.jar" />

  <target name="jumpers">
    <echo message="${project.jars.dir}${project.jars.includes}" />
    <echo message="${applications.dir}/jumpers" />
    <ant dir="${applications.dir}/jumpers" inheritAll="false" />
  </target>
  <target name="jai.jar" description="Get JAI jar">
    
    <echo message="jai" />

    <echo message="jai" />
    <antcall target="downloadbz2">
      <param name="sourcefile" value="${jai.loc}"/>
      <param name="destfile" value="${jai.dest}"/>
      <param name="destdir" value="${jai.dir}"/>
      <param name="expandedfile" value="${jai_core.jar}"/>
    </antcall>
	
    <echo message="${project.jars.dir}${project.jars.includes}" />

    <copy file="${jai_codec.jar}" todir="${jai.jar.dir}" preservelastmodified="true" />
    <copy file="${jai_core.jar}"  todir="${jai.jar.dir}" preservelastmodified="true" />
  </target>

</project>




