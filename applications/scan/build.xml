<?xml version="1.0"?>
<project name="MMBase SCAN legacy stuff" default="package" basedir=".">
  <property name="project.name"   value="scan" />
  <property name="project.package"   value="org/mmbase/applications/scan" />
  <property name="project.target.templates.dir" value="../" /><!-- scan stuff _must_ be in root -->
  <property name="project.templates.dir" value="${project.source.dir}" />
  <property name="project.templates.include" value="mmeditors/**/*" />
  <property name="project.jars.includes" value="vwms/build/mmbase-vwms.jar,resources/build/mmbase-resources.jar,email/build/mmbase-email.jar,email/build/mail.jar,jumpers/build/mmbase-jumpers.jar" />

  <import file="../buildbase-include.xml" />

  <target name="deps">
    <echo message="${applications.dir}/vwms" />
    <ant dir="${applications.dir}/vwms" inheritAll="false" />
    <ant dir="${applications.dir}/resources" inheritAll="false" />
    <ant dir="${applications.dir}/jumpers" inheritAll="false" />
  </target>

  <target name="jar" depends="deps,buildbase.jar" />

</project>
