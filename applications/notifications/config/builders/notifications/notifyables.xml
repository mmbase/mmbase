<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="notifyables" maintainer="mmbase.org" version="1" extends="object">

  <fieldlist>

    <field name="title">
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="message">
      <datatype base="string" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="64000" />
      </datatype>
    </field>

    <field name="offset">
      <datatype base="long" xmlns="http://www.mmbase.org/xmlns/datatypes" />
     </field>

    <field name="lastcheck">
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <default value="today" />
      </datatype>
     </field>


  </fieldlist>

</builder>
