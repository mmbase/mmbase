<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="mmbasecontexts" maintainer="mmbase.org" version="0" extends="object">
  <classfile>org.mmbase.security.implementation.cloudcontext.builders.Contexts</classfile>
  <names>
    <singular xml:lang="en">MMBase Context</singular>
    <singular xml:lang="nl">MMBase Context</singular>
    <plural xml:lang="en">MMBase Contexts</plural>
    <plural xml:lang="nl">MMBase Contexten</plural>
  </names>
  <descriptions>
    <description xml:lang="en">MMBase security contexts</description>
    <description xml:lang="nl">MMBase contexten voor security</description>
  </descriptions>
  <properties>
    <property name="readall">false</property><!-- if true, read rights never need a check -->
  </properties>
  <fieldlist>
    <field>
      <gui>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="nl">Naam</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <db>
        <name>name</name>
        <type state="persistent" size="32" notnull="true" key="true">STRING</type>
      </db>
    </field>
    <field>
      <gui>
        <guiname xml:lang="en">Description</guiname>
        <guiname xml:lang="nl">Omschrijving</guiname>
        <guitype>field</guitype>
      </gui>
      <db>
        <name>description</name>
        <type state="persistent" size="1024" notnull="false">STRING</type>
      </db>
    </field>
  </fieldlist>
</builder>
