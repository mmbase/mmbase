<!-- 
    Itemize part 
     Base for audio and video itemizition
-->

  <action type="delete" />

  <action type="create">
    <object type="&fragments;" />
  </action>

	<action type="load">
		<relation destination="&fragments;"    role="parent" />
		<relation destination="&fragments;"    role="posrel"  />
		<relation destination="publishtimes"   role="related">
       <object type="publishtimes"/>
    </relation>
	</action>

  <form-schema id="publish">
    <title xml:lang="en">Meta info + Valid time</title>
    <title xml:lang="nl">Meta info + Geldigheid</title>

    <list role="parent" destination="&fragments;" minoccurs="1" maxoccurs="1" >
      <title xml:lang="en">Base stream</title>
      <title xml:lang="nl">Basis stream</title>
      <item>
        <field ftype="data" name="title" />
      </item>
      <command name="search" nodepath="pools,&fragments;" fields="pools.name,&fragments;.title" orderby="&fragments;.title" age="-1" >
        <search-filter>
          <name>Title</name>
          <search-fields>&fragments;.title</search-fields>
        </search-filter>
      </command>

      <command name="startwizard" inline="true" wizardname="tasks/&fragments;" objectnumber="new" origin="{$origin}">
      </command>

      <action type="create">
        <relation destinationtype="&fragments;" role="parent" />
      </action>
    </list>

    <field name="title" />
    <field name="subtitle" />
    <field name="intro" />
    <field name="body" />

    &publishtimes;

  </form-schema>

  <form-schema id="itemize">  
    <field ftype="data" name="title" />
    <title xml:lang="en">Itemization</title>
    <title xml:lang="nl">Opknippen</title>
    &itemizelist;
  </form-schema>
