
<list role="related" destination="mediasources" minoccurs="1" >
  <title>Sources</title>       
  <title xml:lang="nl">Bronnen</title>       
  <item>
    <field name="url">
      <prompt>Url (relative)</prompt>
      <prompt xml:lang="nl">Url (relatief)</prompt>
    </field>
    <!-- format should be autodetected -->
    <field ftype="enum" name="format">
      <optionlist select="formats" />
    </field>
   
    <list role="related" destination="mediaproviders" minoccurs="1">
      <title>Media provider</title>
      <title xml:lang="en">Stream server</title>
      <title xml:lang="nl">Stream server</title>
      <item>
        <field name="name" ftype="data" />
      </item>
      <command name="search" nodepath="mediaproviders" fields="name,rooturl,rootpath" orderby="name" age="-1" >
        <search-filter>
          <name>Name</name>
          <search-fields>name</search-fields>
        </search-filter>
        <search-filter>
          <name>Server</name>
          <search-fields>rooturl</search-fields>
        </search-filter>
      </command>
      <action type="create">
        <relation destinationtype="mediaproviders" role="related" />
      </action>
    </list>
  </item>
	<action type="create">
		<relation  role="related">
      <object type="mediasources" />
    </relation>
	</action>
</list>
