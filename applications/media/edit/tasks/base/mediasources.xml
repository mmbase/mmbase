	<form-schema id="basics">
		<title>Source Editor</title>
    <field name="url" />
    <field name="format" ftype="enum">
      <optionlist select="formats" />
    </field>
    <field name="codec" />
    <field name="bitrate" />
    <field name="channels" />
    <field name="state" />
    <field name="filesize" />
    &extrafields;
    <list role="related" destination="mediaproviders" minoccurs="1">
    <title>Media provider</title>
    <title xml:lang="en">Stream server</title>
    <title xml:lang="nl">Stream server</title>
    <item>
      <field name="name" ftype="data" />
    </item>
    <command name="search" nodepath="mediaproviders" fields="host,name,info" orderby="name" age="-1" >
      <search-filter>
        <name>Name</name>
        <search-fields>name</search-fields>
      </search-filter>
      <search-filter>
        <name>Server</name>
        <search-fields>host</search-fields>
      </search-filter>
    </command>
    <action type="create">
      <relation destinationtype="mediaproviders" role="related" />
    </action>
  </list>
