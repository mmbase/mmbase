  <!-- <field> 'state'  -->
    <field>
      <descriptions>
        <description xml:lang="en">
          A source stream can be in several states, indicating e.g. that it is not immediately available.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">State</guiname>
        <guiname xml:lang="nl">Toestand</guiname>
