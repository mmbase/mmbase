      <descriptions>
        <description xml:lang="en">
          I'v not the faintest Idea what this is.
        </description>
        <description xml:lang="nl">
          Geen idee.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Bitrate</guiname>
        <guiname xml:lang="nl">Bitrate</guiname>
        <guitype>integer</guitype>
