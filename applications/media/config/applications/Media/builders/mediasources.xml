<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="mediasources" extends="object">
  <status>active</status>
  
  <classfile>org.mmbase.applications.media.builders.MediaSources</classfile>

  <searchage>14</searchage>
  
  <names>
    <singular xml:lang="en">Media source</singular>
    <singular xml:lang="nl">Mediabron</singular>
    
    <plural xml:lang="en">Media sources</plural>
    <plural xml:lang="nl">Mediabronnen</plural>
  </names>
  
  <descriptions>
    <description xml:lang="en">Descriptions of the physical media file</description>
    <description xml:lang="nl">Beschrijving van het daadwerkelijke media bestand</description>
  </descriptions>
  
  <fieldlist>
    <field>
      <descriptions>
        <description xml:lang="en">
          The format/mimetype of this source.  This is an integer
       	  corresponding to the org.mmbase.applications.media.resources.format
          resource.
        </description>
        <description xml:lang="nl">
          Formaat van deze bron (mime-type).
        </description>
      </descriptions>
      
      <gui>
        <guiname xml:lang="en">Format</guiname>
        <guiname xml:lang="nl">Formaat</guiname>
        <guitype>org.mmbase.applications.media.resources.formats</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input><list>1</list><search>1</search>
        </positions>
      </editor>
      <db>
        <name>format</name>
        <type state="persistent" notnull="false">INTEGER</type>
      </db>
    </field>
    
    <!-- <field> 'codec'  -->
    <field>     
      <descriptions>
