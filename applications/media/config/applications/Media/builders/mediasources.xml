      <descriptions>
        <description xml:lang="en">
          I'v not the faintest Idea what this is.
        </description>
        <description xml:lang="nl">
          Geen idee.
        </description>
      </descriptions>

      <gui>
        <guiname xml:lang="en">Channels</guiname>
        <guiname xml:lang="nl">Kanalen</guiname>
