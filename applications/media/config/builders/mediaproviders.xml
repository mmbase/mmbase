<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.0//EN" "http://www.mmbase.org/dtd/builder_1_0.dtd">
<builder extends="object">
<status>active</status>


<classfile>org.mmbase.module.builders.media.MediaProvider</classfile>

<names>
	<singular xml:lang="en">MediaProvider</singular>
	<singular xml:lang="nl">MediaProvider</singular>
	<plural xml:lang="en">MediaProviders</plural>
	<plural xml:lang="nl">MediaProviders</plural>
</names>

<descriptions>
	<description xml:lang="en">Describes the system that is providing media files.</description>
	<description xml:lang="nl">Beschrijft het systeem dat media bestanden beschikbaar steld.</description>
</descriptions>

<!-- <properties>
  you can define properties to be used by the classfile (if used) it uses
  a key/value system. Its a optional tag.
  -->
  <properties>
    
    <!-- specify which protocols to use for which media formats -->
    <property name="g2/sure">rtsp://</property>
    <property name="ra">pnm://</property>
    <property name="default">http://</property>

    <!-- generic property for all converters -->
    <property name="MaxConcurrentRequests">3</property>
  </properties>

<fieldlist>
	<!-- POS 1 : <field> 'name'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">Name</guiname>
			<guiname xml:lang="nl">Naam</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>1</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>name</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="40" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 2 : <field> 'Rooturl'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">RootUrl</guiname>
