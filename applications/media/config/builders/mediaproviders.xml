	<!-- POS 3 : <field> 'status'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="en">Status</guiname>
			<guiname xml:lang="nl">Status</guiname>
			<guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>3</input>
